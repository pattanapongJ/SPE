<odoo>
    <record id="view_inventory_inter_transfer_type_tree" model="ir.ui.view">
        <field name="name">inventory.inter.transfer.type.tree</field>
        <field name="model">inventory.inter.transfer.type</field>
        <field name="arch" type="xml">
            <tree string="Inventory Inter Transfer Type">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_inventory_inter_transfer_type_form" model="ir.ui.view">
        <field name="name">inventory.inter.transfer.type.form</field>
        <field name="model">inventory.inter.transfer.type</field>
        <field name="arch" type="xml">
            <form string="Inventory Adjustment Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_inventory_inter_transfer_type" model="ir.actions.act_window">
        <field name="name">Inventory Inter Transfer Type</field>
        <field name="res_model">inventory.inter.transfer.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Inventory Inter Transfer Type for use in inventory operations.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_inventory_inter_transfer_type"
        name="Inventory Inter Transfer Type"
        parent="stock.menu_stock_config_settings"
        action="action_inventory_inter_transfer_type"
        sequence="160"/>
</odoo>
