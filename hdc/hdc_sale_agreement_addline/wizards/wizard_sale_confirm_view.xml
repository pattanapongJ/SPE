<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_confirmation_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.confirm.addline.wizard.form</field>
        <field name="model">sale.order.confirm.addline.wizard</field>
        <field name="arch" type="xml">
            <form string="User Error">
                <group>
                    <field name="message" widget="text" nolabel="1"/>
                    <field name="order_id" invisible="1" force_save="1"/>
                </group>
                <footer>
                    <button name="action_confirm_addline" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" type="object" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_order_confirm_addline_wizard" model="ir.actions.act_window">
        <field name="name">Confirm Addline</field>
        <field name="res_model">sale.order.confirm.addline.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    
</odoo>