<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_confirm_delivery_note" model="ir.ui.view">
        <field name="name">Cofirm Delivery Noted</field>
        <field name="model">wizard.confirm.delivery.noted</field>
        <field name="arch" type="xml">
            <form string="Choose your vendor">
                <group>
                    <group>
                        <field name="transport_line_id"/>
                        <field name="delivery_by_id"/>
                        <field name="company_id" options="{'no_create_edit': True,'no_create': True, 'no_open': True}" />
                    </group>
                    <group>
                        <field name="company_round_id"/>
                        <field name="scheduled_date"/>
                    </group>
                </group>
                <footer>
                    <button name="confirm_delivery_action" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
