<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_billing_finance_form" model="ir.ui.view">
        <field name="name">Billing / Finance</field>
        <field name="model">wizard.billing.finance</field>
        <field name="arch" type="xml">
            <form string="Choose your vendor">
                <group>
                    <group>
                        <field name="distribition_id" invisible="1"/>
                        <field name="billing_finance" widget="radio" />
                        <field name="finance_type"
                            attrs="{'invisible': [('billing_finance','!=','to_finance')], 'required': [('billing_finance','=','to_finance')]}"
                            widget="radio" />
                    </group>
                    <group>
                        <field name="issue_date"/>
                    </group>
                </group>
                <notebook>
                    <page string="Invoice Lines" name="invoice_lines">
                        <field name="invoice_line_ids" domain="[('distribition_id', '=', distribition_id), ('delivery_status', '=', 'completed')]">
                            <tree string="Invoice Lines" editable="bottom" create="false" edit="1">
                                <field name="invoice_id" optional="show" readonly="1"/>
                                <field name="partner_id" optional="show" readonly="1"/>
                                <field name="transport_line_id" optional="show" readonly="1"/>
                                <field name="delivery_status" optional="show" readonly="1"/>
                                <field name="billing_status" optional="show" readonly="1"/>
                                <field name="remark" optional="show"/>
                            </tree>
                            <form>
                                <group>
                                    <group>
                                        <field name="invoice_id" readonly="1"/>
                                        <field name="partner_id" readonly="1"/>
                                        <field name="transport_line_id" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="delivery_status" readonly="1"/>
                                        <field name="billing_status" readonly="1"/>
                                        <field name="remark" readonly="1"/>
                                    </group>
                                </group>
                            </form>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="send_action" string="Send" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
