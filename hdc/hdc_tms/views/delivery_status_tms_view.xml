<?xml version="1.0"?>
<odoo>
    <record id="delivery_status_tms_master_view_tree" model="ir.ui.view">
        <field name="name">delivery.status.tms.tree</field>
        <field name="model">delivery.status.tms</field>
        <field name="arch" type="xml">
            <tree string="Delivery Status TMS">
                <field name="name"/>                
            </tree>
        </field>
    </record>
    
    <record id="delivery_status_tms_master_view_form" model="ir.ui.view">
        <field name="name">delivery.status.tms.view.form</field>
        <field name="model">delivery.status.tms</field>
        <field name="arch" type="xml">
            <form string="Delivery Status TMS">
                <sheet>
                  <group>
                    <field name="name"/>
                    <field name="code"/>
                  </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="delivery_status_tms_master_view_action" model="ir.actions.act_window">
        <field name="name">Delivery Status TMS</field>
        <field name="res_model">delivery.status.tms</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Define a new Delivery Status TMS
          </p>
        </field>
    </record>  

    <menuitem id="menu_delivery_status_tms_round" name="Delivery Status TMS"
    parent="hdc_tms.menu_resupply_delivery_round_main"
    action="delivery_status_tms_master_view_action" sequence="6" groups="base.group_no_one" />
    
</odoo>
