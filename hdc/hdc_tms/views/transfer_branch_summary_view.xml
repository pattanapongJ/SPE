<?xml version="1.0"?>
<odoo>
    <record id="transfer_branch_summary_view_tree" model="ir.ui.view">
        <field name="name">Transfer Branch Summary tree</field>
        <field name="model">resupply.transfer.branch.summary</field>
        <field name="arch" type="xml">
            <form string="Search">
                <header>
                    <button string="Search" name="search_action" type="object" class="oe_highlight"/>
                    <button string="Create Delivery Noted" 
                        attrs="{'invisible':[('is_create','=',False)]}"
                        name="create_delivery_noted_action" 
                        type="object" class="oe_highlight"/>
                    <button string="Clear All" name="clear_all_action" type="object" class="oe_highlight"/>
                </header>
				<group>
					<group>
                        <label for="scheduled_date_start"/>
                        <div class="o_row">
                            <field name="scheduled_date_start"/> to
                            <field name="scheduled_date_end" />
                        </div>
                        <field name="available_invoice_ids" invisible="1"/>
                        <field name="spe_invoice_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                        <field name="invoice_ids" widget="many2many_tags"  options="{'no_create_edit': True}"/>
                        <field name="sale_order_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                        <field name="company_id" options="{'no_create_edit': True}"/>
                        <field name="delivery_order_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
					</group>
					<group>
                        <field name="transport_line_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                        <field name="company_round_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                        <field name="partner_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                        <field name="is_create" invisible="0"/>
					</group>
				</group>
                <notebook>
                    <page string="Invoices" name="invoices">
                        <button string="Select All" name="select_all_line" type="object" class="oe_highlight"/>
                        <field name="invoice_line_ids" readonly="0">
                            <tree string="Invoices" editable="bottom" create="0" edit="1">
                                <field name="selected"/>
                                <field name="name" invisible="1"/>
                                <field name="delivery_date" optional="show" readonly="1" force_save="1"/>
                                <field name="invoice_id" optional="show" readonly="1" force_save="1"/>
                                <field name="partner_id" optional="show" readonly="1" force_save="1"/>
                                <field name="delivery_address_id" optional="show" readonly="1" force_save="1"/>
                                <field name="transport_line_id" optional="show" readonly="1" force_save="1"/>
                                <field name="company_round_id" optional="show" readonly="1" force_save="1"/>
                                <field name="sale_no" optional="hide" readonly="1" force_save="1"/>
                                <field name="delivery_id" optional="hide" readonly="1" force_save="1"/>
                                <field name="sale_person" optional="hide" readonly="1" force_save="1"/>
                                <field name="status" optional="hide" readonly="1" force_save="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
			</form>
        </field>
    </record>

    <record id="transfer_branch_summary_action" model="ir.actions.act_window">
        <field name="name">Transfer Branch Summary</field>
        <field name="res_model">resupply.transfer.branch.summary</field>
        <field name="view_mode">form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Transfer Branch Summary
          </p>
        </field>
    </record>
</odoo>
