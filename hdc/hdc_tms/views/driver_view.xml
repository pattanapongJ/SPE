<?xml version="1.0"?>
<odoo>
    <record id="driver_model_view_tree" model="ir.ui.view">
        <field name="name">driver.model.tree</field>
        <field name="model">driver.model</field>
        <field name="arch" type="xml">
            <tree string="Driver">
                <field name="name"/>
                <field name="car_registration"/>
            </tree>
        </field>
    </record>
    
    <record id="driver_model_view_form" model="ir.ui.view">
        <field name="name">driver.model.view.form</field>
        <field name="model">driver.model</field>
        <field name="arch" type="xml">
            <form string="Driver">
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="name" invisible="1"/>
                        </group>
                        <group>
                            <field name="car_registration"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="menu_driver_model_action" model="ir.actions.act_window">
        <field name="name">Driver</field>
        <field name="res_model">driver.model</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Define a new Driver
          </p>
        </field>
    </record>

    <menuitem id="menu_driver_model" name="Driver" parent="hdc_tms.menu_resupply_delivery_round_main" action="menu_driver_model_action" sequence="6"/>
</odoo>