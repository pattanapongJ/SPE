<?xml version="1.0"?>
<odoo>
    <record id="resupply_delivery_round_master_view_tree" model="ir.ui.view">
        <field name="name">delivery.round.tree</field>
        <field name="model">delivery.round</field>
        <field name="arch" type="xml">
            <tree string="Transport Line">
                <field name="name"/>
                <!-- <field name="warehouse_selection"/> -->
                <!-- <field name="branch_id"/> -->
                <field name="driver"/>
                <field name="regis_no"/>
                <field name="max_delivery_rounds"/>
                <field name="start_time" widget="float_time"/>
                <field name="end_time" widget="float_time"/>
                <field name="status_active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>
    
    <record id="resupply_delivery_round_master_view_form" model="ir.ui.view">
        <field name="name">delivery.round.view.form</field>
        <field name="model">delivery.round</field>
        <field name="arch" type="xml">
            <form string="Transport Line">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <!-- <field name="branch_id"/> -->
                            <field name="driver"/>
                            <field name="regis_no"/>
                            <field name="max_delivery_rounds"/>
                        </group>
                        <group>
                            <field name="start_time" widget="float_time"/>
                            <field name="end_time" widget="float_time"/>
                            <field name="status_active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="resupply_delivery_round_master_view_action" model="ir.actions.act_window">
        <field name="name">Transport Line</field>
        <field name="res_model">delivery.round</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Define a new Transport Line
          </p>
        </field>
    </record>

    
</odoo>
