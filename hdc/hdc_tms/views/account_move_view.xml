<?xml version="1.0"?>
<odoo>
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <group name="delivery" string="Delivery">
                    <label for="billing_status"/>
                    <div class="o_row">
                        <field name="to_finance" />
                        <field name="billing_status" readonly="1"/>
                    </div>

                    <field name="receipts_bill" readonly="1" force_save="1"/>
                    <field name="receipts_date" readonly="1" force_save="1"/>

                    <field name="finance_type" readonly="1"/>
                    <field name="delivery_status" readonly="1"/>
                    <field name="delivery_date" readonly="1" force_save="1"/>
                    <field name="logistics_user_id" readonly="1" force_save="1"/>
                    <field name="transport_line_id" options="{'no_create_edit': True,'no_create': True, 'no_open': True}"/>
                    <field name="transport_desc" />
                    <field name="company_round_id" options="{'no_create_edit': True,'no_create': True, 'no_open': True}"/>
                    <field name="company_round_desc" />
                    <field name="tms_remark" />
                    <field name="cancel_remark" />
                </group>
            </xpath>
        </field>
    </record>
    <record id="tms_account_invoice_search_view" model="ir.ui.view">
        <field name="name">tms.account.invoice.search.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='team_id']" position="after">
                <field name="tms_remark" />
                <field name="cancel_remark" />
            </xpath>
            <filter name="myinvoices" position="before">
                <filter name="tms_remark" string="TMS Remark" />
                <filter name="cancel_remark" string="Cancel Remark" />
            </filter>
        </field>
    </record>
</odoo>