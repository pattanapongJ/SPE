<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_cancel_by_line_view_form" model="ir.ui.view">
        <field name="name">wizard.cancel.so.line.view.form</field>
        <field name="model">wizard.cancel.so.line</field>
        <field name="arch" type="xml">
            <form string="Cancel Order Line Item">
                <sheet>
                    <!-- <field name="so_line_id" invisible="1"/> -->
                    <notebook>
                        <page string="Cancel Order Line Item" name="order_line">
                            <field name="line_ids">
                                <tree editable="bottom" create="0">
                                    <field name="product_id" force_save="1"/>
                                    <field name="categ_id" optional="hide" force_save="1"/>
                                    <field name="location_id" optional="hide" force_save="1"/>
                                    <field name="pick_location_id" optional="hide" force_save="1"/>
                                    <field name="demand_qty" force_save="1"/>
                                    <field name="virtual_available" force_save="1"/>
                                    <field name="picking_draft" force_save="1"/>
                                    <field name="picked_qty" force_save="1"/>
                                    <field name="canceled_qty" />
                                    <field name="cancel_qty" />
                                    <field name="uom_id" force_save="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button name="cancel_line" string="Confirm" type="object" class="btn-primary" />
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_cancel_by_line" model="ir.actions.act_window">
        <field name="name">Cancel Order Line Item</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.cancel.so.line</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>