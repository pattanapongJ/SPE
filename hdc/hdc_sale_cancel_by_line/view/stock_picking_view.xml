<?xml version="1.0"?>
<odoo>
    <record id="view_picking_cancel_qty_form" model="ir.ui.view">
        <field name="name">stock.picking.form.cancel.qty</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='quantity_done']" position="after">
                <field name="cancel_qty" readonly="1" optional="hide" attrs="{'column_invisible': [('parent.state', 'in', ['draft', 'waiting', 'confirmed'])]}"/>
            </xpath>
            
        </field>
    </record>
    
</odoo>
