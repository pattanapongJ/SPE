<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_blanket_order_inherit_discount" model="ir.ui.view">
        <field name="name">sale.blanket.order.form.inherit.discount</field>
        <field name="model">sale.blanket.order</field>
        <field name="inherit_id" ref="sale_blanket_order.view_blanket_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree/field[@name='taxes_id']" position="before">
                <field name="triple_discount" attrs="{'readonly': [('parent.state', 'in', ('open','expired'))]}"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree" position="attributes">
                <attribute name="decoration-danger"> price_subtotal &lt; 0 </attribute>
            </xpath>
            <!-- <xpath expr="//field[@name='line_ids']/tree/field[@name='price_subtotal']" position="attributes">
                <attribute name="options"> {
                    "bg_color": "red:price_subtotal &lt; 0",
                    "fg_color": "white:price_subtotal &lt; 0"
                    }</attribute>
            </xpath> -->
        </field>
    </record>

    <record id="view_create_sale_order_inherit_discount" model="ir.ui.view">
        <field name="name">Create Sale Order</field>
        <field name="model">sale.blanket.order.wizard</field>
        <field name="inherit_id" ref="sale_blanket_order.view_create_sale_order"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='remaining_uom_qty']" position="after">
                <field name="triple_discount" readonly="1"/>
            </xpath>
        </field>
    </record>

</odoo>
