<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_create_new_product_pdr" model="ir.ui.view">
        <field name="name">Create New Product</field>
        <field name="model">wizard.pdr.new.product</field>
        <field name="arch" type="xml">
            <form string="Create New Product">
                <group>
                    <group>
                        <field name="product_name"/>
                        <field name="categ_id"/>
                        <field name="default_code"/>
                        <field name="barcode"/>
                        <field name="pdr_id" invisible="1"/>
                    </group>
                    <group>
                        <field name="sale_price"/>
                        <field name="sale_cost"/>
                        <field name="uom_id"/>
                    </group>
                </group>
                <notebook>
                    <page string="Product BOM" name="product_list_page">
                        <field name="bom_component">
                            <tree string="Product BOM" editable="bottom">
                                <field name="product_id"/>
                                <field name="product_qty"/>
                                <field name="uom_id"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="generate_new_product" string="Create New Product" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    
</odoo>
