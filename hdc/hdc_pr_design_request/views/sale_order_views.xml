<odoo>
    <record id="sale_order_pdr_view_inherited" model="ir.ui.view">
        <field name="name">sale.order.view.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="pdr_id" invisible="1"/>
            </xpath>
            <!-- <xpath expr="//div[@name='button_box']/button[@name='action_view_invoice']" position="after">
                <button type="object" name="action_mr_ids" class="oe_stat_button" icon="fa-bars"  attrs="{'invisible': [('mr_count', '=', 0)]}">
                    <field name="mr_count" widget="statinfo" string="MRP Request"/>
                </button>
            </xpath> -->
            
        </field>
    </record>
    <record id="product_template_pdr_form_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']/group/group/field[@name='categ_id']" position="after">
                <field name="pdr_id" invisible="1"/>
                <field name="design_icon"/>
                <field name="below_cost" />
            </xpath>
        </field>
    </record>
</odoo>