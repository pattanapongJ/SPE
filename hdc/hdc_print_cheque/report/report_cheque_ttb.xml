<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_cheque_ttb_document">
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>

        <div class="article" style="font-family:LatoOpen Sans;font-size:13px;">
            <br/>
            <br/>
            
            <div class="row">
                <div class="col-1">
                                    
                </div>
                <div class="col-3" style="position: relative; top: -9mm;position: relative; left: 6.5px" >
                    <t t-if="o.due_date">
                        <t t-esc="o.due_date.strftime('%d/%m/') + str(int(o.due_date.strftime('%Y')) + 543)"/>
                    </t>    
                </div>
                <div class="col-4">
                                    
                </div>
                <div class="col-3 text-right" style="position: relative; top: -38px;position: relative; left: 23.5mm">
                    <t t-if="due_dates">
                        <span style="margin-right: 10px;font-size: 12pt">
                            <t t-foreach="due_dates.get(o.id, [])" t-as="dd">
                                <span style="margin-right: 15px;">
                                    <t t-esc="dd"/>
                                </span>
                            </t>
                        </span>                        
                    </t>    
                </div>
                <div class="col-1">
                                    
                </div>
            </div>
            <div class="row">
                <div class="col-1">
                                    
                </div>
                <div class="col-3" style="position: relative; top: -9mm; left: 5px; 
                         width: 180px; 
                         display: -webkit-box; 
                         -webkit-line-clamp: 2; 
                         -webkit-box-orient: vertical; 
                         overflow: hidden; 
                         word-wrap: break-word; 
                         line-height: 1.2em; 
                         max-height: 2.4em;">
    <t t-if="o.partner_id">
        <t t-esc="o.partner_id.name"/>
    </t>
</div>

                <div class="col-8" style="position: relative; top: -63px;position: relative; left: 183px;font-size: 12pt">
                    <t t-if="o.crossed_text">
                        <t t-esc="o.crossed_text"/>
                    </t>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                                    
                </div>
                <div class="col-6" style="position: relative; top: -7.5mm;font-size: 13pt">
                    <t t-if="o.partner_id">
                        <t t-esc="o.partner_id.name"/>
                    </t>
                </div>
                <div class="col-2">
                    <span style="position: relative; top: -5mm;position: relative; left: 22.5mm">XXXX</span>
                    <t t-if="o.cheque_no">
                        <t t-esc="o.cheque_no"/>
                    </t>
                </div>
            </div>
            <t t-set="payment_amount" t-value="0"/>
            <div class="row">
                <div class="col-4">
                                    
                </div>
                <div class="col-8" style="position: relative; top: -3.5mm;font-size: 13pt">
                    (<span t-esc="amount_to_text_th(abs(o.payment_amount), 'THB')"/>)
                </div>
            </div>
            <div class="row">
                <div class="col-1">
                    
                </div>
                <div class="col-7" style="position: relative; top: -17.5mm;position: relative; left: 5px">
                    <t t-if="o.payment_amount">
                        <t t-set="payment_amount" t-value="'{0:,.2f}'.format(float(o.payment_amount))"/>
                        <t t-esc="payment_amount"/>
                    </t>   
                </div>
                <div class="col-4 text-center" style="position: relative; top: 2mm;position: relative; left: 15px;font-size: 12pt">
                    <t t-if="o.payment_amount">
                        <t t-set="payment_amount" t-value="'{0:,.2f}'.format(float(o.payment_amount))"/>
                        **<t t-esc="payment_amount"/>**   
                    </t>         
                </div>
            </div>
            <br/>
            <div class="row">
              <div class="col-1">
                    
                </div>
              <div class="col-3" style="position: relative; top: -20mm;position: relative; left: 5px">
                   <t t-set="payment_number" t-value="o.env['account.payment'].search([('pdc_id', 'in', o.ids)], limit=1)"/>
                    <t t-if="payment_number">
                        <t t-esc="payment_number.name"/>
                    </t>        
                </div>
                <div class="col-6">
                </div>
                <div class="col-2">
                    
                </div>
            </div>
        </div>
    </template>

    <template id="report_cheque_ttb">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="hdc_print_cheque.report_cheque_ttb_document" />
            </t>
        </t>
    </template>
    
</odoo>
