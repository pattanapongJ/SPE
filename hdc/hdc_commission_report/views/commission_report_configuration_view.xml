<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_commission_report_configuration_form" model="ir.ui.view">
        <field name="name">commission.report.configuration.form</field>
        <field name="model">commission.report.configuration</field>
        <field name="arch" type="xml">            
            <form string="Settle Commission Report Configuration">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group name="form_commission_report_configuration" string="">
                        <field name="code"/>
                        <field name="description"/>
                        <field name="target_type" widget="radio" invisible="0"/>
                        <field name="settle_type" widget="radio" invisible="0"/>
                        <field name="report_id" options="{'no_create': True, 'no_open': True}"/>
                        <field name="is_requried_commission"/>
                        <field name="number_commission_type" attrs="{'invisible': [('is_requried_commission', '!=', True)]}"/>
                    </group>   
                    <notebook>
                        <page string="Commission Type" name="commission_report_configuration_line" attrs="{'invisible': [('is_requried_commission', '!=', True)]}">
                            <field name="commission_report_configuration_line">
                                <tree string="Commission Type" editable="bottom" create="1" edit="1">
                                    <field name="commission_report_configuration_id" invisible="1"/>
                                    <field name="commission_type" optional="show"/>
                                    <field name="name" optional="show" readonly="1" force_save="1"/>
                                    <field name="code" optional="show" readonly="1" force_save="1"/>
                                    <field name="description" optional="show" readonly="1" force_save="1"/>
                                    <field name="is_active" optional="show" readonly="1" force_save="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>                 
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_commission_report_configuration_tree" model="ir.ui.view">
        <field name="name">commission.report.configuration.tree</field>
        <field name="model">commission.report.configuration</field>
        <field name="arch" type="xml">
            <tree string="Settle Commission Report Configuration">       
                <field name="name"/>            
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="menu_commission_report_configuration_action">
        <field name="name">Settle Commission Report Configuration</field>
        <field name="res_model">commission.report.configuration</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
