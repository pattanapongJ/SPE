<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_external_product_inherit" model="ir.ui.view">
        <field name="name">product.template.external.product.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <div name="button_box" position="inside">
                <button class="oe_stat_button" name="action_view_multi_ext_product_detail" type="object" icon="fa-cubes" 
                        groups="hdc_external_item_customer.access_external_customer">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="multi_ext_product_available" widget="statinfo" nolabel="1" class="mr4"/>
                        </span>
                        <span class="o_stat_text">External Items Customer</span>
                    </div>
                </button>
            </div>

        </field>
    </record>
</odoo>