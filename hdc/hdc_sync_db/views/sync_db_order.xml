<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="sync_db_order_view_form" model="ir.ui.view">
        <field name="name">sync.db.order.form</field>
        <field name="model">sync.db.order</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Sync DB Orders">
                <header>
                    <button name="button_create_value" string="Create Payment"
                            attrs="{'invisible':['|',('type','!=', 'payment'),('state','not in', ('error_payment','draft'))]}"
                            icon="fa-arrow-down" class="btn-success" type="object"/>

                    <button name="button_create_value" string="Create Invoice"
                            attrs="{'invisible':['|',('type','!=', 'invoice'),('state','!=', 'draft')]}"
                            icon="fa-arrow-down" class="btn-success" type="object"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="json_data" invisible="0"/>
                        </group>
                        <group>
                            <field name="type" />
                            <field name="invoice_id" attrs="{'invisible':[('type','!=', 'invoice'),('state','!=', 'draft')]}"/>
                            <field name="payment_id" attrs="{'invisible':[('type','!=', 'payment'),('state','!=', 'draft')]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="sync_db_order_view_tree" model="ir.ui.view">
        <field name="name">sync.db.order.tree.view</field>
        <field name="model">sync.db.order</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Sync DB Orders">
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="sync_db_order_action" model="ir.actions.act_window">
        <field name="name">Sync DB Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sync.db.order</field>
        <field name="binding_view_types">form</field>
        <field name="view_id" ref="sync_db_order_view_tree"/>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>


    <menuitem id="menu_sync_db_order" name="Sync DB Orders" action="sync_db_order_action" parent="menu_sync_db"
              sequence="2"/>
    </data>
</odoo>
