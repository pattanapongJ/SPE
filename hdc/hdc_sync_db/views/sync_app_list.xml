<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="sync_app_list_view_form" model="ir.ui.view">
        <field name="name">sync.app.list.form</field>
        <field name="model">sync.app.list</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="App List">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,connect"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="endpoint_url" />
                            <field name="invoice" widget="boolean_toggle"/>
                            <field name="payment" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="apikey" />
                            <field name="instance_db" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Invoice Fields" attrs="{'invisible': [('invoice', '!=', True)]}">
                            <field name="invoice_domain" widget="domain"
                                    options="{'model': 'account.move','in_dialog': True}"/>
                            <field name="invoice_ids" nolabel="1">
                                <tree editable="bottom" limit="500">
                                    <field name="sync"/>
                                    <field name="field_id"/>
                                    <field name="field_name"/>
                                    <field name="field_type"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Payment Fields" attrs="{'invisible': [('payment', '!=', True)]}">
                            <field name="payment_domain" widget="domain"
                                    options="{'model': 'account.payment','in_dialog': True}"/>
                            <field name="payment_ids" nolabel="1">
                                <tree editable="bottom" limit="500">
                                    <field name="sync"/>
                                    <field name="field_id"/>
                                    <field name="field_name"/>
                                    <field name="field_type"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sync_app_list_view_tree" model="ir.ui.view">
        <field name="name">sync.app.list.tree.view</field>
        <field name="model">sync.app.list</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Sync List">
                <field name="name" />
                <field name="instance_db" />
                <field name="endpoint_url" />
            </tree>
        </field>
    </record>

    <record id="sync_app_list_action" model="ir.actions.act_window">
        <field name="name">Sync List</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sync.app.list</field>
        <field name="binding_view_types">form</field>
        <field name="view_id" ref="sync_app_list_view_tree"/>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_sync_app_list" name="Sync List" action="sync_app_list_action" parent="menu_sync_db"
              sequence="1"/>
    </data>
</odoo>
