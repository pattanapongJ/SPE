<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_blanket_order_confirmation_wizard_form" model="ir.ui.view">
        <field name="name">sale.blanket.order.confirmation.wizard.form</field>
        <field name="model">sale.blanket.order.confirmation.wizard</field>
        <field name="arch" type="xml">
            <form string="Expiration QT/SA">
                <group>
                    <field name="message" widget="text" nolabel="1"/>
                    <field name="blanket_order_id" invisible="1" force_save="1"/>
                </group>
                <footer>
                    <button name="action_create_sale_order" string="Create Sale Order" type="object" class="btn-primary"/>
                    <button name="action_close" string="Ok" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    

    
</odoo>