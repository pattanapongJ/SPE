<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_wizard_create_sale_order_view" model="ir.ui.view">
        <field name="name">inherit.wizard.create.sale.order.view</field>
        <field name="model">wizard.create.sale.order</field>
        <field name="inherit_id" ref="hdc_quotation_order.wizard_create_sale_order_view" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='description_customer']" position="after">
                <field name="shipping_cost" optional="hide" readonly="1" force_save="1"/>
                <field name="discount_pricelist" optional="hide" readonly="1" force_save="1"/>
            </xpath>

        </field>
    </record>

</odoo>