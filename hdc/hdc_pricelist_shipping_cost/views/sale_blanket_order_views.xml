<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_shipping_sale_ref_blanket_order" model="ir.ui.view">
        <field name="name">inherit.shipping.sale.ref.blanket.order</field>
        <field name="model">sale.blanket.order</field>
        <field name="inherit_id" ref="sale_blanket_order.view_blanket_order_form" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='line_ids']//tree//field[@name='price_unit']" position="after">
                <field name="shipping_cost" optional="hide" readonly="1" force_save="1"/>
            </xpath>

            <xpath expr="//field[@name='line_ids']//tree//field[@name='product_uom']" position="replace">
                <field name="sale_uom_map_ids" widget="many2many_tags" invisible="1" force_save="1"/>
                <field name="product_uom" groups="uom.group_uom" attrs="{'readonly': [('parent.state', 'in', ('open','expired'))]}" domain="[('id', 'in', sale_uom_map_ids)]"/>
            </xpath>        
        </field>
    </record>
    
</odoo>
