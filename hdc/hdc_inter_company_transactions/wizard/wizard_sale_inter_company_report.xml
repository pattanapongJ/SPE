<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_sale_inter_company_report_form" model="ir.ui.view">
        <field name="name">wizard.sale.inter.company.report.form</field>
        <field name="model">wizard.sale.inter.company.report</field>
        <field name="arch" type="xml">
            <form string="รายงานซื้อขายระหว่างกัน">
                <sheet>
                    <group>
                        <label for="from_date" />
                        <div class="o_row">
                            <field name="from_date" />
                            <p class="font-weight-bold">To</p>
                            <field name="to_date" />
                        </div>
                    </group>
                    <group>
                        <field name="product_ids" widget="many2many_tags" />
                    </group>
                    <group>
                        <field name="tax" widget="radio" />
                    </group>
                    <footer>
                        <button name="print_excel" string="Print Excel" type="object" class="btn-primary" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="wizard_sale_inter_company_action" model="ir.actions.act_window">
        <field name="name">รายงานซื้อขายระหว่างกัน</field>
        <field name="res_model">wizard.sale.inter.company.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_report_sale_inter_company"
        name="Sale Report รายงานซื้อขายระหว่างกัน"
        action="wizard_sale_inter_company_action"
        parent="sale.menu_sale_report"
        sequence="20"/>

</odoo>