<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_supplierinfo_form_view" model="ir.ui.view">
        <field name="name">product.supplierinfo.form.view.pricelist</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="inter_company_transactions"/>
            </xpath>
        </field>
    </record>

    <record id="inter_company_transactions_pricelist_view_inherit" model="ir.ui.view">
        <field name="name">inter_company.pricelist.form.inherit</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view_inherit" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="inter_company_transactions" />
            </xpath>
        </field>
    </record>

</odoo>
