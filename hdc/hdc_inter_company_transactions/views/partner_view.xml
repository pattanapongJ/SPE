<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_inter_company" model="ir.ui.view">
        <field name="name">view.partner.form.inherit.inter.company</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']" position="inside">
                <group string="Inter Company" name="inter_company">
                    <field name="inter_company_customer"/>
                    <field name="inter_company_vendor"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
