<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hdc_sale_order_report_document">

        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>

        <div class="header" style="font-family: Kanit" >
            <div class="row text-right" >
                <div class="col-12 text-right">
                    <span>Page No. </span>
                    <span class="page"/>
                    /
                    <span class="topage"/>
                </div>
            </div>
            <div class="row">
                <div class="col-7 text-left" style="font-size: 10px">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo.decode('ascii')" class="pull-left" style="max-height: 300px; max-width: 110px;"/>
                    <span style="margin-left: 10px"><t t-esc="company.name"/></span><br/>
                    <span style="margin-left: 10px"><t t-esc="company.street"/><t t-esc="company.street2"/><t t-esc="company.sub_district"/></span><br/>
                    <span style="margin-left: 10px"><t t-esc="company.city"/><t t-esc="company.state_id.name"/><t t-esc="company.zip"/></span><br/>
                    <span style="margin-left: 10px">เลขประจำตัวผู้เสียภาษี: <t t-esc="company.vat"/></span><br/>
                    <span style="margin-left: 10px">โทร: <t t-esc="company.phone"/></span><br/>
                    <span style="margin-left: 10px">แฟกซ์: <t t-esc="company.fax"/></span><br/>
                </div>
                
                <div class="col-5 text-right"  style="font-size: 10px;margin-right:0mm;margin-top:3mm">
                    <div>
                        <span><strong>เลขที่เอกสาร: <t t-esc="doc.name"/></strong></span>
                        <br/>
                        <span><strong>วันที่เอกสาร: <span t-field="doc.date_order" t-options='{"format": "dd/MM/yyyy HH:mm:ss"}'/></strong></span>
                        
                    </div>
                </div>
                
            </div>

