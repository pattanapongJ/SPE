<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hdc_requestion_inventory_ls_report_document">

        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>

         <div class="header font-inventory-div" style="font-family: KanitLight;" >
            <div class="row">
                <div class="col-2 text-left">
                    <t t-call="hdc_inventory_general_report.report_logo_style"/>
                </div>
                <div class="col-7 text-left" style="font-size: 15.12px;">
                    <!-- <strong><span style="font-size: 16.67px; "><t t-esc="company.name_th"/></span></strong><br/>
                    <strong><span style="font-size: 16.67px; "><t t-esc="company.name"/></span></strong><br/>
                    <span style=""><t t-esc="company.street_th"/> <t t-esc="company.street2_th"/> <t t-esc="company.city_th"/> <t t-esc="company.state_th_id.name"/> <t t-esc="company.zip_th"/></span><br/>
                    <span style=""><t t-esc="company.street"/>,<t t-esc="company.street2"/>,<t t-esc="company.city"/>,<t t-esc="company.state_id.name"/>,<t t-esc="company.zip"/>,<t t-esc="company.country_id.name"/></span><br/>
                    <span style="">TEL : +<t t-esc="company.phone"/></span><span style=""> FAX : +<t t-esc="company.fax"/></span> <br/> 
                    <span style="">WEBSITE <t t-esc="company.website"/></span> / <span style="">EMAIL : <t t-esc="company.email"/></span><br/> -->
                    <!-- <span style="">เลขประจำตัวผู้เสียภาษี: <t t-esc="company.vat"/></span><br/> -->
                    <br/>
                    <br/>
                    <span style="font-size: 16.67px; ">ใบเบิกวัตถุดิบ</span><br/>
                    <span style="font-size: 16.67px; ">Material Requisition Form</span><br/>
                    <br/>
                    <br/>
                </div>
                <div class="col-3 text-right" style="margin-right:0mm;margin-top:3mm">
                    <!-- <div style="font-size: 8.18px; " >
                        <span><strong>เลขที่เอกสาร: <t t-esc="doc.name"/></strong></span><br/>
                        <span t-if="doc.name">
                            <div>
                                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=%s' % ('Code128', doc.name, 400, 100, 0)" style="height:30px" alt="Barcode"/>
                            </div>
                        </span>
                        <span><strong>วันที่เอกสาร: <span t-field="doc.create_date" t-options="{&quot;format&quot;: &quot;dd/MM/yyyy HH:mm:ss&quot;}"/></strong></span>
                    </div> -->
                    <div style="font-size: 8.18px; " >
                        <!-- <span>ต้นฉบับ/Original</span><br/> -->
                        <span>หน้า </span>
                        <span class="page"/>
                        /
                        <span class="topage"/>
                    </div>
                </div>
            </div>

            <div style="font-family: KanitLight;text-align: center;margin-bottom:5mm;margin-top:5mm">
                <h4 style="font-size: 13.64px;"><strong>ใบเบิกยืมสินค้า</strong></h4>
            </div>
            
            <div class="row" style="font-family: KanitLight;font-size: 13.64px;margin-bottom:1mm;margin-top:2mm">
              <div class="col-8">
                    <div class="row ">
                        <div class="col-2 text-nowrap">
                            <strong><span>วันที่: </span> </strong>
                        </div>
                        <div class="col-8 text-left" style="border-bottom: 1px solid black"> 
                           <span t-if="doc.request_date">
                                <span t-field="doc.request_date" t-options='{"format": "dd/MM/yyyy"}'/>
                            </span>
                            <span t-if="not doc.request_date">
                                
                            </span>
                        </div>
                    </div>
                    <br/>
                    <br/>
                    <div class="row">
                        <div class="col-2 text-nowrap ">
                            <strong><span>ใช้สำหรับ:   </span></strong>
                        </div>
                        <div class="col-8 text-left" style="border-bottom: 1px solid black">
                           <!-- <span t-if="doc.location_id">
                              <span t-field="doc.location_id"/>
                            </span>
                            <span t-if="not doc.location_id">
                               -
                            </span> -->
                            <span>
                               
                            </span>
                        </div>
                    </div>
                </div>

                <div class="col-4">
                    <div class="row">
                        <div class="col-2">
                            <strong><span>ฝ่าย:   </span></strong>
                        </div>
                        <div class="col-8" style="border-bottom: 1px solid black">
                            <span t-if="doc.department_name">
                              <span t-field="doc.department_name.name"/>
                            </span>
                            <span t-if="not doc.department_name">
                               
                            </span>
                        </div>
                    </div>
                    <br/>
                    <br/>
                    <div class="row">
                        <div class="col-2 text-nowrap">
                            <strong><span>MO NO.:   </span></strong>
                        </div>
                        <div class="col-8" style="border-bottom: 1px solid black">
                            <span>
                               
                            </span>
                        </div>
                    </div>      
                </div>
            </div>
        </div>

        <div class="article font-inventory-div" style="font-family: KanitLight;" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <div class="row">
                <t t-set="l_no" t-value="0"/>
                <table class="table table-bordered" style="font-size: 13.64px;line-height: 18px">
                    <thead>
                        <tr>
                            <th class="text-center  font-inventory-th" style="width: 6%;">ลำดับ</th>
                            <th class="text-center  font-inventory-th" style="width: 13%;">รหัส</th>
                            <th class="text-center  font-inventory-th" style="width: 32%;">รายการสินค้า</th>
                            <th class="text-center  font-inventory-th" style="width: 20%;">PO NO / Lot No.</th>
                            <!-- <th class="text-center  font-inventory-th" style="width: 10%;">พื้นที่จัดเก็บ</th> -->
                            <th class="text-center  font-inventory-th" style="width: 12%;">จำนวน</th>
                            <!-- <th class="text-center  font-inventory-th" style="width: 10%;">จำนวนเบิก/ยืม</th>
                            <th class="text-center  font-inventory-th" style="width: 10%;">จำนวนที่คืน</th> -->
                            <!-- <th class="text-center  font-inventory-th" style="width: 8%;">หน่วย</th> -->
                            <th class="text-center  font-inventory-th" style="width: 15%;">หมายเหตุ</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- <t t-set="has_barcode" t-value="any(move_line.product_id and move_line.product_id.sudo().barcode or move_line.package_id for move_line in o.move_line_ids)"/>
                        <t t-set="has_serial_number" t-value="any(move_line.lot_id or move_line.lot_name for move_line in o.move_line_ids)" groups="stock.group_production_lot"/> -->
                        <span t-foreach="o.move_ids_without_package" t-as="move">
                            <span t-if="move.quantity_done == 0">
                                <tr >
                                    <td class="text-center"> 
                                        <t t-set="l_no" t-value="l_no + 1"/>
                                        <t t-esc="l_no"/>
                                    </td>
                                    <td style="text-align: left;">
                                        <span t-if="move.product_id.default_code">
                                            <span t-field="move.product_id.default_code"/>
                                        </span>
                                        <span t-if="not move.product_id.default_code">
                                            -
                                        </span>
                                    </td>
                                    <td style="text-align: left;">
                                        <span t-if="move.product_id">
                                            <span t-field="move.product_id.name"/>
                                        </span>
                                        <span t-if="not move.product_id">
                                            -
                                        </span>
                                    </td>
                                    <td class="text-center" >
                                        <!-- <span t-if="move.quantity_done">
                                            <span t-field="move.quantity_done"/>
                                        </span>
                                        <span t-if="not move.quantity_done">
                                            0.00
                                        </span> -->
                                    </td>
                                    <td class="text-center" >
                                        <!-- <span> qty_done </span> -->
                                        <span t-if="move.quantity_done">
                                            <span t-field="move.quantity_done"/>
                                        </span>
                                        <span t-if="not move.quantity_done">
                                            0.00
                                        </span>
                                    </td>
                                    <td class="text-center" >
                                        <!-- <span> qty_done </span> -->
                                        <span t-if="move.remark">
                                                <span t-if="move.remark and len(move.remark) &gt; 10">
                                                    <span t-esc="move.remark[:10] + '...'" />
                                                </span>
                                                <span t-elif="move.remark and len(move.remark) &lt;= 10">
                                                    <span t-field="move.remark"/>
                                                </span>
                                        </span>
                                        <span t-if="not move.remark">
                                            -
                                        </span>
                                    </td>
                                </tr>
                            </span>
                        </span>
                        
                        <t t-foreach="o.move_ids_without_package" t-as="move" >
                            <span t-if="move.quantity_done != 0">
                                <t t-foreach="move.move_line_nosuggest_ids.sorted(key=lambda ml: ml.location_id.id)" t-as="ml">
                                    <tr >
                                        <td class="text-center"> 
                                            <t t-set="l_no" t-value="l_no + 1"/>
                                            <t t-esc="l_no"/>
                                        </td>
                                        <td style="text-align: left;">
                                            <span t-if="move.product_id.default_code">
                                                <span t-field="move.product_id.default_code"/>
                                            </span>
                                            <span t-if="not move.product_id.default_code">
                                                -
                                            </span>
                                        </td>
                                        <td style="text-align: left;">
                                            <span t-if="move.product_id">
                                                <span t-field="move.product_id.name"/>
                                            </span>
                                            <span t-if="not move.product_id">
                                                -
                                            </span>
                                        </td>
                                        <td class="text-center" >
                                            <span t-if="ml.lot_id">
                                                <span t-field="ml.lot_id.name"/>
                                            </span>
                                            <span t-if="not ml.lot_id">
                                                -
                                            </span>
                                        </td>
                                        <td class="text-center" >
                                            <!-- <span> qty_done </span> -->
                                            <span t-if="ml.qty_done">
                                                <span t-field="ml.qty_done"/>
                                            </span>
                                            <span t-if="not ml.qty_done">
                                                0.00
                                            </span>
                                        </td>
                                        <td class="text-center" >
                                            <!-- <span> qty_done </span> -->
                                            <span t-if="move.remark">
                                                <span t-if="move.remark and len(move.remark) &gt; 10">
                                                    <span t-esc="move.remark[:10] + '...'" />
                                                </span>
                                                <span t-elif="move.remark and len(move.remark) &lt;= 10">
                                                    <span t-field="move.remark"/>
                                                </span>
                                            </span>
                                            
                                            <span t-if="not move.remark">
                                                -
                                            </span>
                                        </td>
                                    </tr>
                                </t>
                            </span>
                        </t>
                    </tbody>
                </table>
            </div>
            
        </div>
        
        <div class="footer last-page not-first-page font-inventory-div" style="font-family: KanitLight;margin-top:5mm;vertical-align: bottom;overflow: hidden">
            
            <div class="row" style="font-size: 13.64px;">
                <div class="col-6">
                    <div class="row">
                        <div class="col-2">
                            <strong><span>ผู้เบิก:   </span></strong>
                        </div>
                        <div class="col-6" style="border-bottom: 1px solid black">
                            <!-- <span t-if="doc.scheduled_date">
                                <span t-field="doc.scheduled_date" t-options='{"format": "dd/MM/yyyy"}'/>
                            </span>
                            <span t-if="not doc.scheduled_date">
                                -
                            </span> -->
                        </div>
                    </div>
                    <br/>
                    <br/>
                    <div class="row">
                        <div class="col-2 text-nowrap">
                            <strong><span>ผู้อนุมัติ:   </span></strong>
                        </div>
                        <div class="col-6" style="border-bottom: 1px solid black">
                            <!-- <span t-if="doc.location_dest_id">
                                <t t-esc="doc.location_dest_id.complete_name" />
                            </span>
                            <span t-if="not doc.location_dest_id">
                               -
                            </span> -->
                        </div>
                    </div>      
                </div>

                 <div class="col-6 text-right">
                    <div class="row">
                        <div class="col-6 text-right">
                            <strong><span>จัดทำโดย:   </span></strong>
                        </div>
                        <div class="col-6" style="border-bottom: 1px solid black">
                            <!-- <span t-if="doc.scheduled_date">
                                <span t-field="doc.scheduled_date" t-options='{"format": "dd/MM/yyyy"}'/>
                            </span>
                            <span t-if="not doc.scheduled_date">
                                -
                            </span> -->
                        </div>
                    </div>
                    <br/>
                    <br/>
                    <div class="row">
                        <div class="col-6 text-right">
                            <strong><span>ผู้รับ:   </span></strong>
                        </div>
                        <div class="col-6" style="border-bottom: 1px solid black">
                            <!-- <span t-if="doc.location_dest_id">
                                <t t-esc="doc.location_dest_id.complete_name" />
                            </span>
                            <span t-if="not doc.location_dest_id">
                               -
                            </span> -->
                        </div>
                    </div>      
                </div>
            </div>

        </div>

    </template>

    <template id="hdc_requestion_ls_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="hdc_inventory_general_report.hdc_requestion_inventory_ls_report_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>