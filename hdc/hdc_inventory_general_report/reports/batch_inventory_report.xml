<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hdc_batch_report_document">

        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>

        <!-- <div class="header" style="margin-left: -14px;margin-right: -14px" > -->
        <div class="header" style="font-family: KanitLight;" >
            <div class="row">
                <div class="col-2 text-left">
                    <t t-call="hdc_inventory_general_report.report_logo_style"/>
                </div>
                <div class="col-7 text-left" style="font-size: 12.12px;">
                    <span style="font-size: 16.67px; font-weight: bold;"><t t-esc="company.name_th"/></span><br/>
                    <!-- <span style="font-size: 16.67px; font-weight: bold;"><t t-esc="company.name"/></span><br/> -->
                    <span style=""><t t-esc="company.street_th"/> <t t-esc="company.street2_th"/> <t t-esc="company.city_th"/> <t t-esc="company.state_th_id.name"/> <t t-esc="company.zip_th"/></span><br/>
                    <!-- <span style=""><t t-esc="company.street"/>,<t t-esc="company.street2"/>,<t t-esc="company.city"/>,<t t-esc="company.state_id.name"/>,<t t-esc="company.zip"/>,<t t-esc="company.country_id.name"/></span><br/> -->
                    <span style="">TEL : +<t t-esc="company.phone"/></span><span style=""> FAX : +<t t-esc="company.fax"/></span><span style="">เลขประจำตัวผู้เสียภาษี: <t t-esc="company.vat"/></span><br/>
                    
                </div>
                <div class="col-3 text-right" style="margin-right:0mm;margin-top:3mm">
                    <!-- <div style="font-family: 'Kanit Light', sans-serif; font-size: 12px; font-weight: bold;"> -->
                    <!-- <div style="font-size: 8.18px; font-weight: bold;" > -->
                    <div style="font-size: 11px; font-weight: bold;" >
                        <span><strong>ใบเตรียมรับ</strong></span><br/>
                        <span t-if="doc.name">
                            <div>
                                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=%s' % ('Code128', doc.name, 400, 100, 0)" style="height:30px" alt="Barcode"/>
                            </div>
                        </span>
                    </div>
                    <div style="font-size: 11px; font-weight: bold;" >
                        <span>หน้า </span>
                        <span class="page"/>
                        /
                        <span class="topage"/>
                    </div>
                </div>
            </div>

            <div class="row" style="font-size: 13.64px;margin-bottom:0mm;margin-top:1mm;border-top: 1px solid black;border-bottom: 1px solid black;height: 170px">    
                <div class="col-6">
                    <div class="row ">
                        <div class="col-3 text-nowrap">
                           <span><strong>สถานที่รับ: </strong></span>
                        </div>
                        <div class="col-9 text-left">
                           <span t-if="doc.picking_type_id">
                              <span t-esc="doc.picking_type_id.warehouse_id.name"/>
                            </span>
                            <span t-if="not doc.picking_type_id">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3 text-nowrap ">
                           <span><strong>แหล่งที่มา: </strong></span>
                        </div>
                        <div class="col-9 text-left">
                           <span t-if="doc.origin_country">
                                <t t-esc="doc.origin_country" />
                            </span>
                            <span t-if="not doc.origin_country">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3 text-nowrap ">
                           <span><strong>Shipping: </strong></span>
                        </div>
                        <div class="col-9 text-left">
                            <span t-if="doc.shipping_provider">
                                <t t-esc="doc.shipping_provider.name" />
                            </span>
                            <span t-if="not doc.shipping_provider">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3 text-nowrap ">
                           <span><strong>Delivery Mode: </strong></span>
                        </div>
                        <div class="col-9 text-left">
                           <span t-if="doc.delivery_mode">
                                <t t-esc="doc.delivery_mode.name" />
                            </span>
                            <span t-if="not doc.delivery_mode">
                               -
                            </span>
                        </div>
                    </div>
                </div>

                <div class="col-6">
                    <div class="row">
                        <div class="col-4">
                            <span><strong>Receipt list No.: </strong></span>
                        </div>
                        <div class="col-8">
                            <span t-if="doc.name">
                               <t t-esc="doc.name" />
                            </span>
                            <span t-if="not doc.name">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-nowrap">
                            <span><strong>Date: </strong></span>
                        </div>
                        <div class="col-8">
                            <span t-if="doc.scheduled_date">
                                <span t-field="doc.scheduled_date" t-options='{"format": "dd/MM/yyyy HH:mm:ss"}'/>
                            </span>
                            <span t-if="not doc.scheduled_date">
                                -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-nowrap">
                            <span><strong>Invoice No: </strong></span>
                        </div>
                        <div class="col-8" style="max-height: 50px;overflow: hidden;">
                           <span t-if="doc.invoice_no">
                               <t t-esc="doc.invoice_no" />
                            </span>
                            <span t-if="not doc.invoice_no">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-nowrap">
                            <span><strong>ETD Date: </strong></span>
                        </div>
                        <div class="col-8" style="max-height: 50px;overflow: hidden;">
                            <span t-if="doc.etd">
                                <span t-field="doc.etd"/>
                            </span>
                            <span t-if="not doc.etd">
                                -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-nowrap">
                            <span><strong>ETA Date: </strong></span>
                        </div>
                        <div class="col-8" style="max-height: 50px;overflow: hidden;">
                            <span t-if="doc.eta">
                                <span t-field="doc.eta"/>
                            </span>
                            <span t-if="not doc.eta">
                                -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-nowrap">
                            <span><strong>WH Date: </strong></span>
                        </div>
                        <div class="col-8" style="max-height: 50px;overflow: hidden;">
                            <span t-if="doc.wh_date">
                                <span t-field="doc.wh_date"/>
                            </span>
                            <span t-if="not doc.wh_date">
                                -
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="article" style="font-family: KanitLight;" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <div class="row">
                <t t-set="l_no" t-value="0"/>
                <table class="table table-bordered" style="font-size: 13.64px;line-height: 18px">
                    <thead>
                        <tr>
                            <th class="text-center" style="width: 6%;">รหัสสินค้า</th>
                            <th class="text-center" style="width: 22%;">รายการสินค้า</th>
                            <th class="text-center" style="width: 20%; padding: 0;">
                                <table style="width: 100%; border-collapse: collapse;">
                                    <tr>
                                        <th class="text-center" colspan="2" style="padding: 0; border-left: 1px solid white; border-right: 1px solid white; border-top: 1px solid white;">บรรจุ</th>
                                    </tr>
                                    <tr>
                                        <td class="text-center" style="padding: 0;width: 50%;border-top: 1px solid white;border-bottom: 1px solid white;border-left: 1px solid white;">ลังละ</td>
                                        <td class="text-center" style="padding: 0;width: 50%;border-top: 1px solid white;border-bottom: 1px solid white;border-right: 1px solid white;">กล่องละ</td>
                                    </tr>
                                </table>
                            </th>
                            <th class="text-center" style="width: 12%;">จำนวน</th>
                            <th class="text-center" style="width: 10%;">หน่วย</th>
                            <th class="text-center" style="width: 10%;">PO No.</th>
                            <th class="text-center" style="width: 10%;">Lot No.</th>
                            <th class="text-center" style="width: 10%;">Barcode No.</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- <t t-set="has_barcode" t-value="any(move_line.product_id and move_line.product_id.sudo().barcode or move_line.package_id for move_line in o.move_line_ids)"/> -->
                        <!-- <t t-set="has_serial_number" t-value="any(move_line.lot_id or move_line.lot_name for move_line in o.move_line_ids)" groups="stock.group_production_lot"/> -->
                        <t t-foreach="o.move_tranfer_ids" t-as="move" >
                            <tr>
                                <!-- <td class="text-center">
                                    <t t-set="l_no" t-value="l_no + 1"/>
                                    <t t-esc="l_no"/>
                                </td> -->
                                <td style="text-align: left;">
                                    <span t-if="move.product_id.default_code">
                                        <span t-field="move.product_id.default_code"/>
                                    </span>
                                    <span t-if="not move.product_id.default_code">
                                        -
                                    </span>
                                </td>
                                <td style="text-align: left;">
                                    <span t-if="move.product_id">
                                        <span t-field="move.product_id.name"/>
                                    </span>
                                    <span t-if="not move.product_id">
                                        -
                                    </span>
                                </td>
                                <td style="text-align: center;padding: 0;">
                                    <table style="border-collapse: collapse; width: 100%;">
                                        <tr>
                                            <td class="text-center" style="border: 1px solid white;padding: 0; width: 50%;">
                                                <span t-if="move.product_id.crate" style="width: 100%; display: block;">
                                                    <span t-field="move.product_id.crate"/>
                                                </span>
                                                <span t-if="not move.product_id.crate" style="width: 100%; display: block;">
                                                    -
                                                </span>
                                            </td>
                                            <td class="text-center" style="border: 1px solid white;padding: 0; width: 50%;">
                                                <span t-if="move.product_id.box" style="width: 100%; display: block;">
                                                    <span t-field="move.product_id.box"/>
                                                </span>
                                                <span t-if="not move.product_id.box" style="width: 100%; display: block;">
                                                    -
                                                </span>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td class="text-center" >
                                    <span t-if="move.product_uom_qty">
                                        <span t-field="move.product_uom_qty"/>
                                    </span>
                                    <span t-if="not move.product_uom_qty">
                                        -
                                    </span>
                                </td>
                                <td class="text-center" >
                                    <span t-if="move.move_line_ids.product_uom_id">
                                        <span t-field="move.move_line_ids.product_uom_id.name"/>
                                    </span>
                                    <span t-if="not move.move_line_ids.product_uom_id">
                                        -
                                    </span>
                                </td>
                                <td class="text-center" >
                                    <span t-if="move.origin">
                                        <span t-field="move.origin"/>
                                    </span>
                                    <span t-if="not move.origin">
                                        -
                                    </span>
                                </td>
                                <td class="text-center" >
                                    <span t-if="move.move_line_ids.lot_id">
                                        <span t-field="move.move_line_ids.lot_id.name"/>
                                    </span>
                                    <span t-if="not move.move_line_ids.lot_id">
                                        -
                                    </span>
                                </td>
                                <td class="text-center" >
                                    <span t-if="move.product_id.barcode">
                                        <span t-field="move.product_id.barcode"/>
                                    </span>
                                    <span t-if="not move.product_id.barcode">
                                        -
                                    </span>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
            
        </div>

       <div class="footer last-page not-first-page" style="font-family: KanitLight;margin-top:5mm;vertical-align: bottom;overflow: hidden;">

            <div class="row" style="font-size: 13.64px;">
                <div class="col-8" style="position: relative;">
                    <div style="position: absolute; bottom: 0;">
                        <div>*สำหรับปัญหาของผลิตภัณฑ์ ติดต่อ คุณตาล Ext374, Supplychain@scpe.co.th</div>
                        <div>*ฝ่ายประสานงาน Shipping ติดต่อคุณอาริยา Ext.135</div>
                    </div>
                </div>
                
                <div class="col-4" align="center">
                    <div>จัดทำโดย</div>
                    <br/>
                    <div style="position: relative;">
                        <div style="position: absolute; top: -7px; width: 100%; text-align: center;">
                            <img t-if="doc.create_uid.employee_id.signature" t-att-src="'data:image/png;base64,' + doc.create_uid.employee_id.signature.decode('utf-8')" style="max-height: 100px; max-width: 100px;"/>
                        </div>
                        <!--<div class="col-8" style="border-bottom: 1px solid black">&#160;</div>-->
                    </div>
                    <br/>
                    <br/>
                    <div style="position: relative;">
                        <div style="position: absolute; top: -7px; width: 100%; text-align: center;">
        							  	<span t-if="doc.create_uid.employee_id.address_home_id,email">
                            <span t-field="doc.create_uid.employee_id.address_home_id.email"/>
                          </span>
        							  </div>
                        <div>Email: ............................................................................</div>
                    </div>
                    <div style="position: relative;">
                        <div style="position: absolute; top: -7px; width: 100%; text-align: center;">
        							  	<span t-if="doc.create_uid.employee_id.address_home_id,phone">
                              <span t-field="doc.create_uid.employee_id.address_home_id.phone"/>
                          </span>
        							  </div>
                        <div>Tel. ...................................................................................</div>
                    </div>
                    <div style="position: relative;">
                        <div style="position: absolute; top: -7px; width: 100%; text-align: center;">
                            <span t-field="doc.create_date" t-options='{"format": "dd/MM/yyyy"}'/>
                        </div>
                        <div>............................................................................&#160;</div>
                    </div>
                </div>
            </div>
         
        </div>
    </template>

    <template id="hdc_batch_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="hdc_inventory_general_report.hdc_batch_report_document"/>
            </t>
        </t>
    </template>

</odoo>