                </div>
            </div>

            
        </div>
    </template>

    <template id="hdc_requestion_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="hdc_inventory_general_report.hdc_requestion_inventory_report_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>