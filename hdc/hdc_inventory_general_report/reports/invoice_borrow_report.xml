<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hdc_inventory_general_report.inventory_borrow_preprint_report_document">
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-set="check_stamp_report" t-value="'hdc_inventory_general_report.inventory_borrow_preprint_report_document'"/>
        <t t-set="stamp" t-value="doc.check_stamp_report(check_stamp_report)"/>
