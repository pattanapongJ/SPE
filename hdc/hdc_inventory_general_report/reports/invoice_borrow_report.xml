                <div class="col-2 text-left">
                    
                </div>
                <div class="col-8 text-center" style="margin-right:0mm;margin-top:15mm">
                    <div style="font-size: 14px;font-weight: bold;">
                        <span t-esc="doc.branch_id.company_id.name_th"/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-2 text-left">
                    
                </div>
                <div class="col-8 text-center">
                    <div style="font-size: 14px">
                      <span t-esc="doc.branch_id.address"/>
                    </div>
                    
                </div>
                <div class="col-2 text-right" style="font-size: 14px;margin-left:4mm;">
                    
                </div>
            </div>
            <div class="row">
                <div class="col-2 text-left">
                    
                </div>
                <div class="col-4 text-right">
                    <div style="font-size: 14px">
                        โทร: <span t-esc="doc.branch_id.telephone"/>
                    </div>
                </div>
                <div class="col-4 text-left">
                    <div style="font-size: 14px">
                        โทรสาร: <span t-esc="doc.branch_id.fax_no"/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-2 text-left">
                    
                </div>
