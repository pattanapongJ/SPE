<odoo>
    <record id="mrp_production_mr_view_inherited" model="ir.ui.view">
        <field name="name">mrp.production.view.inherited</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='miscellaneous']/group/group/field[@name='origin']" position="after">
                <!-- <field name="mr_id" invisible="1"/> -->
                <field name="mr_id" />
            </xpath>
            <xpath expr="//div[@name='button_box']/button[@name='action_view_mo_delivery']" position="after">
                <button type="object" name="action_mr_ids" class="oe_stat_button" icon="fa-bars"  attrs="{'invisible': [('mr_count', '=', 0)]}">
                    <field name="mr_count" widget="statinfo" string="MRP Request"/>
                </button>
            </xpath>
            <xpath expr="//button[@name='button_scrap']" position="after">
                <button name="action_create_rework" type="object" string="Rework MO" class="btn-primary" 
                        attrs="{'invisible': [('state', 'not in', ('progress','cancel','to_close','done'))]}"/>
            </xpath>
            
        </field>
    </record>
    <record id="stock_picking_mr_view_inherited" model="ir.ui.view">
        <field name="name">stock.picking.view.inherited</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='extra']/group/group/field[@name='group_id']" position="after">
                <field name="mr_id" readonly="1"/>
            </xpath>
            
        </field>
    </record>
</odoo>