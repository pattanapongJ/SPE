<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mr_product_type_tree" model="ir.ui.view">
        <field name="name">product.type.mr.tree</field>
        <field name="model">product.type.mr</field>
        <field name="arch" type="xml">
            <tree string="Product Type" editable="bottom">
                <field name="name"/>
                <field name="department_id"/>
                <field name="picking_type_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_mr_product_type_form" model="ir.ui.view">
        <field name="name">product.type.mr.form</field>
        <field name="model">product.type.mr</field>
        <field name="arch" type="xml">
            <form string="MRP Request Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="department_id"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="picking_type_id"/>
                        </group>
                    </group>
                    <group>
                        <group name="group_location" string="Locations">
                            <field name="modify_location"/>
                            <field name="repack_location"/>
                            <field name="repair_location"/>
                            <field name="claim_location"/>
                            <field name="scrap_location"/>
                        </group>
                        <group name="group_oeration_types" string="Operation types">
                            <field name="into_factory_picking_type_id"/>
                            <field name="out_factory_picking_type_id"/>
                            <field name="modify_factory_picking_type_id"/>
                            <field name="repack_factory_picking_type_id"/>
                            <field name="repair_factory_picking_type_id"/>
                            <field name="claim_factory_picking_type_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mr_product_type_search" model="ir.ui.view">
        <field name="name">product.type.mr.search</field>
        <field name="model">product.type.mr</field>
        <field name="arch" type="xml">
            <search string="Search Product Type">
                <field name="name"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <record id="action_mr_product_type_form" model="ir.actions.act_window">
        <field name="name">Product Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.type.mr</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>