<odoo>
    <record id="quotation_order_view_inherit_incoterm" model="ir.ui.view">
        <field name="name">quotation.order.view.inherit.incoterm</field>
        <field name="model">quotation.order</field>
        <field name="inherit_id" ref="hdc_quotation_order.view_quotation_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale_info']" position="after">
                <group name="finance_dimension_gp" string="Finance Dimension">
                    <field name="finance_dimension_1_id"
                           options="{'no_create_edit': True, 'no_quick_create': True}"/>
                    <field name="finance_dimension_2_id"
                           options="{'no_create_edit': True, 'no_quick_create': True}"/>
                    <field name="finance_dimension_3_id"
                           options="{'no_create_edit': True, 'no_quick_create': True}"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='quotation_line']/form/group/group/field[@name='note']" position="after">
                <field name="finance_dimension_1_id" options="{'no_create_edit': True, 'no_quick_create': True}"/>
                <field name="finance_dimension_2_id" options="{'no_create_edit': True, 'no_quick_create': True}"/>
            </xpath>
            <xpath expr="//field[@name='quotation_line']/tree/field[@name='note']" position="after">
                <field name="finance_dimension_1_id" options="{'no_create_edit': True, 'no_quick_create': True}"
                    attrs="{'readonly': [('state', 'in', ('sale','done','cancel'))]}"
                    optional="hide"/>
                <field name="finance_dimension_2_id" options="{'no_create_edit': True, 'no_quick_create': True}"
                    attrs="{'readonly': [('state', 'in', ('sale','done','cancel'))]}"
                    optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>