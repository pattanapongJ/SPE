<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_rma_purchase" model="ir.actions.report">
        <field name="name">Purchase RMA Report</field>
        <field name="model">purchase.crm.claim.ept</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hdc_rma_ept_purchase.report_rma</field>
        <field name="report_file">hdc_rma_ept_purchase.report_rma</field>
        <field name="print_report_name">'RMA Report - %s' % (object.code)</field>
        <field name="paperformat_id" ref="hdc_rma_ept_purchase.paperformat_report_rma"/>
        <field name="binding_model_id" ref="model_purchase_crm_claim_ept"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_logo_style">
      <!-- เช็คชื่อบริษัทและกำหนดค่า logo_style -->
      <t t-if="company.name in ['Colt Plus (Thailand) Co.,Ltd.', 
                                 'Siam Modern Home Co.,Ltd.', 
                                 'Siam Techno Industry Co., Ltd.']">
         <t t-set="logo_style">margin-top:30px;</t>
      </t>
      <t t-elif="company.name == 'Saeng Charoen Patana Enterprise Co., Ltd.'">
         <t t-set="logo_style">margin-top:0px;</t>
      </t>
      <t t-else="">
         <t t-set="logo_style">margin-top:0px;</t>
      </t>

      <img t-if="company.logo"
            t-att-src="'data:image/png;base64,%s' % company.logo.decode('ascii')"
            class="pull-left img-logo"
            t-attf-style="{{ logo_style }}; max-height: 140px; max-width: 140px;" />
   </template>
</odoo>
