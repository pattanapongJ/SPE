<?xml version="1.0"?>
<odoo>
    <record id="view_purchase_rma_reason_cancel_wizard" model="ir.ui.view">
        <field name="name">purchase_rma_reason_cancel_wizard</field>
        <field name="model">purchase.rma.reason.cancel.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="claim_id" invisible="1"/>
                    <field name="reason_cancel" />
                </group>
                <footer>
                    <button string="Save" name="action_confirm" type="object" class="oe_highlight"/>
                    <button string="Close" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
