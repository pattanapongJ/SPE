    <record id="action_claim_from_delivery_ept_purchase" model="ir.actions.act_window">
        <field name="name">Purchase Claim From Delivery</field>
        <field name="res_model">purchase.crm.claim.ept</field>
        <field name="context">{'default_picking_id': active_id}</field>
        <field name="domain">[('picking_id', '=', active_id)]</field>
    </record>

    <record id="purchase_crm_claim_from_delivery_ept" model="ir.ui.view">
        <field name="name">purchase.crm.claim.from_delivery.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="view_purchase_claim_button" invisible="1"/>
                <button class="oe_stat_button" groups="rma_ept.group_rma_user_ept" type="action"
                        attrs="{'invisible': [('view_purchase_claim_button', '=', False)]}"
                        name="%(action_claim_from_delivery_ept_purchase)d" icon="fa-comments">
                    <field string="Claims" name="purchase_claim_count_out" widget="statinfo"/>
                </button>
            </xpath>
            <field name="picking_type_id" position="after">
                <field name="purchase_claim_id" readonly="1" force_save="1" attrs="{'invisible':[('purchase_claim_id', '=', False)]}"/>
                <field name="rma_purchase_id" readonly="1" force_save="1" attrs="{'invisible':[('rma_purchase_id', '=', False)]}"/>
                <field name="repair_order_id" readonly="1" force_save="1" attrs="{'invisible':[('repair_order_id', '=', False)]}"/>
            </field>
        </field>
    </record>

</odoo>
