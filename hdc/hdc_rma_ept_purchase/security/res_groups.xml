<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="0">
    <!--Multi company Rule :-->
    <record id="purchase_crm_claim_ept_comp_rule" model="ir.rule">
        <field name="name">All Claims multi-company</field>
        <field ref="model_purchase_crm_claim_ept" name="model_id"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','in',company_ids)]</field>
    </record>
    <!--end-->

    <record model="ir.module.category" id="module_purchase_category_rma_ept">
        <field name="name">RMA (Purchase)</field>
        <field name="sequence" eval="17"/>
    </record>

    <record model="res.groups" id="group_purchase_rma_user_ept">
        <field name="name">User</field>
        <field name="category_id" ref="module_purchase_category_rma_ept"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record model="res.groups" id="group_purchase_rma_manager_ept">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_purchase_category_rma_ept"/>
        <field name="implied_ids" eval="[(4, ref('group_purchase_rma_user_ept'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]"/>
    </record>

    <record id="purchase_crm_claim_ept_responsible_rule" model="ir.rule">
        <field name="name">Responsible Claims</field>
        <field ref="model_purchase_crm_claim_ept" name="model_id"/>
        <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('hdc_rma_ept_purchase.group_purchase_rma_user_ept'))]"/>
    </record>

    <record id="purchase_crm_claim_ept_personal_rule" model="ir.rule">
        <field name="name">Personal Claims</field>
        <field ref="model_purchase_crm_claim_ept" name="model_id"/>
        <field name="domain_force">[('message_partner_ids','child_of',[user.commercial_partner_id.id])]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="perm_unlink">False</field>
    </record>

    <record id="purchase_crm_claim_line_ept_responsible_rule" model="ir.rule">
        <field name="name">Responsible Claim Lines</field>
        <field ref="model_purchase_claim_line_ept" name="model_id"/>
        <field name="domain_force">['|',('purchase_claim_id.user_id','=',user.id),('purchase_claim_id.user_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('hdc_rma_ept_purchase.group_purchase_rma_user_ept'))]"/>
    </record>

    <record id="purchase_crm_claim_line_ept_rule_all_claims" model="ir.rule">
        <field name="name">All Claims</field>
        <field ref="model_purchase_crm_claim_ept" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('hdc_rma_ept_purchase.group_purchase_rma_manager_ept'))]"/>
    </record>

    <record id="purchase_crm_claim_line_ept_rule_all_claim_lines" model="ir.rule">
        <field name="name">All Claim Lines</field>
        <field ref="model_purchase_claim_line_ept" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('hdc_rma_ept_purchase.group_purchase_rma_manager_ept'))]"/>
    </record>

    <record id="purchase_crm_claim_line_ept_personal_rule" model="ir.rule">
        <field name="name">Personal Claim Lines</field>
        <field ref="model_purchase_claim_line_ept" name="model_id"/>
        <field name="domain_force">[('purchase_claim_id.message_partner_ids','child_of',[user.commercial_partner_id.id])]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="perm_unlink">False</field>
    </record>

</odoo>
