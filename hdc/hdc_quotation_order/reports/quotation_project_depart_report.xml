<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hdc_quotation_project_depart_document">
       <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <div class="header" style="font-family: KanitLight;height: 50px">
            <div class="row">
                 <div class="col-7 text-left">
                    <span style="font-size: 16.67px">SPE Quotation Project (Department)</span><br/>
                    <span style="font-size: 12.67px">Saeng Charoen Group</span><br/>
                </div>
                <div class="col-3 text-right" style="margin-right:0mm;margin-top:3mm">
                    <div style="font-size: 9.18px">
                        <span>Page <span class="page"/> of <span class="topage"/></span><br/>
                         <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="article" style="font-family: KanitLight" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">    
            <div class="row">
            <!-- ;border-top: 1px solid black; border-bottom: 1px solid black; -->
                <table class="table" style="font-size: 8.64px;line-height: 12px">
                    <thead>
                        <tr>
                            <th class="text-left" style="width: 7%;">
                                <div>Quotation</div>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <div>Itemid</div>
                            </th>
                            <th class="text-left" style="width: 12%;">
                                <div>Customer Name</div>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                            </th>
                            <th class="text-left" colspan="2" style="width: 7%;">
                                <div>QuotDate</div>
                                <br/>
                                <br/>
                                <div>Exp. Date</div>
                                <br/>
                                <br/>
                                <div>
                                    <span>จำนวน</span>
                                    <span>หน่วย</span>
                                </div>
                            </th>
                            <th class="text-left" style="width: 7%;">
                                <div>Amount</div>
                                <br/>
                                <br/>
                                <div>Include</div>
                                <br/>
                                <br/>
                                <div>ราคาเสนอลูกค้า</div>
                            </th>
                            <th class="text-left" style="width: 9%;">
                                <div>Sales Respond</div>
                                <br/>
                                <br/>
                                <div>Sales Spec</div>
                                <br/>
                                <br/>
                                <div>Discount. percent</div>
                            </th>
                            <th class="text-left" style="width: 6%;">
                                <div>Status.</div>
                                <br/>
                                <br/>
                                <div>Remark</div>
                                <br/>
                                <br/>
                                <div>จำนวนเงิน</div>
                            </th>
                            <th class="text-left" style="width: 8%;">
                                <div>Customer Req.</div>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                            </th>
                            <th class="text-left" style="width: 5%;">
                                <!-- <div>Req.</div> -->
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <div>transfer24</div>
                            </th>
                            <th class="text-left" style="width: 5%;">
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <div>Transferอื่นๆ</div>
                            </th>
                            <th class="text-left" style="width: 5%;">
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <div>ค้างรับ</div>
                            </th>
                            <th class="text-left" style="width: 5%;">
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <div>ค้างส่ง</div>
                            </th>
                            <th class="text-left" style="width: 5%;">
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <div>Physical Inv</div>
                            </th>
                            <th class="text-left" style="width: 5%;">
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <div>Rsp-Pro</div>
                            </th>
                            <th class="text-left" style="width: 5%;">
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <div>SD-RSP</div>
                            </th>
                            <th class="text-left" style="width: 5%;">
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <div>SDเริ่มต้น/สิ้นสุด</div>
                            </th>
                            
                        </tr>
                        <tr style="height: 100px;border-bottom: 1px solid #dee2e6;">
                            <td style="width: 7%; text-align: left;">
                                <span t-if="doc.name">
                                    <span t-field="doc.name"/>
                                </span>
                            </td>
                            <td style="width: 12%; text-align: left;">
                                <span t-if="doc.partner_id">
                                    <span t-field="doc.partner_id.name"/>
                                </span>
                            </td>
                            <td colspan="2" style="width: 7%; text-align: left;">
                                <div>
                                    <div>
                                        <span t-if="doc.date_order" style="display: block; margin-bottom: 10px;">
                                            <span t-if="doc.date_order" t-esc="doc.date_order"/>
                                        </span>
                                        <span t-if="doc.validity_date" style="display: block; margin-top: 10px;">
                                            <span t-if="doc.validity_date" t-esc="doc.validity_date"/>
                                        </span>
                                    </div>
                                </div>
                            </td>
                            <td style="width: 7%; text-align: left;">
                                  <span t-if="doc.amount_total" style="display: block; margin-bottom: 10px;">
                                      <span t-field="doc.amount_total"/>
                                  </span>
                                  <span t-if="doc.fiscal_position_id" style="display: block; margin-top: 10px;">
                                      <span t-esc="doc.fiscal_position_id.name"/>
                                </span>
                            </td>
                            <td style="width: 9%; text-align: left;">
                                <div>
                                    <span t-if="doc.user_id" style="display: block; margin-bottom: 10px;">
                                        <span t-if="doc.user_id" t-esc="doc.user_id.name"/>
                                    </span>
                                    <span t-if="doc.sale_spec" style="display: block; margin-top: 10px;">
                                        <span t-if="doc.sale_spec" t-esc="doc.sale_spec.name"/>
                                    </span>
                                </div>
                            </td>
                            <td colspan="5" style="width: 14%; text-align: left;">
                                <div>
                                    <div style="display: inline-block; width: 100%;">
                                        <span t-if="doc.state" t-esc="doc.state" style="display: inline-block; width: 20%; text-align: left;"></span>
                                        <span t-if="doc.partner_id" t-esc="doc.partner_id.name" style="display: inline-block; width: 20%; text-align: center;"></span>
                                        <!-- <span style="display: inline-block; width: 10%; text-align: right;">Req.</span> -->
                                    </div>
                                    <span t-if="doc.remark" style="display: block; margin-top: 10px;">
                                        <span t-field="doc.remark"/>
                                    </span>
                                </div>
                            </td>
                            <td colspan="5" >
                            </td>
                        </tr>
                    </thead>
                    <tbody class="table-borderless">
                        <t t-foreach="doc.quotation_line" t-as="line">
                            <tr>
                                <td style="width: 7%; text-align: left">
                                    <span t-if="line.product_id.default_code">
                                        <span t-field="line.product_id.default_code"/>
                                    </span>
                                </td>
                                <td style="width: 12%; text-align: left">
                                    <span t-if="line.product_id">
                                        <span t-field="line.product_id.name"/>
                                    </span>
                                </td>
                                <td colspan="2" style="width: 7%;padding: 0;">
                                    <table class="table-borderless" style="border-collapse: collapse; width: 100%;">
                                        <tr>
                                            <td class="text-right" style="width: 50%;">
                                                <span t-if="line.product_uom_qty" style="width: 100%; display: block;">
                                                    <span t-field="line.product_uom_qty"/>
                                                </span>
                                            </td>
                                            <td class="text-left" style="width: 50%;">
                                                <span t-if="line.product_uom" style="width: 100%; display: block;">
                                                    <span t-field="line.product_uom.name"/>
                                                </span>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td style="width: 7%; text-align: left;">
                                    <span t-if="line.price_unit">
                                        <span t-field="line.price_unit"/>
                                    </span>
                                </td>
                                <td style="width: 9%; text-align: left;">
                                     <span t-if="line.sub_discount">
                                        <span t-field="line.sub_discount"/>
                                    </span>
                                </td>
                                <td colspan="2" style="width: 6%; text-align: left;">
                                    <div>
                                        <span t-if="line.price_total" t-esc="line.price_total"/>
                                    </div>
                                </td>
                                <td style="width: 5%; text-align: left;">
                                    <span t-esc="transfer24.get(line.product_id.id, 0)"/>
                                </td>
                                <td style="width: 5%; text-align: left;">
                                    <span t-esc="transfer_other.get(line.product_id.id, 0)"/>
                                </td>
                                <td style="width: 5%; text-align: left;">
                                    <span t-esc="batch.get(line.product_id.id, 0)"/>
                                </td>
                                <td style="width: 5%; text-align: left;">
                                    <span t-esc="picking_list.get(line.product_id.id, 0)"/>
                                </td>
                                <td style="width: 7%; text-align: left;">
                                    <t t-esc="physical_inv.get(line.product_id.id, {}).get('total_amount', 0)"/>
                                </td>
                                <td style="width: 5%; text-align: left;">
                                    <span>Rsp-Pro</span>
                                </td>
                                <td style="width: 5%; text-align: left;">
                                    <span>SD-RSP</span>
                                </td>
                                <td style="width: 5%; text-align: left;">
                                    <span>SDเริ่มต้น/สิ้นสุด</span>
                                </td>

                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>      
        </div>
    </template>

    <template id="hdc_quotation_project_depart">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="hdc_quotation_order.hdc_quotation_project_depart_document"/>
            </t>
        </t>
    </template>

</odoo>