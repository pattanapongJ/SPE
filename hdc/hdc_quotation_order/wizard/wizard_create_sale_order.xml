<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_create_sale_order_view" model="ir.ui.view">
        <field name="name">Create Sale Order</field>
        <field name="model">wizard.create.sale.order</field>
        <field name="arch" type="xml">
            <form>
                <div>
                    <field name="selected"/>
                    <span class="oe_inline">Select All</span>
                </div>
                <field name="quotation_id" invisible="1"/>
                <field name="order_line">
                    <tree string="Product" editable="bottom" create="0" edit="0">
                        <field name="selected"/>
                        <field name="quotation_line" invisible="1"/>
                        <field name="product_id"/>
                        <field name="display_type" string="Remark"/>
                        <field name="name"/>
                        <field name="product_uom_qty"/>
                        <field name="product_uom"/>
                        <field name="price_unit"/>
                        <field name="external_item" optional="hide" readonly="1" force_save="1"/>
                        <field name="barcode_customer" optional="hide" readonly="1" force_save="1"/>
                        <field name="barcode_modern_trade" optional="hide" readonly="1" force_save="1"/>
                        <field name="description_customer" optional="hide" readonly="1" force_save="1"/>
                        <field name="modify_type_txt" optional="hide" readonly="1" force_save="1" />
                        <field name="plan_home" optional="hide" readonly="1" force_save="1" />
                        <field name="room" optional="hide" readonly="1" force_save="1" />
                    </tree>
                </field>
                <footer>
                    <button name="action_confirm" string="Create Order" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_create_sale_order_view" model="ir.actions.act_window">
        <field name="name">Create Sale Order</field>
        <field name="res_model">wizard.create.sale.order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="wizard_create_sale_order_view"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>
</odoo>