<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_quotation_project_bo" model="ir.ui.view">
        <field name="name">wizard.quotation.bo.form</field>
        <field name="model">wizard.quotation.bo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="วันที่ค้นหา">
                        <group>
                            <field name="date_from" required="1"/>
                        </group>
                        <group>
                            <field name="date_to" required="1"/>
                        </group>
                    </group>
                    <group>
                        <group col="2">
                            <field name="document" widget='radio' options="{'horizontal': false}"/>
                        </group>
                        <group col="2">
                            <field name="project_name" widget="many2many_tags"/>
                        </group>
                    </group>                                  
                </sheet>
                <footer>
                    <button string="Print" type="object" name="get_report" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_quotation_project_bo" model="ir.actions.act_window">
        <field name="name">Quotations Project Bo</field>
        <field name="res_model">wizard.quotation.bo</field>
        <field name="view_mode">tree,form</field>
        <field name="target">new</field>
        <field name="view_id" ref="wizard_quotation_project_bo"/>
        <!-- <field name="domain">[('state', '=', 'draft')]</field> -->
    </record>

    <menuitem id="menu_quotation_project_bo"
              name="Quotations Project Bo"
              parent="sale.menu_sale_report"
              action="action_quotation_project_bo"
              sequence="12"/>
</odoo>
