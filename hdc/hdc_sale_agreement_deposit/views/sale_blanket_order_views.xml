<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_sale_blanket_order_form_inherit_deposit" model="ir.ui.view">
        <field name="name">view.sale.blanket.order.inherit.deposit</field>
        <field name="model">sale.blanket.order</field>
        <field name="inherit_id" ref="sale_blanket_order.view_blanket_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_confirm']" position="after">
                <button
                    name="action_advance_payment_inv"
                    states="draft,open"
                    type="object"
                    string="Register Deposit"
                />
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object"  name="action_view_invoice"
                    class="oe_stat_button"
                    icon="fa-pencil-square-o" attrs="{'invisible':[('invoice_count', '=', 0)]}">
                    <field name="invoice_count" widget="statinfo" string="Down Payments"/>
                    <field name='invoice_ids' invisible="1"/>
                </button>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree" position="inside">
                <field name='is_deposit' invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/form/notebook" position="inside">
                <field name='is_deposit' invisible="1"/>
                <field name='is_deposit' invisible="1"/>
                <page string="Deposit History" name="deposit_history_ids" attrs="{'invisible': [('is_deposit', '=', False)]}">
                    <field name="deposit_history_ids">
                        <tree>
                            <field name="deposit_move_id" invisible="1"/>
                            <field name="deduct_move_id"/>
                            <field name="deducted_amount" sum="Total Deduct Amount"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
