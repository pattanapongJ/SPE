<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_blanket_order_inherit_convert_prod_uom" model="ir.ui.view">
        <field name="name">sale.blanket.order.form.inherit.convert.prod.uom</field>
        <field name="model">sale.blanket.order</field>
        <field name="inherit_id" ref="sale_blanket_order.view_blanket_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree//field[@name='product_uom']"
                position="after">
                <field name="sale_uom_map_ids" widget="many2many_tags" invisible="1" />
            </xpath>

            <xpath expr="//field[@name='line_ids']/tree//field[@name='product_uom']"
                position="attributes">
                <attribute name="domain">[('id', 'in', sale_uom_map_ids)]</attribute>
            </xpath>
        </field>
    </record>    
</odoo>
