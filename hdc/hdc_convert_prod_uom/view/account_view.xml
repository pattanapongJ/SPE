<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_tax_form_inherited_exclude_tax" model="ir.ui.view">
        <field name="name">account.tax.form.inherited.exclude.tax</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tax_exigibility']" position="after">
                <field name="is_taxes_exclude" />
            </xpath>
        </field>
    </record>
</odoo>
