<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="convert_prod_inherit_purchase_line_tree" model="ir.ui.view">
        <field name="name">convert.prod.inherit.purchase.line.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='order_line']/tree//field[@name='product_uom']"
                position="after">
                <field name="purchase_uom_map_ids" widget="many2many_tags" invisible="1" />
            </xpath>

            <xpath expr="//field[@name='order_line']/tree//field[@name='product_uom']"
                position="attributes">
                <attribute name="domain">[('id', 'in', purchase_uom_map_ids)]</attribute>
            </xpath>

        </field>
    </record>

</odoo>