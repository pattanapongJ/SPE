<odoo>
    <record id="create_pr_from_mrp_view_inherited" model="ir.ui.view">
        <field name="name">create.pr.from.mrp.view.inherited</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="priority">40</field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_purchase_orders']" position="before">
                <button class="oe_stat_button" name="action_view_create_pr" type="object" icon="fa-credit-card" groups="purchase.group_purchase_user" attrs="{'invisible': [('create_pr_count', '=', 0)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"><field name="create_pr_count"/></span>
                        <span class="o_stat_text">PR</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="after">
                <button name="action_open_wizard_mrp_create_pr" string="Create PR" type="object"
                        class="btn-primary" 
                        attrs="{'invisible': [('state', 'in', ['draft','cancel'])]}"/>
            </xpath>
        </field>
    </record>
</odoo>