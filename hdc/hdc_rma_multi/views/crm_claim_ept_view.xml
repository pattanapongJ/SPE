<?xml version="1.0"?>
<odoo>

    <record id="crm_claims_ept_form_view_inherit" model="ir.ui.view">
        <field name="name">CRM - Claims Ept Form Inherit</field>
        <field name="model">crm.claim.ept</field>
        <field name="inherit_id" ref="rma_ept.crm_claims_ept_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_deadline']" position="after">
                <field name="return_request_id" string="Reference" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='claim_line_ids']/tree/field[@name='move_id']" position="after">
                <field name="external_item" optional="hide" readonly="1" force_save="1"/>
                <field name="barcode_customer" optional="hide" readonly="1" force_save="1"/>
                <field name="barcode_modern_trade" optional="hide" readonly="1" force_save="1"/>
                <field name="description_customer" optional="hide" readonly="1" force_save="1"/>
            </xpath>
        </field>
    </record>

</odoo>
