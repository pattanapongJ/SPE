<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_add_product_crr" model="ir.ui.view">
        <field name="name">Add Product CRR</field>
        <field name="model">wizard.add.product.crr</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <field name="return_request_id" invisible="1"/>
                    <field name="partner_id" invisible="1"/>
                    <field name="company_chain_id" invisible="1"/>
                    <group name="spe_invoice">
                        <field name="available_invoice_ids" invisible="1"/>
                        <field name="spe_invoice" options="{'no_create_edit': True, 'no_create': True}"/>
                    </group>
                    <notebook>
                        <page string="Product Return">
                            <field name="product_line_ids" widget="one2many_list">
                                <tree  editable="bottom">
                                    <field name="external_product_id" options="{'no_create_edit': True, 'no_create': True}" domain="['|', ('partner_id', '=', parent.partner_id), ('company_chain_id', '=', parent.company_chain_id)]"/>
                                    <field name="product_id" options="{'no_create_edit': True, 'no_create': True}"/>
                                    <field name="name"/>
                                    <field name="receive_qty" string="Receive"/>
                                    <field name="uom" options="{'no_create_edit': True, 'no_create': True}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_add_product" string="Create Receive" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
