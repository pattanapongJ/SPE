<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hdc_crr_report_document">

        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>

        <t t-set="crr" t-value="doc.env['customer.return.request'].search([('name', '=', doc.origin)])"/>
        <t t-set="rma" t-value="doc.env['crm.claim.ept'].search([('return_request_id', '=', doc.id)])"/>

        <div class="header font-inventory-div" style="font-family: KanitLight;" >
            <div style="font-family: KanitLight;text-align: center;margin-bottom:5mm;margin-top:5mm">
                <h4 style="font-size: 13.64px;"><strong>ใบรับสินค้าคืน</strong></h4>
            </div>
            
            <div class="row" style="font-family: KanitLight;font-size: 13.64px;margin-bottom:1mm;margin-top:2mm;">
              <div class="col-6">
                    <div class="row ">
                        <div class="col-4 text-nowrap">
                            <strong><span>อ้างอิงเลขที่เอกสาร: </span> </strong>
                        </div>
                        <div class="col-8 text-left">
                            <span t-if="crr.name">
                              <span t-field="crr.name"/>
                            </span>
                            <span t-if="not crr">

                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-nowrap ">
                            <strong><span>อ้างอิง RMA:   </span></strong>
                        </div>
                        <div class="col-8 text-left">
                            <span t-if="rma.name">
                              <span t-field="rma.name"/>
                            </span>
                            <span t-if="not rma.name">
                               
                            </span>
                        </div>
                    </div>
                </div>

                <div class="col-6">
                    <div class="row">
                        <div class="col-4">
                            <strong><span>เลขที่เอกสาร:   </span></strong>
                        </div>
                        <div class="col-8">
                            <span t-if="doc.name">
                              <span t-field="doc.name"/>
                            </span>
                            <span t-if="not doc.name">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-nowrap">
                            <strong><span>วันที่เอกสาร:   </span></strong>
                        </div>
                        <div class="col-8">
                            <span t-if="doc.scheduled_date">
                               <span t-field="doc.scheduled_date" t-options='{"format": "dd/MM/yyyy"}'/>
                           </span>
                           <span t-if="not doc.scheduled_date">
                               -
                           </span>
                        </div>
                    </div> 
                    <div class="row">
                        <div class="col-4 text-nowrap">
                            <strong><span>ผู้ติดต่อ:   </span></strong>
                        </div>
                        <div class="col-8">
                            <span t-if="doc.partner_id.name">
                                <t t-esc="doc.partner_id.name" />
                            </span>
                            <span t-if="not doc.partner_id.name">
                               
                            </span>
                        </div>
                    </div>           
                </div>
            </div>

            <div class="row" style="font-family: KanitLight;font-size: 13.64px;margin-bottom:1mm;margin-top:2mm;height: 115px">
                <div class="col-10">
                    <div class="row ">
                        <div class="col-2 text-nowrap">
                            <strong><span>ชื่อลูกค้า: </span> </strong>
                        </div>
                        <div class="col-10 text-left">
                           <span t-if="doc.partner_id">
                              <span t-field="doc.partner_id.name"/>
                            </span>
                            <span t-if="not doc.partner_id">
