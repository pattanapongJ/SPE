<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    
    <record id="view_account_billing_period_form" model="ir.ui.view">
        <field name="name">account.billing.period.form</field>
        <field name="model">account.billing.period</field>
        <field name="arch" type="xml">            
            <form string="Billing Period">
                <sheet>
                    <group name="form_billing_period" string="string">
                        <field name="code"/>
                        <field name="name"/>                        
                        <field name="description"/>
                    </group>                    
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_account_billing_period_tree" model="ir.ui.view">
        <field name="name">account.billing.period.tree</field>
        <field name="model">account.billing.period</field>
        <field name="arch" type="xml">
            <tree string="Billing Period">       
                <field name="code"/>         
                <field name="name"/>                
                <field name="description"/>                
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sub_menu_account_billing_period_action">
        <field name="name">Billing Period</field>
        <field name="res_model">account.billing.period</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="sub_menu_account_billing_period" name="Billing Period" parent="hdc_billing_period_route.menu_account_billing_settings" sequence="1" action="hdc_billing_period_route.sub_menu_account_billing_period_action" />

</odoo>
