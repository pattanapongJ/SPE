<?xml version="1.0"?>
<odoo>
    <record id="offer_validation_view_search" model="ir.ui.view">
        <field name="name">offer.validation.view.search</field>
        <field name="model">offer.validation</field>
        <field name="arch" type="xml">
                <search string="Search Opportunities">
                    <field name="name"/>
                    <field name="weeks"/>
                    <field name="months"/>
                <separator/>
            </search>
        </field>
    </record>

    <record id="offer_validation_view_tree" model="ir.ui.view">
        <field name="name">offer.validation.tree</field>
        <field name="model">offer.validation</field>
        <field name="arch" type="xml">
            <tree string="Channel" editable="bottom">
                <field name="name"/>
                <field name="weeks"/>
                <field name="months"/>
            </tree>
        </field>
    </record>

    <!-- Configuration/Lead & Opportunities/won Reasons Menu -->
    <record id="offer_validation_action" model="ir.actions.act_window">
        <field name="name">Offer Validation</field>
        <field name="res_model">offer.validation</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Offer Validation
          </p>
        </field>
    </record>

