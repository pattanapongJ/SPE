<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="module_temp_credit_request" model="ir.module.category">
            <field name="name">Credit Limit</field>
            <field name="description">Helps you manage Credit Limit.</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_credit_request" model="res.groups">
            <field name="name">User: Own Documents Only</field>
            <field name="category_id" ref="module_temp_credit_request"/>
        </record>

        <record id="group_credit_request_all_leads" model="res.groups">
            <field name="name">User: Team Documents Only</field>
            <field name="category_id" ref="module_temp_credit_request"/>
            <field name="implied_ids" eval="[(4, ref('hdc_creditlimit_saleteam.group_credit_request'))]"/>
        </record>

        <record id="group_credit_request_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_temp_credit_request"/>
            <field name="implied_ids" eval="[(4, ref('hdc_creditlimit_saleteam.group_credit_request_all_leads'))]"/>
        </record>

        <record id="group_credit_request_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_temp_credit_request"/>
            <field name="implied_ids" eval="[(4, ref('hdc_creditlimit_saleteam.group_credit_request_admin'))]"/>
        </record>

        <record id="group_can_change_payment_terms" model="res.groups">
            <field name="name">Can Change Payment Terms</field>
        </record>
        <record id="customer_cash_limit_company_rule" model="ir.rule">
            <field name="name">Customer Cash Limit: Multi-Company Visibility</field>
            <field name="model_id" ref="model_customer_cash_limit"/>
            <field name="domain_force">['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>  
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
</odoo>
