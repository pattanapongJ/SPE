<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_quotation_tree_on_credit" model="ir.ui.view">
        <field name="name">sale.order.tree.on_credit</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <tree string="Credit limit by Sale Team" create="0" edit="0" delete="0">
                <field name="partner_ref" string="Partner ID"/>
                <field name="partner_id"/>
                <field name="user_employee_id"/>
                <field name="name" string="Number"/>
                <field name="team_id"/>
                <field name="amount_total" string="SO Amount"/>
                <field name="so_invoice_amount" string="Invoice Amount"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_credit_limit_sale_tree" model="ir.ui.view">
        <field name="name">credit.limit.sale.tree</field>
        <field name="model">credit.limit.sale</field>
        <field name="arch" type="xml">
            <tree string="Credit Limit Sales">
                <field name="name"/>
                <field name="total_credit"/>
                <field name="cash_limit"/>
            </tree>
        </field>
    </record>
    <record id="view_credit_limit_sale_search" model="ir.ui.view">
            <field name="name">credit.limit.sale.search</field>
            <field name="model">credit.limit.sale</field>
            <field name="arch" type="xml">
                <search string="Credit Limit">
                    <group expand="0" string="Group By">
                        <filter string="Type" name="group_type" domain="[]" context="{'group_by': 'group_type'}"/>
                    </group>
                </search>
        </field>
    </record>

    <record id="view_credit_limit_sale_form" model="ir.ui.view">
        <field name="name">credit.limit.sale.form</field>
        <field name="model">credit.limit.sale</field>
        <field name="arch" type="xml">
            <form string="Credit Limit Sales">
<!--                <header>-->
<!--                </header>-->
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="preview_credit_limit_by_sale_team"
                            type="object"
                            class="oe_stat_button" icon="fa-user">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Credit limit by Sale Team</span>
                            </div>
                        </button>
                        <button name="preview_sale_order"
                            type="object"
                            class="oe_stat_button" icon="fa-user">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Sale Orders</span>
                            </div>
                        </button>
                        <button name="preview_customer"
                            type="object"
                            class="oe_stat_button" icon="fa-user">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Customer</span>
                            </div>
                        </button>
                        <button name="preview_credit_limit"
                            type="object"
                            class="oe_stat_button" icon="fa-check-circle">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Credit Limit Approval</span>
                            </div>
                        </button>
                        <button name="preview_customer_cash"
                            type="object" invisible="1"
                            class="oe_stat_button" icon="fa-user">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Cash Limit</span>
                            </div>
                        </button>
                        <button name="preview_invoices"
                            type="object"
                            class="oe_stat_button" icon="fa-file-text-o">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Invoices</span>
                            </div>
                        </button>
                        <button name="preview_credit_approved"
                            type="object"
                            class="oe_stat_button" icon="fa-list">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Credit Approved</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group name="sale_header">
                        <group name="form_1">
                            <field name="total_credit" />
                            <field name="credit_limit_hold" />
                            <field name="group_type" />
                            <field name="remark_on_hold" />
                        </group>
                        <group name="form_2">
                            <field name="cash_limit" invisible="1"/>
                            <field name="credit_limit_remain_total"/>
                            <field name="cash_limit_remain_total" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Credit Limit by Sales" name="credit_line">
                            <field
                                name="credit_line"
                                widget="section_and_note_one2many"
                                mode="tree,kanban">
                                <form>
                                    <group>
                                        <field name="sale_team_id"/>
                                        <field name="member_ids" invisible="1"/>
                                        <field name="sale_user_id" options="{'no_create': True, 'no_open': True}"/>
                                        <field name="payment_term_id"/>
                                        <field name="credit_limit"/>
                                        <field name="quotation_amount"/>
                                        <field name="sale_order_amount"/>
                                        <field name="invoiced_amount_draft"/>
                                        <field name="invoiced_amount"/>
                                        <field name="credit_remain"/>
                                        <field name="credit_approval"/>
                                        <field name="note"/>
                                    </group>
                                </form>
                                <tree string="Credit Limit by Sales" editable="bottom">
                                    <field name="sale_team_id"/>
                                    <field name="member_ids" invisible="1"/>
                                    <field name="sale_user_id" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="payment_term_id"/>
                                    <field name="payment_method_id"/>
                                    <field name="credit_limit"/>
                                    <field name="quotation_amount"/>
                                    <field name="sale_order_amount"/>
                                    <field name="invoiced_amount_draft"/>
                                    <field name="invoiced_amount"/>
                                    <field name="credit_remain"/>
                                    <field name="credit_approval"/>
                                    <field name="note" string="หมายเหตุ"/>
                                </tree>
                            </field>
                            <group name="note_group" col="6" class="mt-2 mt-md-0">
                                <group colspan="4" string="Remark">
                                    <field name="note" nolabel="1" placeholder="ระบุหมายเหตุ….."/>
                                </group>
                            </group>
                        </page>
                        <page string="Credit Limit by Sales Person" name="credit_line_person">
                            <field
                                name="credit_line_person"
                                widget="section_and_note_one2many"
                                mode="tree,kanban">
                                <form>
                                    <group>
                                        <field name="sale_team_id"/>
                                        <field name="sale_employee_ids" invisible="1"/>
                                        <field name="department_id" force_save="1" readonly="1"/>
                                        <field name="sale_user_employee_id" options="{'no_create': True, 'no_open': True}"/>
                                        <field name="payment_term_id"/>
                                        <field name="payment_method_id"/>
                                    </group>
                                </form>
                                <tree string="Credit Limit by Sales" editable="bottom">
                                    <field name="sale_team_id"/>
                                    <field name="sale_employee_ids" invisible="1"/>
                                    <field name="department_id" force_save="1" readonly="1"/>
                                    <field name="sale_user_employee_id" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="payment_term_id"/>
                                    <field name="payment_method_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
              </form>
        </field>
    </record>

    <record id="action_action_credit_limit_sale" model="ir.actions.act_window">
        <field name="name">Credit Limit Sales</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">credit.limit.sale</field>
        <field name="view_id" ref="view_credit_limit_sale_tree"/>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
