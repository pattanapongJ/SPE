<odoo>
    <record id="view_picking_move_tree_quick_invoice" model="ir.ui.view">
        <field name="name">stock.move.tree.quick_invoice</field>
        <field name="model">stock.move</field>
        <field eval="50" name="priority"/>
        <field name="arch" type="xml">
            <tree decoration-danger="state != 'done' and quantity_done > reserved_availability and show_reserved_availability" decoration-muted="scrapped == True or state == 'cancel' or (state == 'done' and is_locked == True)" string="Stock Moves" editable="bottom">
                <field name="company_id" invisible="1"/>
                <field name="name" invisible="1"/>
                <field name="date" invisible="1"/>
                <field name="state" invisible="1" readonly="0"/>
                <field name="picking_type_id" invisible="1"/>
                <field name="location_dest_id" invisible="1"/>
                <field name="scrapped" invisible="1"/>
                <field name="picking_code" invisible="1"/>
                <field name="product_type" invisible="1"/>
                <field name="show_details_visible" invisible="1"/>
                <field name="show_reserved_availability" invisible="1"/>
                <field name="show_operations" invisible="1" readonly="1"/>
                <field name="additional" invisible="1"/>
                <field name="has_move_lines" invisible="1"/>
                <field name="is_locked" invisible="1"/>
                <field name="product_uom_category_id" invisible="1"/>
                <field name="product_id" required="1" attrs="{'readonly': ['|', '&amp;', ('state', '!=', 'draft'), ('additional', '=', False), ('has_move_lines', '=', True)]}"/>
                <field name="location_id" readonly="0"/>
                <field name="is_initial_demand_editable" invisible="1"/>
                <field name="is_quantity_done_editable" invisible="1"/>
                <field name="product_uom_qty" string="Demand" attrs="{'readonly': [('is_initial_demand_editable', '=', False)]}"/>
                <field name="reserved_availability" string="Reserved"/>
                <field name="quantity_done" string="Done" attrs="{'readonly': [('is_quantity_done_editable', '=', False)]}"/>
                <field name="product_uom" attrs="{'readonly': [('state', '!=', 'draft'), ('id', '!=', False)]}" options="{'no_open': True, 'no_create': True}" string="Unit of Measure" groups="uom.group_uom"/>
            </tree>
        </field>
    </record>

    <record id="search_urgent_delivery_form" model="ir.ui.view">
        <field name="name">search.urgent.delivery.form</field>
        <field name="model">search.urgent.delivery</field>
        <field name="arch" type="xml">
            <form string="Generate Urgent Delivery Transfer">
                <header>
                    <button name="action_search" type="object" string="Search" class="oe_highlight" />
                    <button name="action_clear" type="object" string="Clear all"/>
                    <button name="action_create" type="object" string="Create Urgent Delivery Transfer" class="oe_highlight" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="is_urgent"/>
                        </group>
                        <group>
                            <field name="is_not_urgent"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Transfer Lists">
                            <field name="line_ids">
                                <tree string="Transfer Lists" editable="bottom" delete="1" create="0">
                                    <field name="picking_id"/>
                                    <field name="partner_id"/>
                                    <field name="warehouse_id"/>
                                    <field name="location_id"/>
                                    <field name="is_urgent"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="search_urgent_delivery_form_action" model="ir.actions.act_window">
        <field name="name">Generate Urgent Delivery Transfer</field>
        <field name="res_model">search.urgent.delivery</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="search_urgent_delivery_form"/>
    </record>

    <record id="urgent_delivery_tree" model="ir.ui.view">
        <field name="name">urgent.delivery.tree</field>
        <field name="model">urgent.delivery</field>
        <field name="arch" type="xml" >
            <tree create="false" duplicate="false">
                <field name="name"/>
                <field name="date" />
                <field name="delivery_date" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="urgent_delivery_form" model="ir.ui.view">
        <field name="name">urgent.delivery.form</field>
        <field name="model">urgent.delivery</field>
        <field name="arch" type="xml">
            <form string="Urgent Delivery" create="false" duplicate="false">
                <header>
                    <field name="delivery_check" invisible="1"/>
                    <field name="receipt_check" invisible="1"/>
                    <button name="action_open_wizard_add_urgent_delivery" states="in_progress" type="object" string="Add Urgent Delivery" class="oe_highlight" />
                    <button name="action_open_wizard_remove_urgent_delivery" states="in_progress" type="object" string="Remove Urgent Delivery" class="oe_highlight" />
                    <button name="action_open_urgent_delivery_lines" type="object" string="Urgent Delivery Transfer Lines" class="oe_highlight" />
                    <button name="create_delivery" type="object" string="Create Delivery" class="oe_highlight" attrs="{'invisible': [('delivery_check', '=', True)]}"/>
                    <button name="button_update_qty_from_delivery" type="object" string="Update Demand From Delivery" class="oe_highlight" attrs="{'invisible': ['|',('receipt_check', '=', True),('delivery_check', '=', False)]}"/>
                    <button name="create_receipt" type="object" string="Create Receipt" class="oe_highlight" attrs="{'invisible': ['|',('receipt_check', '=', True),('delivery_check', '=', False)]}"/>
                    <button name="action_cancel" states="draft,in_progress" type="object" string="Cancel" class="oe_highlight" />
                    <field name="state" widget="statusbar" statusbar_visible="in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" string="Transfer" name="action_inter" type="object" icon="fa-truck">
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group name="picking_lists_header">
                        <group>
                            <field name="user_id" readonly="1"/>
                            <field name="from_warehouse" required="1"/>
                            <field name="transit_location" required="1"/>
                            <field name="location_dest_id" required="1"/>
                        </group>
                        <group>
                            <field name="to_warehouse" required="1"/>
                            <field name="date" readonly="1"/>
                            <field name="delivery_date" readonly="1"/>
                            <field name="picking_ids" invisible="1"/>
                            <field name="location_id" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Picking Lists">
                            <field name="picking_list_ids">
                                <tree editable="bottom" create="0" delete="0">
                                    <field name="name" readonly="1"/>
                                    <field name="partner_id" readonly="1"/>
                                    <field name="date" readonly="1"/>
                                    <field name="delivery_date" readonly="1"/>
                                    <field name="checker" readonly="1"/>
                                    <field name="state" readonly="1"/>
                                </tree>
                            </field>
                            <group string="Remark" name="remark_group">
                                <div>
                                    <field name="remark" class="oe_inline"/>
                                </div>
                            </group>
                        </page>
                        <page string="Product Lists">
                            <field name="urgent_delivery_line" attrs="{'readonly': [('delivery_check', '=', True)]}">
                                <tree editable="bottom" create="0" delete="0">
                                    <field name="urgent_delivery_id" invisible="1"/>
                                    <field name="product_id" readonly="1" force_save="1"/>
                                    <field name="qty"/>
                                    <field name="urgent_pick" readonly="1" force_save="1"/>
                                    <field name="qty_remain" readonly="1" force_save="1"/>
                                    <field name="urgent_location_ids" string="Urgent Location" widget="many2many_tags" readonly="1" force_save="1"/>
                                    <field name="picking_list_ids" string="Picking Lists" widget="many2many_tags" readonly="1" force_save="1"/>
                                    <field name="product_uom" readonly="1" force_save="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="urgent_delivery_form_action" model="ir.actions.act_window">
        <field name="name">Urgent Delivery Transfer</field>
        <field name="res_model">urgent.delivery</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="urgent_delivery_tree"/>
    </record>

    <menuitem name="Urgent Delivery Transfer" id='menu_urgent_delivery' parent="sale.sale_menu_root" sequence="2"/>
    <menuitem
        action="search_urgent_delivery_form_action"
        id="search_urgent_delivery_menu"
        parent="menu_urgent_delivery" sequence="1"/>
    <menuitem
        action="urgent_delivery_form_action"
        id="urgent_delivery_menu"
        parent="menu_urgent_delivery" sequence="2"/>

    <menuitem name="Urgent Delivery Transfer" id='picking_list_menu_urgent_delivery' parent="hdc_inventory_picking_list_sale.menu_picking_list_main_root" sequence="10"/>
    <menuitem
        action="search_urgent_delivery_form_action"
        id="picking_list_search_urgent_delivery_menu"
        parent="picking_list_menu_urgent_delivery" sequence="1"/>
    <menuitem
        action="urgent_delivery_form_action"
        id="picking_list_urgent_delivery_menu"
        parent="picking_list_menu_urgent_delivery" sequence="2"/>


</odoo>