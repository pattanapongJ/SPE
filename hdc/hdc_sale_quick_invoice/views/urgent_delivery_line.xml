<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Menu Item -->
    <menuitem
        id="menu_urgent_delivery"
        name="Urgent Delivery Transfer"
        parent="sale.sale_menu_root"
        sequence="2" />

    <!-- Action -->
    <record id="action_urgent_delivery_line" model="ir.actions.act_window">
        <field name="name">Urgent Delivery Lines</field>
        <field name="res_model">urgent.delivery.line</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                urgent delivery lines
            </p>
        </field>
    </record>

    <!-- Bind Action to Menu -->
    <menuitem
        id="menu_urgent_delivery_line"
        name="Urgent Delivery Lines"
        parent="menu_urgent_delivery"
        action="action_urgent_delivery_line"
        sequence="30"/>

    <menuitem
        id="picking_list_menu_urgent_delivery_line"
        name="Urgent Delivery Lines"
        parent="hdc_sale_quick_invoice.picking_list_menu_urgent_delivery"
        action="action_urgent_delivery_line"
        sequence="30"/>

    <!-- Tree View -->
    <record id="view_urgent_delivery_line_tree" model="ir.ui.view">
        <field name="name">urgent.delivery.line.tree</field>
        <field name="model">urgent.delivery.line</field>
        <field name="arch" type="xml">
            <tree string="Urgent Delivery Lines">
                <field name="urgent_delivery_id" invisible="1"/>
                <field name="ud_name"/>
                <field name="partner_ids" widget="many2many_tags"/>
                <field name="ud_state"/>
                <field name="product_id"/>
                <field name="qty"/>
                <field name="urgent_pick"/>
                <field name="qty_remain"/>
                <field name="urgent_location_ids" widget="many2many_tags"/>
                <field name="picking_list_ids" widget="many2many_tags"/>
                <field name="product_uom"/>
                <field name="ud_date"/>
                <field name="ud_delivery_date"/>
            </tree>
        </field>
    </record>

    <record id="view_urgent_delivery_line_search" model="ir.ui.view">
        <field name="name">urgent.delivery.line.search</field>
        <field name="model">urgent.delivery.line</field>
        <field name="arch" type="xml">
            <search string="Search Urgent Delivery Lines">
                <field name="ud_name"/>
                <field name="ud_state"/>
                <field name="product_id"/>
                <field name="urgent_pick"/>
                <field name="urgent_location_ids"/>
                <field name="picking_list_ids"/>
                <field name="ud_date"/>
                <field name="ud_delivery_date"/>
            </search>
        </field>
    </record>


