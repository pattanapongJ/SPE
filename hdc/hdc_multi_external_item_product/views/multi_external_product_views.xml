<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="multi_external_product_tree_view" model="ir.ui.view">
        <field name="name">multi.external.product.tree</field>
        <field name="model">multi.external.product</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" sample="1">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="product_description"/>
                <field name="barcode"/>
                <field name="qty_package"/>
                <field name="package"/>
                <field name="note"/>                
            </tree>
        </field>
    </record>

    <record id="multi_external_product_form_view" model="ir.ui.view">
        <field name="name">multi.external.product.form</field>
        <field name="model">multi.external.product</field>
        <field name="arch" type="xml">
            <form string="Multi External Item Product">
                <sheet>
                    <group name="external_product_header">
                        <group name="external_product_detail1">
                            <field name="product_tmpl_id"/>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="product_description"/>
                        </group>
                        <group name="external_product_detail2">
                            <field name="barcode"/>
                            <field name="barcode_modern_trade"/>
                            <field name="qty_package"/>
                            <field name="package"/>
                            <field name="uom_id"/>
                        </group>
                    </group>
                    <group name="external_product_footer">
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="multi_external_product_action" model="ir.actions.act_window">
        <field name="name">Multi External Item Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">multi.external.product</field>  
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="multi_external_product_tree_view"/>
    </record>

        <!-- Menu Item -->
    <menuitem
        id="menu_multi_external_product"
        name="Multi External Item Product"
        parent="stock.menu_stock_config_settings"
        action="multi_external_product_action"
        sequence="155"/>
</odoo>