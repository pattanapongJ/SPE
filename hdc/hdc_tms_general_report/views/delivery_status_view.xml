<?xml version="1.0"?>
<odoo>
    <record id="delivery_status_master_view_tree" model="ir.ui.view">
        <field name="name">delivery.status.tree</field>
        <field name="model">delivery.status</field>
        <field name="arch" type="xml">
            <tree string="Delivery Status">
                <field name="name"/>                
            </tree>
        </field>
    </record>
    
    <record id="delivery_status_master_view_form" model="ir.ui.view">
        <field name="name">delivery.status.view.form</field>
        <field name="model">delivery.status</field>
        <field name="arch" type="xml">
            <form string="Delivery Status">
                <sheet>
                    <field name="name" />
                </sheet>
            </form>
        </field>
    </record>

    <record id="delivery_status_master_view_action" model="ir.actions.act_window">
        <field name="name">Delivery Status</field>
        <field name="res_model">delivery.status</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Define a new Delivery Status
          </p>
        </field>
    </record>  

    <menuitem id="menu_delivery_status_round" name="Delivery Status"
    parent="hdc_tms.menu_resupply_delivery_round_main"
    action="delivery_status_master_view_action" sequence="8" />
    
</odoo>
