<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_quant_tree_editable_inherit_custom" model="ir.ui.view">
        <field name="name">stock.quant.tree.editable.inherit.custom</field>
        <field name="model">stock.quant</field>
        <!-- สืบทอดจากวิวของ stock โดยตรง -->
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <!-- ตั้ง priority สูง เพื่อให้ประมวลผลหลังจากวิวอื่นๆ -->
        <field name="priority" eval="99"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='product_id']" position="before">
                <field name="product_default_code"/>
            </xpath>

            <xpath expr="//tree/field[@name='product_id']" position="after">
                <field name="product_categ_id"/>
                <field name="product_barcode"/>
            </xpath>
        </field>
    </record>

     <record id="view_quant_search_inherit_custom" model="ir.ui.view">
        <field name="name">stock.quant.search.inherit.custom</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.quant_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <field name="product_default_code" string="Internal Reference"/>
                <field name="product_barcode" string="Barcode"/>
                <field name="product_categ_id" string="Product Category"/>

                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_by_product_categ"
                            string="Category"
                            context="{'group_by':'product_categ_id'}"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
