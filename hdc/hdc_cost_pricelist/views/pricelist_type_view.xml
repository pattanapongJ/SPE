<?xml version="1.0" ?>
<odoo>
    <record id="type_pricelist_view_tree" model="ir.ui.view">
        <field name="name">pricelist.type.tree</field>
        <field name="model">pricelist.type</field>
        <field name="arch" type="xml">
            <tree string="Pricelist Type" editable="bottom">
                <field name="name" invisible="1"/>
                <field name="factor"/>
                <field name="pricelist_type" />
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="type_pricelist_action" model="ir.actions.act_window">
        <field name="name">Pricelist Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pricelist.type</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="type_pricelist_view_tree"/>
    </record>
    <menuitem id="menu_pricelist_type"
        name="Pricelist Type" parent="root_pricelist_configuration"
        action="type_pricelist_action" sequence="2" active="True"/>

    <record id="view_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- <xpath expr="//group[@name='group_standard_price']" position="after">
                <group string="Source" name="source">
						<label for="source"/>
						<div>
							<field name="source" class="mb-0" widget="radio"/>
                            <div attrs="{'invisible': [('source', '=', 'domestic')]}">
                                <i class="fa fa-arrow-right oe_inline"/>
                                <field name="country_source" class="ml-1 oe_inline" />
                            </div>
						</div>
					</group>
            </xpath> -->
            <xpath expr="//page[@name='general_information']" position="after">
                <page name="source_history" string="Source History">
                    <field name="source_history_ids" widget="one2many_list">
                        <tree create="0" edit="0" delete="0">
                            <field name="source_from"/>
                            <field name="source_to"/>
                            <field name="last_updated"/>
                            <field name="user_id"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>