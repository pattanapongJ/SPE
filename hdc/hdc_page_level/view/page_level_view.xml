<odoo>
    <!-- Form View -->
    <record id="view_page_level_form" model="ir.ui.view">
        <field name="name">product.page.level.form</field>
        <field name="model">product.page.level</field>
        <field name="arch" type="xml">
            <form string="Page Level">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="page_lv"/>
                            <field name="responsible_id"/>
                        </group>
                        <group>
                            <field name="code"/>
                            <field name="description"/>
                        </group>
                    </group>
                    <separator string="Notes"/>
                    <field name="note" placeholder="..."/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_page_level_tree" model="ir.ui.view">
        <field name="name">product.page.level.tree</field>
        <field name="model">product.page.level</field>
        <field name="arch" type="xml">
            <tree string="Page Level">
                <field name="page_lv"/>
                <field name="code"/>
                <field name="description"/>
                <field name="responsible_id"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_page_level_search" model="ir.ui.view">
        <field name="name">product.page.level.search</field>
        <field name="model">product.page.level</field>
        <field name="arch" type="xml">
            <search string="Page Level">
                <field name="page_lv"/>
                <field name="code"/>
                <field name="description"/>
                <field name="responsible_id"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_page_level" model="ir.actions.act_window">
        <field name="name">Page Level</field>
        <field name="res_model">product.page.level</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- <menuitem action="action_page_level" id="menu_page_level_inv"
        parent="stock.menu_stock_inventory_control"
        sequence="156"/> -->
    
    <menuitem
        id="menu_reason_scrap"
        name="Page Level"
        parent="stock.menu_stock_config_settings"
        action="action_page_level"
        sequence="152"/>
</odoo>