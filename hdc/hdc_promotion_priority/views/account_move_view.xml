<?xml version="1.0"?>
<odoo>
    <record id="view_account_form_inherit_promotion" model="ir.ui.view">
        <field name="name">account.move.form.inherit.promotion</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="hdc_sale_triple_discount.view_view_move_form_inherit_discount"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@id='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='triple_discount']" position="before">
                <field name="promotion_discount" optional="hide" force_save="1"/>
            </xpath>
            <xpath expr="//page[@id='aml_tab']/field[@name='line_ids']/tree/field[@name='triple_discount']" position="before">
                <field name="promotion_discount" invisible="1" force_save="1"/>
            </xpath>
        </field>
    </record>
</odoo>
