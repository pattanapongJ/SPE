<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hdc_product_ref_quotation_view_inherit" model="ir.ui.view">
        <field name="name">quotation.order.form.product_ref</field>
        <field name="model">quotation.order</field>
        <field name="inherit_id" ref="hdc_quotation_order.view_quotation_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='quotation_line']/tree/field[@name='product_id']" position="before">
                <field name="product_ref" optional="show" force_save="1" />
            </xpath>      
        </field>
    </record>
</odoo>
