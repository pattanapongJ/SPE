<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hdc_product_ref_sale_agreement_view_inherit" model="ir.ui.view">
        <field name="name">sale.blanket.order.form.inherit.product_ref</field>
        <field name="model">sale.blanket.order</field>
        <field name="inherit_id" ref="sale_blanket_order.view_blanket_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree/field[@name='product_id']" position="before">
                <field name="product_ref" force_save="1" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
