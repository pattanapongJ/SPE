<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_down_payments" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='down_payments']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="deduct_down_payments">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Deduct Down Payments</span>
                        <div class="text-muted">
                            Product used for Deduct down payments
                        </div>
                        <div class="text-muted">
                            <field name="deduct_default_product_id" context="{'default_type': 'service'}"/>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>



</odoo>
