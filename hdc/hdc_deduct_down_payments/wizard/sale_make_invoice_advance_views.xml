<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sale_advance_payment_inv_form_inherit" model="ir.ui.view">
        <field name="name">sale.advance.payment.inv.form.inherit</field>
        <field name="model">sale.advance.payment.inv</field>
        <field name="inherit_id" ref="sale.view_sale_advance_payment_inv"/>
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='product_id']" position="before">
                <field name="product_deduct_id"
                            context="{'default_invoice_policy': 'order'}" class="oe_inline"
                            invisible="1"/>
                <label for="deposit_no" string="" attrs="{'invisible': [('advance_payment_method', '!=', 'deduct')]}"/>
                <div attrs="{'invisible': [('advance_payment_method', '!=', 'deduct')]}" id="down_payment_details">
                    <group name="deposit">
                        <field name="deposit_no" options="{'no_create': True}" attrs="{'required': [('advance_payment_method', '=', 'deduct')]}"/>
                        <field name="deduct_percentage" />
                        <field name="deduct_fixed_amount"/>
                    </group>
                </div>
            </xpath>
            <xpath expr="//group" position="after">
                <group string="Down payment" attrs="{'invisible': [('advance_payment_method', '!=', 'deduct')]}">
                    <field name="total_down_payment" readonly="1"/>
                    <field name="balance_down_payment" readonly="1"/>
                    <field name="deduct_amount" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
