<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="remark_oversea_sale_type_view_form" model="ir.ui.view">
            <field name="name">sale.order.type.form.inherit.hdc_sale_type</field>
            <field name="model">sale.order.type</field>
            <field name="priority">20</field>
            <field name="inherit_id" ref="sale_order_type.sot_sale_order_type_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[2]/group[1]" position="inside">
                    <field name="team_ids" invisible="1"/>
                    <field name="show_remark_oversea"/>
                    <field name="remark_oversea"/>
                </xpath>
            </field>
        </record>

        <record id="remark_oversea_sale_view_form" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='customer_signature']" position="after">
                    <page string="Remark Oversea" name="remark_oversea_page">
                        <field name="remark_oversea">
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>