<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
        <xpath expr="//div[@id='no_edit_order']" position="after">
            <div class="col-12 col-lg-6 o_setting_box" id="remark_oversea_th">
                <div class="o_setting_left_pane">
                    <field name="remark_oversea_th" string="Default Remark Oversea"/>
                </div>
                <div class="o_setting_right_pane">
                    <label for="remark_oversea_text_th"/>
                    <div class="text-muted">
                        <field name="remark_oversea_text_th" widget="textarea"/>
                    </div>
                </div>
            </div>
        </xpath>


        </field>
    </record>

</odoo>
