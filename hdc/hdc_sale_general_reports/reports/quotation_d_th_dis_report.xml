<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hdc_q_d_th_dis_report_document">
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <div class="header" style="font-family: KanitLight;" >
            <span t-if="doc.state in ['cancel']">
                <div class="row">
                    <div class="col-2 text-left">
                        <t t-call="hdc_sale_general_reports.report_logo_style"/>
                    </div>
                    <div class="col-6 text-left" style="font-size: 12.12px;">
                        <span style="font-size: 16.67px; font-weight: bold;"><t t-esc="company.name_th"/></span><br/>
                        <span style="font-size: 16.67px; font-weight: bold;"><t t-esc="company.name"/></span><br/>
                        <span t-field="doc.type_id.branch_id.address"/><br/>
                        <span style="">โทร: +<t t-esc="doc.type_id.branch_id.telephone"/></span><span style=""> แฟกซ์: +<t t-esc="doc.type_id.branch_id.fax_no"/></span> <br/>
                        <span style="">เลขประจำตัวผู้เสียภาษีอากร: <t t-esc="company.vat"/></span>
                        <span style="">
                            <t t-if="doc.type_id.branch_id.is_head_office">
                                <span t-field="doc.type_id.branch_id.name"/>
                            </t>
                            <t t-else="">
                                สาขาที่: <span t-field="doc.type_id.branch_id.branch_no"/>
                            </t>
                        </span>
                        <br/>
                    </div>
                    <div class="col-1 text-nowrap" style="margin-right:0mm;margin-top:3mm;">
                        <div style="font-size: 28.18px; font-weight: bold; color: red; text-align: center; padding-bottom: 10px;">
                            <span style="display: inline-block; border-bottom: 3px solid red; padding-bottom: 3px; position: relative;">
                                <strong>ยกเลิก</strong>
                                <span style="display: block; border-bottom: 2px solid red; position: absolute; bottom: -5px; width: 100%;"></span>
                            </span>
                        </div>
                    </div>
                    <div class="col-3 text-right"  style="margin-right:0mm;margin-top:3mm">
                        <div style="font-size: 18.18px; font-weight: bold;" >
                            <span><strong>ใบเสนอราคา/แจ้งหนี้</strong></span><br/>
                            <span><strong>(Quotation/Invoice)</strong></span><br/>
                        </div>
                        <div style="font-size: 18.18px; font-weight: bold;" >
                            <span>ต้นฉบับ/Original</span><br/>
                            <span>หน้า </span>
                            <span class="page"/>
                            /
                            <span class="topage"/>
                        </div>
                    </div>
                </div>
            </span>
            <span t-else="">
                <div class="row">
                    <div class="col-2 text-left">
                        <t t-call="hdc_sale_general_reports.report_logo_style"/>
                    </div>
                    <div class="col-7 text-left" style="font-size: 12.12px;">
                        <span style="font-size: 16.67px; font-weight: bold;"><t t-esc="company.name_th"/></span><br/>
                        <span style="font-size: 16.67px; font-weight: bold;"><t t-esc="company.name"/></span><br/>
                        <span t-field="doc.type_id.branch_id.address"/><br/>
                        <span style="">โทร: +<t t-esc="doc.type_id.branch_id.telephone"/></span><span style=""> แฟกซ์: +<t t-esc="doc.type_id.branch_id.fax_no"/></span> <br/>
                        <span style="">เลขประจำตัวผู้เสียภาษีอากร: <t t-esc="company.vat"/></span>
                        <span style="">
                            <t t-if="doc.type_id.branch_id.is_head_office">
                                <span t-field="doc.type_id.branch_id.name"/>
                            </t>
                            <t t-else="">
                                สาขาที่: <span t-field="doc.type_id.branch_id.branch_no"/>
                            </t>
                        </span>
                        <br/>
                    </div>
                    <div class="col-3 text-right"  style="margin-right:0mm;margin-top:3mm">
                        <div style="font-size: 18.18px; font-weight: bold;" >
                            <span><strong>ใบเสนอราคา/แจ้งหนี้</strong></span><br/>
                            <span><strong>(Quotation/Invoice)</strong></span><br/>
                        </div>
                        <div style="font-size: 18.18px; font-weight: bold;" >
                            <span>ต้นฉบับ/Original</span><br/>
                            <span>หน้า </span>
                            <span class="page"/>
                            /
                            <span class="topage"/>
                        </div>
                    </div>
                </div>
            </span>


            <!-- <br/> -->
            <div class="row" style="font-size: 13.64px;margin-bottom:0mm;margin-top:1mm;border-top: 1px solid black;border-bottom: 1px solid black;height: 188px">                
                <div class="col-6">
                    <div class="row">
                        <div class="col-3">
                            <span><strong>ชื่อ: </strong></span>
                        </div>
                        <div class="col-9">
                            <span t-if="doc.partner_id.name">
                                <span t-field="doc.partner_id.name"/>
                            </span>
                            <span t-if="not doc.partner_id.name">
                                -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <span><strong>ผู้ติดต่อ: </strong></span>
                        </div>
                        <div class="col-9">
                            <span t-if="doc.contact_person">
                                <span t-field="doc.contact_person.name"/>
                            </span>
                            <span t-if="not doc.contact_person">
                                -
                            </span>
                        </div>
                    </div>
                    <div class="row" style="max-height:93px;overflow: hidden;">
                       <div class="col-3">
                           <span><strong>ที่อยู่: </strong></span>
                       </div>
                       <div class="col-9">
                           <span t-if="doc.partner_id.street">
                               <span t-field="doc.partner_id.street"/>
                           </span>
                           <span t-if="doc.partner_id.street2">
                               <span t-field="doc.partner_id.street2"/>
                           </span>
                           <span t-if="doc.partner_id.sub_district">
                               <span t-field="doc.partner_id.sub_district"/>
                           </span>
                           <span t-if="doc.partner_id.city">
                               <span t-field="doc.partner_id.city"/>
                           </span>
                           <span t-if="doc.partner_id.state_id.name">
                               <span t-field="doc.partner_id.state_id.name"/>
                           </span>
                           <span t-if="doc.partner_id.zip">
                               <span t-field="doc.partner_id.zip"/>
                           </span>
                       </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <span><strong>โทร: </strong></span>
                        </div>
                        <div class="col-9">
                            <span t-if="doc.partner_id.phone">
                                <span t-field="doc.partner_id.phone"/>
                            </span>
                            <span t-if="not doc.partner_id.phone">
                                -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                           <span><strong>อีเมลล์: </strong></span>
                        </div>
                        <div class="col-9">
                            <span t-if="doc.partner_id.email">
                                <span t-field="doc.partner_id.email"/>
                            </span>
                            <span t-if="not doc.partner_id.email">
                                -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <span><strong>แฟกซ์: </strong></span>
                        </div>
                        <div class="col-9">
                            <span t-if="doc.partner_id.fax">
                                <span t-field="doc.partner_id.fax"/>
                            </span>
                            <span t-if="not doc.partner_id.fax">
                                -
                            </span>
                        </div>
                    </div>
                </div>

                <div class="col-6">
                    <div class="row">
                        <div class="col-5">
                            <span><strong>เลขที่เอกสาร:</strong></span>
                        </div>
                        <div class="col-7">
                            <span>
                               <t t-esc="name_revision" />
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            <span><strong>วันที่เอกสาร:</strong></span>
                        </div>
                        <div class="col-7">
                            <span t-if="doc.create_date">
                                <t t-esc="doc.create_date.strftime('%d/%m/%Y')" />
                            </span>
                            <span t-if="not doc.create_date">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            <span><strong>พนักงานขาย:</strong></span>
                        </div>
                        <div class="col-7">
                           <span t-if="doc.user_employee_id">
                               <t t-esc="doc.user_employee_id.name" />
                            </span>
                            <span t-if="not doc.user_employee_id">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            <span><strong>โทร:</strong></span>
                        </div>
                        <div class="col-7">
                            <span t-if="doc.user_id">
                               <span t-field="doc.user_id.phone"/>
                            </span>
                            <span t-if="not doc.user_id.phone">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            <span><strong>พนักงานวางสเปค:</strong></span>
                        </div>
                        <div class="col-7">
                            <span t-if="doc.sale_spec_employee">
                               <span t-field="doc.sale_spec_employee.name"/> 
                            </span>
                            <span t-if="not doc.sale_spec_employee">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            <span><strong>กำหนดหมดอายุ:</strong></span>
                        </div>
                        <div class="col-7">
                            <!-- <span t-if="doc.offer_validation">
                               <t t-esc="doc.offer_validation.name" />
                            </span>
                            <span t-if="not doc.offer_validation">
                               -
                            </span> -->
                            <span t-if="doc.validity_date">
                               <t t-esc="doc.validity_date.strftime('%d/%m/%Y')" />
                            </span>
                            <span t-if="not doc.validity_date">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            <span><strong>เงื่อนไขการชำระเงิน:</strong></span>
                        </div>
                        <div class="col-7">
                            <span t-if="doc.payment_term_id">
                               <t t-esc="doc.payment_term_id.name" />
                            </span>
                            <span t-if="not doc.payment_term_id">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            <span><strong>กำหนดส่งสินค้า:</strong></span>
                        </div>
                        <div class="col-7">
                            <span><t t-esc="doc.days_delivery"/> วัน/หลังจากวันที่ได้รับใบสั่งซื้อ</span>
                        </div>
                    </div>
                    <!-- <div class="row">
                        <div class="col-5">
                            <span><strong>วันที่กำหนดส่ง:</strong></span>
                        </div>
                        <div class="col-7">
                            <span t-if="doc.date_order">
                               <t t-esc="doc.date_order.strftime('%d/%m/%Y')" />
                            </span>
                            <span t-if="not doc.date_order">
                               -
                            </span>
                        </div>
                    </div> -->
                    
        
                    
                </div>
            </div>
        </div>

        <!-- <div class="row" style="font-size: 15px;margin-bottom:3mm;margin-top:3mm;border-top: 1px solid black;border-bottom: 1px solid black;max-height: 10px;height: 10px;"></div> -->
        <div class="article" 
        style="font-family: KanitLight;" 
        t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <div class="row" >
         
                <t t-set="l_no" t-value="0"/>
                <table class="table" style="font-size: 13.64px;line-height: 18px">
                    <thead style="background-color:#ECECEC">
                        <tr>
                            <th class="text-center" style="width: 6%;">ลำดับ</th>
                            <t t-if="not description_type">
                                <th class="text-center" style="width: 20%;">รหัสสินค้า</th>
                                <th class="text-center" style="width: 28%;">รายละเอียด</th>
                            </t>
                            <t t-elif="description_type == 'name_product'">
                                <th class="text-center" style="width: 48%;">ชื่อสินค้า</th>
                            </t>
                            <t t-elif="description_type == 'pic_name_product'">
                                <th class="text-center" style="width: 20%;">รูปภาพ/ชื่อสินค้า</th>
                                <th class="text-center" style="width: 28%;">รายละเอียด</th>
                            </t>
                            <t t-elif="description_type == 'ex_barcode_name_product'">
                                <th class="text-center" style="width: 20%;">บาร์โค็ต/รหัสสินค้า/ชื่อสินค้า</th>
                                <th class="text-center" style="width: 28%;">รายละเอียด</th>
                            </t>
                            <t t-elif="description_type == 'ex_name_product'">
                                <th class="text-center" style="width: 20%;">รหัสสินค้า/ชื่อสินค้า</th>
                                <th class="text-center" style="width: 28%;">รายละเอียด</th>
                            </t>
                            <t t-elif="description_type == 'barcode_name_product'">
                                <th class="text-center" style="width: 18%;">บาร์โค็ต/ชื่อสินค้า</th>
                                <th class="text-center" style="width: 20%;">รายละเอียด</th>
                            </t>
                            <!-- <th class="text-center" style="width: 28%;">รายละเอียด</th> -->
                            <th class="text-center" style="width: 8%;">จำนวน</th>
                            <th class="text-center" style="width: 8%;">หน่วย</th>
                            <th class="text-center" style="width: 11%;">ราคาขาย</th>
                            <th class="text-center" style="width: 6%;">ส่วนลด</th>
                            <th class="text-center" style="width: 6%;">จำนวนเงิน</th>
                            <!-- <th class="text-center" style="width: 19%;">มูลค่าก่อนภาษี</th> -->
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="set_no_vat" t-value="0"/>
                        <t t-set="set_vat" t-value="0"/>
                        <t t-set="set_dis" t-value="0"/>
                        <t t-foreach="o.order_line" t-as="ol" >
                            <t t-if="ol.display_type in ['line_section', 'line_note']">
                                <tr>
                                    <td></td>
                                    <td colspan="7" class="text-left" >
                                        <span t-if="ol.name">
                                            <t t-if="ol.display_type == 'line_note'">
                                                <em>
                                                    <span t-field="ol.name"/>
                                                </em>
                                            </t>
                                            <t t-if="ol.display_type == 'line_section'">
                                                <strong><span t-field="ol.name"/></strong>
                                            </t>
                                        </span>
                                        <span t-if="not ol.name">
                                            -
                                        </span>
                                    </td>
                                </tr>
                            </t>
                            <t t-if="not ol.display_type in ['line_section', 'line_note']">
                                <t t-if="not ol.product_id == doc.default_product_global_discount">
                                    <tr>
                                        <td class="text-center">
                                            <t t-set="l_no" t-value="l_no + 1"/>
                                            <t t-esc="l_no"/>
                                        </td>
                                        <t t-if="description_type == 'name_product'">
                                            <td class="text-left">
                                                <span t-if="ol.product_id.name">
                                                    <span t-field="ol.product_id.name"/>
                                                </span>
                                                <span t-if="not ol.product_id.name">
                                                    -
                                                </span>
                                            </td>
                                        </t>
                                        <t t-elif="description_type == 'pic_name_product'">
                                            <td class="text-left">
                                                <span t-if="ol.product_id.image_256">
                                                    <img t-if="ol.product_id.image_256" t-att-src="'data:image/png;base64,%s' % to_text(ol.product_id.image_256)" style="max-height: 96px; max-width: 96px;" /><br/> 
                                                    <!-- <span t-field="ol.name"/> -->
                                                </span>
                                                <span t-if="not ol.product_id.image_256">
                                                    -
                                                </span>
                                            </td>
                                            <td class="text-left">
                                                <span t-if="ol.name">
                                                    <span t-field="ol.name"/>
                                                </span>
                                                <span t-if="not ol.name">
                                                    -
                                                </span>
                                            </td>
                                        </t>
                                        <t t-elif="description_type == 'barcode_name_product'">

                                            <t t-set="filtered_barcodes" t-value="ol.product_id.product_tmpl_id.barcode_spe_ids.filtered(lambda b: b.partner_id == doc.partner_id and b.product_tmpl_id == ol.product_id.product_tmpl_id)" />
                                            <t t-if="filtered_barcodes">
                                                <td class="text-left">
                                                    <span>
                                                        <!-- ใช้ t-foreach สำหรับวนลูปผลลัพธ์ -->
                                                        <t t-foreach="filtered_barcodes" t-as="barcode1">
                                                            <!-- <span t-field="barcode1.external_code" /> -->
                                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=%s' % ('Code128', barcode1.external_code, 400, 100, 0)" style="height:30px" alt="Barcode"/>
                                                        </t>
                                                    </span>
                                                </td>
                                                <td class="text-left">
                                                    <span t-if="ol.name">
                                                        <span t-field="ol.name" />
                                                    </span>
                                                    <span t-if="not ol.name">
                                                        -
                                                    </span>
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td class="text-left">
                                                    <span t-if="ol.product_id.barcode">
                                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=%s' % ('Code128', ol.product_id.barcode, 400, 100, 0)" style="height:30px" alt="Barcode"/>
                                                    </span>
                                                    <span t-if="not ol.product_id.barcode">
                                                        
                                                    </span>
                                                </td>
                                                <td class="text-left">
                                                    <span t-if="ol.name">
                                                        <span t-field="ol.name"/>
                                                    </span>
                                                    <span t-if="not ol.name">
                                                        -
                                                    </span>
                                                </td>
                                            </t>
                                        </t>
                                        <t t-elif="description_type == 'ex_barcode_name_product'">
                                            <t t-set="filtered_barcodes" t-value="ol.product_id.product_tmpl_id.barcode_spe_ids.filtered(lambda b: b.partner_id == doc.partner_id and b.product_tmpl_id == ol.product_id.product_tmpl_id)" />
                                            <t t-if="filtered_barcodes">
                                                <td class="text-left">
                                                    <span>
                                                        <!-- ใช้ t-foreach สำหรับวนลูปผลลัพธ์ -->
                                                        <t t-foreach="filtered_barcodes" t-as="barcode1">
                                                            <!-- <span t-field="barcode1.external_code" /> -->
                                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=%s' % ('Code128', barcode1.external_code, 400, 100, 0)" style="height:30px" alt="Barcode"/>
                                                        </t>
                                                    </span>
                                                </td>
                                                <td class="text-left">
                                                    <span t-if="ol.name">
                                                        <t t-foreach="filtered_barcodes" t-as="barcode1">
                                                            <span t-field="barcode1.external_code" />
                                                        </t>
                                                        <br />
                                                        <span t-field="ol.name" />
                                                    </span>
                                                    <span t-if="not ol.name">
                                                        -
                                                    </span>
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td class="text-left">
                                                    <span t-if="ol.product_id.barcode">
                                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=%s' % ('Code128', ol.product_id.barcode, 400, 100, 0)" style="height:30px" alt="Barcode"/>
                                                    </span>
                                                    <span t-if="not ol.product_id.barcode">
                                                        
                                                    </span>
                                                </td>
                                                <td class="text-left">
                                                    <span t-if="ol.name">
                                                        <span t-field="ol.product_id.default_code"/><br/>
                                                        <span t-field="ol.name"/>
                                                    </span>
                                                    <span t-if="not ol.name">
                                                        -
                                                    </span>
                                                </td>
                                            </t>
                                        </t>
                                        <t t-elif="description_type == 'ex_name_product'">
                                            <td class="text-left">
                                                <span t-if="ol.name">
                                                    <span t-field="ol.product_id.default_code"/>
                                                </span>
                                                <span t-if="not ol.name">
                                                    -
                                                </span>
                                            </td>
                                            <td class="text-left">
                                                <span t-if="ol.name">
                                                    <span t-field="ol.name"/>
                                                </span>
                                                <span t-if="not ol.name">
                                                    -
                                                </span>
                                            </td>
                                        </t>
                                        <t t-elif="description_type == 'ex_barcode_cus_product'">
                                            <td class="text-left">
                                                <span t-if="ol.name">
                                                    <span t-field="ol.barcode_customer"/>
                                                </span>
                                                <span t-else="">
                                                    -
                                                </span>
                                            </td>
                                            <td class="text-left">
                                                <span t-if="ol.name">
                                                    <span t-field="ol.name"/>
                                                </span>
                                                <span t-if="not ol.name">
                                                    -
                                                </span>
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td class="text-left">
                                                <span t-if="ol.product_id.default_code">
                                                    <span t-field="ol.product_id.default_code"/>
                                                </span>
