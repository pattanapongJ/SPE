<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hdc_sale_borrow_report_document">
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <div class="header" style="font-family: KanitLight;" >
            <div class="row">
                <div class="col-2 text-left">
                        <t t-call="hdc_sale_general_reports.report_logo_style"/>
                    </div>
                <div class="col-7 text-left" style="font-size: 12.12px;">
                    <span style="font-size: 16.67px; font-weight: bold;"><t t-esc="company.name_th"/></span><br/>
                    <span style="font-size: 16.67px; font-weight: bold;"><t t-esc="company.name"/></span><br/>
                    <span style=""><t t-esc="company.street_th"/> <t t-esc="company.street2_th"/> <t t-esc="company.city_th"/> <t t-esc="company.state_th_id.name"/> <t t-esc="company.zip_th"/></span><br/>
                    <span style=""><t t-esc="company.street"/>,<t t-esc="company.street2"/>,<t t-esc="company.city"/>,<t t-esc="company.state_id.name"/>,<t t-esc="company.zip"/>,<t t-esc="company.country_id.name"/></span><br/>
                    <span style="">TEL : +<t t-esc="company.phone"/></span><span style=""> FAX : +<t t-esc="company.fax"/></span> <br/> 
                    <span style="">WEBSITE <t t-esc="company.website"/></span> / <span style="">EMAIL : <t t-esc="company.email"/></span><br/>
                    <span style="">เลขประจำตัวผู้เสียภาษี: <t t-esc="company.vat"/></span><br/>
                </div>
                <div class="col-3 text-right"  style="margin-right:0mm;margin-top:3mm">
                    <div style="font-size: 18.18px; font-weight: bold;" >
                        <span><strong>ใบส่งสินค้าตัวอย่าง</strong></span><br/>
                    </div>
                    <div style="font-size: 18.18px; font-weight: bold;" >
                        <span>หน้า </span>
                        <span class="page"/>
                        /
                        <span class="topage"/>
                    </div>
                </div>
            </div>

            <div class="row" style="font-size: 13.64px;margin-bottom:0mm;margin-top:1mm;border-top: 1px solid black;border-bottom: 1px solid black;height: 230px">   
                <div class="col-6">
                    <div class="row">
                        <div class="col-3">
                            <span><strong>ชื่อ/ที่อยู่: </strong></span>
                        </div>
                        <div class="col-9">
                            <span t-if="doc.partner_id.name">
                                <span t-field="doc.partner_id.name"/><br/>
                            </span>
                            <span t-if="not doc.partner_id.name">
                                -<br/>
                            </span>
                            <span t-if="doc.partner_id.street">
                               <span t-field="doc.partner_id.street"/>
                           </span>
                           <span t-if="doc.partner_id.street2">
                               <span t-field="doc.partner_id.street2"/>
                           </span>
                           <span t-if="doc.partner_id.sub_district">
                               <span t-field="doc.partner_id.sub_district"/>
                           </span>
                           <span t-if="doc.partner_id.city">
                               <span t-field="doc.partner_id.city"/>
                           </span>
                           <span t-if="doc.partner_id.state_id.name">
                               <span t-field="doc.partner_id.state_id.name"/>
                           </span>
                           <span t-if="doc.partner_id.zip">
                               <span t-field="doc.partner_id.zip"/>
                           </span>
                        </div>
                    </div>

                    <div class="row" style="max-height:93px;overflow: hidden;">
                       <div class="col-3">
                           <span><strong>ที่อยู่ส่งของ: </strong></span>
                       </div>
                       <div class="col-9">
                            <span t-if="doc.partner_shipping_id.child_ids">
                                <span t-if="doc.partner_shipping_id.child_ids[-1].street">
                                    <span t-field="doc.partner_shipping_id.child_ids[-1].street"/>
                                </span>
                                <span t-if="doc.partner_shipping_id.child_ids[-1].street2">
                                    <span t-field="doc.partner_shipping_id.child_ids[-1].street2"/>
                                </span>
                                <span t-if="doc.partner_shipping_id.child_ids[-1].sub_district">
                                    <span t-field="doc.partner_shipping_id.child_ids[-1].sub_district"/>
                                </span>
                                <span t-if="doc.partner_shipping_id.child_ids[-1].city">
                                    <span t-field="doc.partner_shipping_id.child_ids[-1].city"/>
                                </span>
                                <span t-if="doc.partner_shipping_id.child_ids[-1].state_id.name">
                                    <span t-field="doc.partner_shipping_id.child_ids[-1].state_id.name"/>
                                </span>
                                <span t-if="doc.partner_shipping_id.child_ids[-1].zip">
                                    <span t-field="doc.partner_shipping_id.child_ids[-1].zip"/>
                                </span>
                           </span>
                           <span t-else="">
                                <span t-if="doc.partner_shipping_id.street">
                                    <span t-field="doc.partner_shipping_id.street"/>
                                </span>
                                <span t-if="doc.partner_shipping_id.street2">
                                    <span t-field="doc.partner_shipping_id.street2"/>
                                </span>
                                <span t-if="doc.partner_shipping_id.sub_district">
                                    <span t-field="doc.partner_shipping_id.sub_district"/>
                                </span>
                                <span t-if="doc.partner_shipping_id.city">
                                    <span t-field="doc.partner_shipping_id.city"/>
                                </span>
                                <span t-if="doc.partner_shipping_id.state_id.name">
                                    <span t-field="doc.partner_shipping_id.state_id.name"/>
                                </span>
                                <span t-if="doc.partner_shipping_id.zip">
                                    <span t-field="doc.partner_shipping_id.zip"/>
                                </span>
                           </span>
                       </div>
                    </div>

                </div>

                <div class="col-6">
                    <div class="row">
                        <div class="col-5">
                            <span><strong>เลขที่เอกสาร:</strong></span>
                        </div>
                        <div class="col-7">
                            <span t-if="doc.name">
                               <span t-field="doc.name"/>
                           </span>
                           <span t-if="not doc.name">
                               -
                           </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            <span><strong>วันที่เอกสาร:</strong></span>
                        </div>
                        <div class="col-7">
                            <span t-if="doc.create_date">
                                <t t-esc="doc.create_date.strftime('%d/%m/%Y')" />
                            </span>
                            <span t-if="not doc.create_date">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            <span><strong>พนักงานขาย:</strong></span>
                        </div>
                        <div class="col-7">
                           <span t-if="doc.user_employee_id">
                               <t t-esc="doc.user_employee_id.name" />
                            </span>
                            <span t-if="not doc.user_employee_id">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            <span><strong>ประเภทการขาย:</strong></span>
                        </div>
                        <div class="col-7">
                           <span t-if="doc.type_id">
                               <t t-esc="doc.type_id.name" />
                            </span>
                            <span t-if="not doc.type_id">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row text-left">
                        <br/>
                    </div>
                    <div class="row text-left">
                        <div class="col-5">
                            <span><strong>เลขที่ใบสั่งซื้อ:</strong></span>
                        </div>
                        <div class="col-7">
                            
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            <span><strong>ผู้ติดต่อ:</strong></span>
                        </div>
                        <div class="col-7">
                            <span t-if="doc.partner_id">
                               <span t-field="doc.partner_id.name"/>
                            </span>
                            <span t-if="not doc.partner_id">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            <span><strong>ประเภทอุตสาหกรรม:</strong></span>
                        </div>
                        <div class="col-7">
                             <span>................................</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            <span><strong>ปริมาณที่ใช้ต่อเดือน:</strong></span>
                        </div>
                        <div class="col-7">
                             <span>................................</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

           

        <!-- <div class="row" style="font-size: 15px;margin-bottom:3mm;margin-top:3mm;border-top: 1px solid black;border-bottom: 1px solid black;max-height: 10px;height: 10px;"></div> -->
        <div class="article" 
        style="font-family: KanitLight;" 
        t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <div class="row" >
        
                <t t-set="l_no" t-value="0"/>
                <table class="table" style="font-size: 13.64px;line-height: 18px">
                    <thead style="background-color:#ECECEC">
                        <tr>
                            <th class="text-center" style="width: 6%;">ลำดับ</th>
                            <th class="text-center" style="width: 70%;">รายละเอียด</th>
                            <th class="text-center" style="width: 12%;">จำนวน</th>
                            <th class="text-center" style="width: 12%;">หน่วย</th>
                            <!-- <th class="text-center" style="width: 19%;">มูลค่าก่อนภาษี</th> -->
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="set_no_vat" t-value="0"/>
                        <t t-set="set_vat" t-value="0"/>
                        <t t-set="set_dis" t-value="0"/>
                        <t t-foreach="o.order_line" t-as="ol" >
                            <t t-if="ol.display_type in ['line_section', 'line_note']">
                                <tr>
                                    <td></td>
                                    <td colspan="7" class="text-left" >
                                        <span t-if="ol.name">
                                            <t t-if="ol.display_type == 'line_note'">
                                                <em>
                                                    <span t-field="ol.name"/>
                                                </em>
                                            </t>
                                            <t t-if="ol.display_type == 'line_section'">
                                                <strong><span t-field="ol.name"/></strong>
                                            </t>
                                        </span>
                                        <span t-if="not ol.name">
                                            -
                                        </span>
                                    </td>
                                </tr>
                            </t>
                            <t t-if="not ol.display_type in ['line_section', 'line_note']">
                                <t t-if="not ol.product_id == doc.default_product_global_discount">
                                <tr>
                                    <td class="text-center">
                                        <t t-set="l_no" t-value="l_no + 1"/>
                                        <t t-esc="l_no"/>
                                    </td>
                                    <td class="text-left">
                                        <span t-if="ol.name">
                                            <span t-field="ol.name"/>
                                        </span>
                                        <span t-if="not ol.name">
                                            -
                                        </span>
                                    </td>
                                    <td class="text-center" >
                                        <span t-if="ol.product_uom_qty">
                                            <span t-field="ol.product_uom_qty"/>
                                        </span>
                                        <span t-if="not ol.product_uom_qty">
                                            -
                                        </span>
                                    </td>
                                    <td class="text-center" >
                                        <span t-if="ol.product_uom">
                                            <span t-field="ol.product_uom"/>
                                        </span>
                                        <span t-if="not ol.product_uom">
                                            -
                                        </span>
                                    </td>
                                </tr>
                                </t>
                                
                            </t>
                        </t>
                    </tbody>
                </table>  
            </div>
        </div>
        
        <div class="footer" style="font-size: 11px;margin-top:0mm;vertical-align: bottom;font-family: KanitLight">
            <div class="row" style="font-size: 13.64px;border: 1px solid black;padding: 15px">
                <div class="col-8">
                    <span>ส่งสินค้าตัวอย่างเพื่อทดลองสินค้า:</span>
                </div>
                <div class="col-2">
                    <input type="checkbox" name="cash_checkbox"/> <span>เป็นชิ้น</span>
                </div>
                <div class="col-2">
                    <input type="checkbox" name="cash_checkbox"/> <span>เป็นแผง</span>
                </div>
            </div>
            <br/>

            <div class="row" style="font-size: 13.64px;height: 80px">
                <br/>
                    <div class="row">
                        <div class="col-2 text-nowrap">
                            <span>หมายเหตุ:</span>
                        </div>
                    </div>
                
                    <div class="col-10">
                        <!--<span t-field="doc.note_th"/>-->
                        <span t-if="doc.note_th and len(doc.note_th) &gt; 220">
                            <span t-esc="doc.note_th[:220] + '...'" /><br/><br/> <span t-field="doc.modify_type_txt"/> <span t-field="doc.plan_home"/>
                        </span>
                        <span t-if="doc.note_th and len(doc.note_th) &lt;= 220">
                            <span t-field="doc.note_th"/><br/><br/> <span t-field="doc.modify_type_txt"/> <span t-field="doc.plan_home"/>
                        </span>
                    </div>
                <br/>
            </div>

