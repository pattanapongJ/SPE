        </div>
    </template>

    <template id="hdc_sale_borrow_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="hdc_sale_general_reports.hdc_sale_borrow_report_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

