<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_sale_report_form_view" model="ir.ui.view">
        <field name="name">wizard.sale.report.form.view</field>
        <field name="model">wizard.sale.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="state" invisible="1"/>
                            <field name="sale_id" invisible="1"/>
                            <field name="document" widget="selection" string="Documents" attrs="{'invisible': [('state', 'in', ['sale', 'done'])]}"/>
                            <field name="document_sale" widget="selection" string="Documents" attrs="{'invisible': [('state', 'not in', ['sale', 'done'])]}"/>

                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="document_type" widget='radio' options="{'horizontal': false}" /> 
                            <field name="description_type" widget='radio' string="Form Type" options="{'horizontal': false}" /> 
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Print" type="object" name="print" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

	<record id="action_wizard_sale_report" model="ir.actions.act_window">
		<field name="name">Report</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">wizard.sale.report</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
		<field name="view_id" ref="wizard_sale_report_form_view"/>
	</record>
    

    
</odoo>