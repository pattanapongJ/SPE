<odoo>
    <record id="multi_stock_scrap_form_view" model="ir.ui.view">
        <field name="name">multi.stock.scrap.form</field>
        <field name="model">multi.stock.scrap</field>
        <field name="arch" type="xml">
            <form string="Multi Scrap">
                <header>
                    <button string="Confirm" name="action_confirm_warehouse" groups="hdc_confirm_warehouse.group_warehouse" type="object" class="oe_highlight" attrs="{'invisible': ['|',('state', '!=', 'draft'),('warehouse_status','=','done')]}"/>
                    <button name="action_validate" string="Validate" type="object" class="oe_highlight" groups="hdc_confirm_warehouse.group_inventory" attrs="{'invisible': [('hide_validate_btn','=',True)]}"/>
                    <button name="action_cancel" states="draft" string="Cancel" type="object" class="oe_highlight"/>
                    <button name="action_print" string="Print Scrap" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_get_stock_move_lines"
                                string="Product Moves" type="object"
                                icon="fa-exchange"/>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" nolabel="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" attrs="{'readonly': [('state', 'in', ['done', 'cancel'])]}"/>
                            <field name="location_id" options="{'no_create': True, 'no_open': True}" groups="stock.group_stock_multi_locations" force_save="1" attrs="{'readonly': [('state', 'in', ['done', 'cancel'])]}"/>
                            <field name="scrap_location_id" options="{'no_create': True, 'no_open': True}" groups="stock.group_stock_multi_locations" force_save="1" attrs="{'readonly': [('state', 'in', ['done', 'cancel'])]}"/>
                            <field name="hide_validate_btn" invisible="1"/>
                        </group>
                        <group>
                            <field name="picking_id" invisible="1" attrs="{'readonly': [('state', 'in', ['done', 'cancel'])]}"/>
                            <field name="scheduled_date" attrs="{'readonly': [('state', 'in', ['done', 'cancel'])]}"/>
                            <field name="origin" attrs="{'readonly': [('state', 'in', ['done', 'cancel'])]}"/>
                            <field name="user_id" attrs="{'readonly': [('state', 'in', ['done', 'cancel'])]}"/>
                            <field name="warehouse_status" readonly="1" widget="badge" 
                                decoration-success="warehouse_status in ('confirmed','done')" decoration-info="warehouse_status == 'warehouse'"/>
                            <field name="confirmed_warehouse_date" readonly="0"/>
                            <field name="user_confirm_warehouse_employee_id" readonly="1"/>
                            <field name="inventory_status" readonly="1" widget="badge" 
                                decoration-success="inventory_status in ('confirmed','done')" decoration-info="inventory_status == 'progress'" decoration-warning="inventory_status == 'waiting'"/>
                            <field name="validate_date" class="oe_inline" readonly="0" force_save="1"/>
                            <field name="validate_user_employee_id" class="oe_inline" readonly="1" />
                            <field name="company_id" groups="base.group_multi_company" attrs="{'readonly': [('state', 'in', ['done', 'cancel'])]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Product Scrap Lines" name="scrap_line">
                            <field
                                name="scrap_line"
                                widget="section_and_note_one2many"
                                mode="tree" attrs="{'readonly': [('state', 'in', ['done', 'cancel'])]}">
                                <form>
                                   <group>
                                        <field name="state" invisible="1"/>
                                        <field name="product_id" options="{'no_create': True}" domain="[('id', 'in', context.get('product_ids', []))]"/>
                                        <label for="scrap_qty"/>
                                        <div class="o_row">
                                            <field name="scrap_qty"
                                                attrs="{'readonly': [('tracking', '=', 'serial')]}"/>
                                            <field name="product_uom_category_id" invisible="1"/>
                                            <field name="product_uom_id" groups="uom.group_uom"/>
                                        </div>
                                    </group>
                                    <group>
                                        <field name="picking_id" invisible="1"/>
                                        <field name="tracking" invisible="1"/>
                                        <field name="lot_id" groups="stock.group_production_lot"
                                            context="{'default_company_id': company_id, 'default_product_id': product_id}"
                                            attrs="{'invisible': ['|',('product_id', '=', False),('tracking', '=', 'none')], 'required': [('tracking', '!=', 'none')]}"/>
                                        <field name="package_id" groups="stock.group_tracking_lot"/>
                                        <field name="owner_id" groups="stock.group_tracking_owner"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="location_id" groups="stock.group_stock_multi_locations" options="{'no_open': True, 'no_create': True}"/>
                                        <field name="scrap_location_id" groups="stock.group_stock_multi_locations" options="{'no_open': True, 'no_create': True}" />
                                    </group>
                                </form>
                                <tree string="Product Lines" editable="bottom">
                                    <field name="name" invisible="1"/>
                                    <field name="date_done" invisible="1"/>
                                    <field name="tracking" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="lot_id" attrs="{'required': [('tracking', '!=', 'none')]}"/>
                                    <field name="scrap_qty"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                    <field name="product_uom_id" groups="uom.group_uom"/>
                                    <field name="location_id" options="{'no_create': True}" groups="stock.group_stock_multi_locations"/>
                                    <field name="scrap_location_id" options="{'no_create': True}" groups="stock.group_stock_multi_locations"/>
                                    <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                                    <field name="state" widget="badge" decoration-success="state == 'done'" decoration-info="state == 'draft'"/>
                                    <field name="reason_scrap_id"/>
                                    <field name="remark_note"/>
                                </tree>
                            </field>
                            <group string="Remark ภายใน" name="remark_group">
                                <div>
                                    <field name="remark" class="oe_inline"/>
                                </div>
                            </group>
                            <group string="Remark ออกรายงาน" name="remark_report_group">
                                <div>
                                    <field name="remark_report" class="oe_inline"/>
                                </div>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="multi_stock_scrap_form_view2" model="ir.ui.view">
        <field name="name">multi.stock.scrap.form2</field>
        <field name="model">multi.stock.scrap</field>
        <field name="arch" type="xml">
            <form string="Multi Scrap">
                <sheet>
<!--                    <header>-->
                        <field name="state" widget="statusbar" statusbar_visible="draft,done" invisible="1"/>
<!--                    </header>-->
                    <div class="oe_title">
                        <h1><field name="name" nolabel="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="location_id" options="{'no_create': True, 'no_open': True}" groups="stock.group_stock_multi_locations" force_save="1"/>
                            <field name="scrap_location_id" options="{'no_create': True, 'no_open': True}" groups="stock.group_stock_multi_locations" force_save="1"/>
                        </group>
                        <group>
                            <field name="picking_id" invisible="1"/>
                            <field name="scheduled_date"/>
                            <field name="origin"/>
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Product Scrap Lines" name="scrap_line">
                            <field
                                name="scrap_line"
                                widget="section_and_note_one2many"
                                mode="tree" attrs="{'readonly': [('state', '=', 'done')]}">
                                <form>
                                   <group>
                                        <field name="state" invisible="1"/>
                                        <field name="product_id" options="{'no_create': True}" domain="[('id', 'in', context.get('product_ids', []))]"/>
                                        <label for="scrap_qty"/>
                                        <div class="o_row">
                                            <field name="scrap_qty"
                                                attrs="{'readonly': [('tracking', '=', 'serial')]}"/>
                                            <field name="product_uom_category_id" invisible="1"/>
                                            <field name="product_uom_id" groups="uom.group_uom"/>
                                        </div>
                                        <field name="reason_scrap_id"/>
                                        <field name="remark_note"/>
                                    </group>
                                    <group>
                                        <field name="picking_id" invisible="1"/>
                                        <field name="tracking" invisible="1"/>
                                        <field name="lot_id" groups="stock.group_production_lot"
                                            context="{'default_company_id': company_id, 'default_product_id': product_id}"
                                            attrs="{'invisible': ['|',('product_id', '=', False),('tracking', '=', 'none')], 'required': [('tracking', '!=', 'none')]}"/>
                                        <field name="package_id" groups="stock.group_tracking_lot"/>
                                        <field name="owner_id" groups="stock.group_tracking_owner"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="location_id" groups="stock.group_stock_multi_locations" options="{'no_open': True, 'no_create': True}"/>
                                        <field name="scrap_location_id" groups="stock.group_stock_multi_locations" options="{'no_open': True, 'no_create': True}" />
                                    </group>
                                </form>
                                <tree string="Product Lines" editable="bottom">
                                    <field name="name" invisible="1"/>
                                    <field name="date_done" invisible="1"/>
                                    <field name="tracking" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="lot_id" attrs="{'required': [('tracking', '!=', 'none')]}"/>
                                    <field name="scrap_qty"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                    <field name="product_uom_id" groups="uom.group_uom"/>
                                    <field name="location_id" options="{'no_create': True}" groups="stock.group_stock_multi_locations"/>
                                    <field name="scrap_location_id" options="{'no_create': True}" groups="stock.group_stock_multi_locations"/>
                                    <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                                    <field name="reason_scrap_id"/>
                                    <field name="remark_note"/>
                                    <field name="state" widget="badge" decoration-success="state == 'done'" decoration-info="state == 'draft'"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button special="save" string="Confirm" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="multi_stock_scrap_tree_view" model="ir.ui.view">
        <field name="name">multi.stock.scrap.tree</field>
        <field name="model">multi.stock.scrap</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" sample="1">
                <field name="name"/>
                <field name="origin"/>
                <field name="scrap_location_id" options="{'no_create': True}" groups="stock.group_stock_multi_locations"/>
                <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-info="state == 'draft'"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_multi_stock_scrap">
        <field name="name">Multi Scrap Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">multi.stock.scrap</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Scrap products
          </p><p>
            Scrapping a product will remove it from your stock. The product will
            end up in a scrap location that can be used for reporting purpose.
          </p>
        </field>
    </record>

    <menuitem
        id="menu_multi_stock_scrap"
        name="Multi Scrap"
        parent="stock.menu_stock_warehouse_mgmt"
        action="action_multi_stock_scrap"
        sequence="98"/>

</odoo>