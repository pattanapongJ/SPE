<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_account_billing_terms_form" model="ir.ui.view">
        <field name="name">account.billing.terms.form</field>
        <field name="model">account.billing.terms</field>
        <field name="arch" type="xml">            
            <form string="Billing Terms">
                <sheet>
                    <group name="form_billing_terms" string="string">
                        <field name="code"/>
                        <field name="name"/>                        
                        <field name="description"/>
                    </group>                    
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_account_billing_terms_tree" model="ir.ui.view">
        <field name="name">account.billing.terms.tree</field>
        <field name="model">account.billing.terms</field>
        <field name="arch" type="xml">
            <tree string="Billing Terms">       
                <field name="code"/>         
                <field name="name"/>                
                <field name="description"/>                
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sub_menu_account_billing_terms_action">
        <field name="name">Billing Terms</field>
        <field name="res_model">account.billing.terms</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="sub_menu_account_billing_terms" name="Billing Terms" parent="hdc_billing_period_route.menu_account_billing_settings" sequence="4" action="hdc_billing_contact.sub_menu_account_billing_terms_action" />

</odoo>
