<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_account_billing_place_form" model="ir.ui.view">
        <field name="name">account.billing.place.form</field>
        <field name="model">account.billing.place</field>
        <field name="arch" type="xml">            
            <form string="Billing Place">
                <sheet>
                    <group name="form_billing_place" string="string">
                        <field name="code"/>
                        <field name="name"/>                        
                        <field name="description"/>
                    </group>                    
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_account_billing_place_tree" model="ir.ui.view">
        <field name="name">account.billing.place.tree</field>
        <field name="model">account.billing.place</field>
        <field name="arch" type="xml">
            <tree string="Billing Place">       
                <field name="code"/>         
                <field name="name"/>                
                <field name="description"/>                
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sub_menu_account_billing_place_action">
        <field name="name">Billing Place</field>
        <field name="res_model">account.billing.place</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="sub_menu_account_billing_place" name="Billing Place" parent="hdc_billing_period_route.menu_account_billing_settings" sequence="5" action="hdc_billing_contact.sub_menu_account_billing_place_action" />

</odoo>
