<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="rma_report_wizard_form" model="ir.ui.view">
        <field name="name">rma.report.wizard.form</field>
        <field name="model">wizard.rma.report</field>
        <field name="arch" type="xml">
            <form>
                <group name="criteria">
                    <group>
                        <field name="start_date" />
                        <field name="job_no_ids" widget="many2many_tags" />
                        <field name="under_warranty" />
                        <field name="is_dewalt" />
                    </group>
                    <group>
                        <field name="end_date" />
                        <field name="product_ids" widget="many2many_tags" />
                        <field name="out_of_warranty" />
                    </group>
                </group>
                <footer>
                    <button
                        name="print_pdf"
                        string="Print PDF"
                        type="object"
                    />
                    <button
                        name="print_excel"
                        string="Print XLSX"
                        type="object"
                    />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="rma_action_report" model="ir.actions.act_window">
        <field name="name">RMA Report</field>
        <field name="res_model">wizard.rma.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_is_dewalt': False}</field>
    </record>

    <record id="rma_action_report_dewalt" model="ir.actions.act_window">
        <field name="name">RMA Report</field>
        <field name="res_model">wizard.rma.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_is_dewalt': True}</field>
    </record>

    <menuitem 
    id="rma_menu_report"
    parent="rma_ept.base_crm_claim_ept_action_root"
    action="rma_action_report"
    sequence="7"
    />

    <menuitem 
        id="rma_menu_report_dewalt"
        parent="hdc_rma_dewalt.rma_dewalt_menu_root"
        action="rma_action_report_dewalt"
        sequence="7"
    />

</odoo>
