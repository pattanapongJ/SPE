                        </tr>
                      </thead>



                    <tbody class="table-borderless">
                    <t t-if="o.rma_type == 'receive_modify'">
                        <t t-foreach="o.claim_modify_line_ids" t-as="ol">
                            <tr>
                                <td class="text-center" style="width: 4%;padding-top:1px; padding-bottom:4px;">
                                    <t t-set="l_no" t-value="l_no + 1"/>
