<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_repair_type_form" model="ir.ui.view">
        <field name="name">repair.type.form.view</field>
        <field name="model">repair.type</field>
        <field name="inherit_id" ref="repair_type.repair_type_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='create_sale_order']" position="after">
                <field name="sale_type" attrs="{'invisible': [('create_sale_order', '=', False)]}" />
                <field name="company_id" />
                <field name="borrow_picking_type_id" domain="['&amp;',('addition_operation_types.code', '=', 'AO-02'),'|',('company_id', '=', company_id),('company_id', '=', False)]"/>
            </xpath>
        </field>
    </record>

</odoo>
