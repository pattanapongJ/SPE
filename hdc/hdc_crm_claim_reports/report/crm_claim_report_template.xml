<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_crm_claim_document">
       
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>

        <!-- <div class="header" style="margin-left: -14px;margin-right: -14px" > -->
        <div class="header font-inventory-div" style="font-family: KanitLight;" >
            <div class="row">
                <div class="col-2 text-left">
                    <t t-call="hdc_crm_claim_reports.report_logo_style"/>
                </div>

                <div class="col-6 text-left" style="font-size: 15.12px;">
                    <span class="font-weight-bold" style="font-size: 16.67px; "><t t-esc="company.name_th"/></span><br/>
                    <span class="font-weight-bold" style="font-size: 16.67px; "><t t-esc="company.name"/></span><br/>
                    <span style=""><t t-esc="company.street_th"/> <t t-esc="company.street2_th"/> <t t-esc="company.city_th"/> <t t-esc="company.state_th_id.name"/> <t t-esc="company.zip_th"/></span><br/>
                    <span style=""><t t-esc="company.street"/>,<t t-esc="company.street2"/>,<t t-esc="company.city"/>,<t t-esc="company.state_id.name"/>,<t t-esc="company.zip"/>,<t t-esc="company.country_id.name"/></span><br/>
                    <span style="">โทร : +<t t-esc="company.phone"/></span><span style=""> แฟกต์ : +<t t-esc="company.fax"/></span> <br/> 
                    <span style="">เว็บไซต์ <t t-esc="company.website"/></span> / <span style="">อีเมลล์ : <t t-esc="company.email"/></span><br/>
                    <span style="">เลขประจำตัวผู้เสียภาษี: <t t-esc="company.vat"/></span><br/>
                </div>
                <div class="col-4 text-right" style="margin-right:0mm;margin-top:3mm">
                    <div class="font-weight-bold" style="font-size: 16.18px; " >
                        <span>ใบรับเรื่องร้องเรียนลูกค้า</span><br/>
                        <span>(Customer Claim Request)</span><br/>
                        <span>หน้า Page </span>
                        <span class="page"/>
                        /
                        <span class="topage"/>
                    </div>
                </div>
            </div>

            <div class="row" style="font-family: KanitLight; font-size: 13.64px;margin-bottom:1mm;margin-top:2mm;border-bottom: 1px solid black;;border-top: 1px solid black;height: 145px">
                <div class="col-6">
                    <div class="row ">
                        <div class="col-5 text-nowrap">
                           <span class="font-weight-bold"><strong>ชื่อลูกค้า/Name: </strong></span>
                        </div>
                        <div class="col-7 text-left">
                           <span t-if="doc.partner_id">
                              <span t-field="doc.partner_id.name"/>
                            </span>
                            <span t-if="not doc.partner_id">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5 text-nowrap ">
                           <span class="font-weight-bold"><strong>ที่อยู่/Address: </strong></span>
                        </div>
                        <div class="col-7 text-left">
                           <span t-if="doc.partner_id">
                              <span t-field="doc.partner_id.name"/>
                            </span>
                            <span t-if="not doc.partner_id">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                           <span class="font-weight-bold"><strong>ประเภทร้องเรียน : </strong></span>
                        </div>
                        <div class="col-7 text-left">
                           <span t-if="doc.categ_id">
                              <span t-field="doc.categ_id.name"/>
                            </span>
                            <span t-if="not doc.categ_id">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5 text-nowrap ">
                           <span class="font-weight-bold"><strong>ทีมขาย/Sale Team: </strong></span>
                        </div>
                        <div class="col-7 text-left">
                           <span t-if="doc.team_id">
                              <span t-field="doc.team_id.name"/>
                            </span>
                            <span t-if="not doc.team_id">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5 text-nowrap ">
                           <span class="font-weight-bold"><strong>ผู้รับเรื่อง/Responsible: </strong></span>
                        </div>
                        <div class="col-7 text-left">
                           <span t-if="doc.user_id">
                              <span t-field="doc.user_id.name"/>
                            </span>
                            <span t-if="not doc.user_id">
                               -
                            </span>
                        </div>
                    </div>
                </div>

                <div class="col-6">
                    <div class="row">
                        <div class="col-6 text-nowrap ">
                            <span class="font-weight-bold"><strong>เลขที่เอกสาร/Doc No.: </strong></span>
                        </div>
                        <div class="col-6 text-left">
                            <span t-if="doc.code">
                                <span t-field="doc.code"/>
                            </span>
                            <span t-if="not doc.code">
                                -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 text-nowrap ">
                            <span class="font-weight-bold"><strong>หัวข้อร้องเรียน/Subject: </strong></span>
                        </div>
                        <div class="col-6 text-left">
                            <span t-if="doc.name">
                                <span t-field="doc.name"/>
                            </span>
                            <span t-if="not doc.name">
                                -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 text-nowrap ">
                            <span class="font-weight-bold"><strong>วันที่รับเรื่อง/Receive Date: </strong></span>
                        </div>
                        <div class="col-6 text-left">
                            <span t-if="doc.date">
                                <span t-esc="doc.date.strftime('%d/%m/%Y')" />
                            </span>
                            <span t-if="not doc.date">
                                -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 text-nowrap ">
                            <span class="font-weight-bold"><strong>กำหนดแก้ไข/Deadline Date: </strong></span>
                        </div>
                        <div class="col-6 text-left">
                            <span t-if="doc.date_deadline">
                                <span t-esc="doc.date_deadline.strftime('%d/%m/%Y')"/>
                            </span>
                            <span t-if="not doc.date_deadline">
                                -
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="article font-inventory-div" style="font-family: KanitLight;" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <div class="row">
                <t t-set="l_no" t-value="0"/>
                <table class="table table-bordered ">
                    <thead>
                        <tr>
                            <th class="text-center font-inventory-th font-weight-bold" style="width: 6%;">ลำดับ/No.</th>
                            <th class="text-center font-inventory-th font-weight-bold" style="width: 44%;">เรื่องร้องเรียน</th>
                            <th class="text-center font-inventory-th font-weight-bold" style="width: 25%;">อ้างอิง</th>
                            <th class="text-center font-inventory-th font-weight-bold" style="width: 25%;">รายละเอียด</th>
                        </tr>
                    </thead>
                    <tbody>
                            <tr >
                                <td class="text-center">
                                    <t t-set="l_no" t-value="l_no + 1"/>
                                    <t t-esc="l_no"/>
                                </td>
                                <td style="text-align: left;">
                                    <span t-if="doc.description">
                                        <span t-field="doc.description"/>
                                    </span>
                                    <span t-if="not doc.description">
                                        
                                    </span>
                                </td>
                                <td style="text-align: center;">
                                    <span t-if="doc.model_ref_id">
                                        <span t-esc="doc.get_model_name(model_ref_id)"/>
                                    </span>
                                    <span t-if="not doc.model_ref_id">
                                        
                                    </span>
                                </td>
                                <td class="text-center" >
                                    <span t-if="doc.model_ref_id">
                                        <span t-field="doc.model_ref_id.name"/>
                                    </span>
                                    <span t-if="not doc.model_ref_id">
                                        
                                    </span>
                                </td>
                            </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="footer last-page not-first-page font-inventory-div" style="font-family: KanitLight;margin-top:5mm;vertical-align: bottom;overflow: hidden;">
            <br/>
            <div class="row" style="font-size: 13.64px;">
              <div style="width: 20%;text-align: center;">
                  <div style="position: relative;">
                      <div style="width: 80%; margin: auto; border-bottom: 1px solid black;">&#160;</div>
                  </div>
                  <br/>
                  <div>ผู้บันทึกรายการ</div>
                  <br/>
                  <div style="position: relative;">
                      <div>วันที่ ............../............../..............</div>
                  </div>
              </div>
              <div style="width: 20%;text-align: center;">
                  <div style="position: relative;">
                      <div style="width: 80%; margin: auto; border-bottom: 1px solid black;">&#160;</div>
                  </div>
                  <br/>
                  <div>พนักงานขาย</div>
                  <br/>
                  <div style="position: relative;">
                      <div>วันที่ ............../............../..............</div>
                  </div>
              </div>
              <div style="width: 20%;text-align: center;">
                  <div style="position: relative;">
                      <div style="width: 80%; margin: auto; border-bottom: 1px solid black;">&#160;</div>
                  </div>
                  <br/>
                  <div>ผู้จัดการ</div>
                  <br/>
                  <div style="position: relative;">
                      <div>วันที่ ............../............../..............</div>
                  </div>
              </div>
              <div style="width: 20%;text-align: center;">
                  <div style="position: relative;">
                      <div style="width: 80%; margin: auto; border-bottom: 1px solid black;">&#160;</div>
                  </div>
                  <br/>
                  <div>ผู้อนุมัติ</div>
                  <br/>
                  <div style="position: relative;">
                      <div>วันที่ ............../............../..............</div>
                  </div>
              </div>
              <div style="width: 20%;text-align: center;">
                  <div style="position: relative;">
                      <div style="width: 80%; margin: auto; border-bottom: 1px solid black;">&#160;</div>
                  </div>
                  <br/>
                  <div>ผู้รับสินค้า</div>
                  <br/>
                  <div style="position: relative;">
                      <div>วันที่ ............../............../..............</div>
                  </div>
              </div>
          </div>
        </div>
    </template>

    <template id="report_crm_claim">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="hdc_crm_claim_reports.report_crm_claim_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>
