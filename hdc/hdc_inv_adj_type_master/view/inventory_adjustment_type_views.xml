<odoo>
    <record id="view_inventory_adjustment_type_tree" model="ir.ui.view">
        <field name="name">inventory.adjustment.type.tree</field>
        <field name="model">inventory.adjustment.type</field>
        <field name="arch" type="xml">
            <tree string="Inventory Adjustment Types">
                <field name="name"/>
                <field name="sequence_id"/>
                <!-- <field name="inventory_ref" force_save="1"/> -->
                <field name="company_id"/>
                <field name="type_action"/>
            </tree>
        </field>
    </record>

    <record id="view_inventory_adjustment_type_form" model="ir.ui.view">
        <field name="name">inventory.adjustment.type.form</field>
        <field name="model">inventory.adjustment.type</field>
        <field name="arch" type="xml">
            <form string="Inventory Adjustment Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence_id"/>
                        <!-- <field name="inventory_ref"/> -->
                        <field name="company_id"/>
                        <field name="type_action"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_inventory_adjustment_type" model="ir.actions.act_window">
        <field name="name">Inventory Adjustment Types</field>
        <field name="res_model">inventory.adjustment.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create inventory adjustment types for use in inventory operations.
            </p>
        </field>
    </record>

    <menuitem id="menu_inventory_adjustment_type"
              name="Inventory Adjustment Type"
              parent="stock.menu_warehouse_config"
              action="action_inventory_adjustment_type"
              sequence="55"/>
</odoo>
