<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_discount" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.discount</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='price_unit']" position="after">
                <field name="triple_discount" attrs="{'readonly': [('state', 'in', ('done','sale','cancel'))]}"/>
                <field name="discount_pricelist" force_save="1" optional="show"/>
            </xpath>

            <xpath expr="//tree/field[@name='price_total']" position="replace">
                <field name="price_total" string="Net Amount"/>
            </xpath>

            <xpath expr="//group[1]/field[@name='price_unit']" position="after">
                <field name="triple_discount" attrs="{'readonly': [('state', 'in', ('done','sale','cancel'))]}"/>
                <field name="discount_pricelist" force_save="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_view_move_form_inherit_discount" model="ir.ui.view">
        <field name="name">account.move.form.inherit.discount</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="after">
                <field name="triple_discount"/>
                <field name="dis_price" invisible="1"/>
            </xpath> -->
            <xpath
                expr="//page/field[@name='invoice_line_ids']/tree/field[@name='discount']"
                position="after"
            >
                <field name="triple_discount" optional="show" />
                <field name="dis_price" invisible="1"/>
            </xpath>
            <xpath
                expr="//page/field[@name='invoice_line_ids']/form//field[@name='discount']"
                position="after"
            >
                <field name="triple_discount" optional="hide" />
                <field name="dis_price" invisible="1"/>
            </xpath>
            <xpath
                expr="//page/field[@name='line_ids']/tree/field[@name='discount']"
                position="after"
            >
                <field name="triple_discount" optional="hide" />
                <field name="dis_price" invisible="1"/>
            </xpath>
            <xpath
                expr="//page/field[@name='line_ids']/form//field[@name='tax_ids']"
                position="before"
            >
                <field name="triple_discount" optional="hide" />
                <field name="dis_price" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="product_pricelist_item_form_view_discount" model="ir.ui.view">
        <field name="name">product.pricelist.item.form.discount</field>
        <field name="model">product.pricelist.item</field>
        <field name="inherit_id" ref="product.product_pricelist_item_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fixed_price']" position="after">
                <field name="triple_discount"/>
                <field name="dis_price"/>
            </xpath>
        </field>
    </record>
</odoo>
