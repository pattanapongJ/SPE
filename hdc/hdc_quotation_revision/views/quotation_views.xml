<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_quotation_order_revision_form" model="ir.ui.view">
        <field name="name">quotation.order.form.revision</field>
        <field name="model">quotation.order</field>
        <field name="inherit_id" ref="hdc_quotation_order.view_quotation_order_form" />
        <field name="priority">15</field>
        <field name="arch" type="xml">
            <xpath expr="//header" postion='inside'>
                <button
                    name="create_revision"
                    states="draft,cancel"
                    string="New Revision of Quotation"
                    type="object"
                />
            </xpath>
            <xpath expr="//button[@name='action_view_sale_orders']" position="after">
                <field name="has_old_revisions" invisible="1" />
                <button
                    name="action_view_revisions"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-file-archive-o"
                    attrs="{'invisible': ['|', ('has_old_revisions', '=', False),('revision_count', '=', 0)]}"
                >
                    <field
                        name="revision_count"
                        widget="statinfo"
                        string="Prev. revisions"
                    />
                </button>
            </xpath>
            <field name="client_order_ref" position="after">
                <field
                    name="current_revision_id"
                    attrs="{'invisible': [('current_revision_id', '=', False)]}"
                />
                <!-- <field name="has_old_revisions" invisible="1" /> -->
            </field>
        </field>
    </record>
</odoo>
