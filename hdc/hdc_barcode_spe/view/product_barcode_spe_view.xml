<odoo>
    <!-- Form View -->
    <record id="view_product_barcode_spe_form" model="ir.ui.view">
        <field name="name">product.barcode.spe.form</field>
        <field name="model">product.barcode.spe</field>
        <field name="arch" type="xml">
            <form string="Barcode Product">
                <sheet>
                    <group>
                        <field name="product_tmpl_id"/>
                        <!-- <field name="partner_id"/> -->
                        <field name="ref"/>
                        <field name="barcode_modern_trade"/>
                        <!-- <field name="external_code"/> -->
                        <!-- <field name="external_description"/> -->
                        <field name="product_uom_category_id" invisible="1"/>
                        <field name="uom_id" domain="[('category_id', '=', product_uom_category_id)]"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_product_barcode_spe_tree" model="ir.ui.view">
        <field name="name">product.barcode.spe.tree</field>
        <field name="model">product.barcode.spe</field>
        <field name="arch" type="xml">
            <tree string="Barcode Product">
                <field name="product_tmpl_id"/>
                <!-- <field name="partner_id"/> -->
                <field name="ref"/>
                <field name="barcode_modern_trade"/>
                <!-- <field name="external_code"/> -->
                <!-- <field name="external_description"/> -->
                <field name="product_uom_category_id" invisible="1"/>
                <field name="uom_id" domain="[('category_id', '=', product_uom_category_id)]"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_product_barcode_spe_search" model="ir.ui.view">
        <field name="name">product.barcode.spe.search</field>
        <field name="model">product.barcode.spe</field>
        <field name="arch" type="xml">
            <search string="Barcode Product">
                <field name="product_tmpl_id"/>
                <!-- <field name="partner_id"/> -->
                <field name="ref"/>
                <field name="barcode_modern_trade"/>
                <!-- <field name="external_code"/> -->
                <!-- <field name="external_description"/> -->
                <field name="uom_id"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_product_barcode_spe" model="ir.actions.act_window">
        <field name="name">Barcode Product</field>
        <field name="res_model">product.barcode.spe</field>
        <field name="view_mode">tree,form</field>
    </record>

