<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_data_claim_reason_tree" model="ir.ui.view">
        <field name="name">data.claim.reason.tree</field>
        <field name="model">data.claim.reason</field>
        <field name="arch" type="xml">
            <tree string="Claim Reasons">
                <field name="claim_reason"/>
            </tree>
        </field>
    </record>

    <record id="action_data_claim_reason" model="ir.actions.act_window">
        <field name="name">Claim Reasons</field>
        <field name="res_model">data.claim.reason</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create claim reasons here.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_data_claim_reason"
        name="Data Claim Reasons"
        parent="crm_claim.menu_aftersale"
        action="action_data_claim_reason"
        sequence="20"
    />
</odoo>
