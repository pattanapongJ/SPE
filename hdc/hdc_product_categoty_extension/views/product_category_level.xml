<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hdc_product_categoty_extension_level" model="ir.ui.view">
        <field name="name">product_category.view.form.inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">                  
                <!-- <field name="group_level_1" invisible='1'/>
                <field name="group_level_2" invisible='1'/>
                <field name="group_level_3" invisible='1'/>
                <field name="level_show" invisible='1'/>  -->
                <field name="category_level_id" options="{'no_create': True,'no_create_edit': True}"/> 
            </xpath>
        </field>
    </record>
    <record id="hdc_product_categoty_extension_level_search" model="ir.ui.view">
        <field name="name">product_category.view.form.inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <group string="Group By">
                    <!-- <filter name="group_level_1" string="Level 1" domain="[]" context="{'group_by':'group_level_1'}"/>
                    <filter name="group_level_2" string="Level 2" domain="[]" context="{'group_by':'group_level_2'}"/>
                    <filter name="group_level_3" string="Level 3" domain="[]" context="{'group_by':'group_level_3'}"/> -->
                    <filter name="parent_id" string="Parent Category" domain="[]" context="{'group_by':'parent_id'}"/>
                    <filter name="category_level_id" string="Category Level" domain="[]" context="{'group_by':'category_level_id'}"/>
                </group>
                <searchpanel>
                    <field name="parent_id"/>
                    <field name="category_level_id"/>
                </searchpanel>
            </xpath>
        </field>
    </record>
    <record id="hdc_product_category_level_form" model="ir.ui.view">
        <field name="name">product.category.level.form</field>
        <field name="model">product.category.level</field>
        <field name="arch" type="xml">
            <form string="Product Category Level">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <field name="level" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="hdc_product_category_level_tree" model="ir.ui.view">
        <field name="name">product.category.level.tree</field>
        <field name="model">product.category.level</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="level"/>
            </tree>
        </field>
    </record>
    <record id="action_product_category_level" model="ir.actions.act_window" >
        <field name="name">Product Categories Level</field>
        <field name="res_model">product.category.level</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        name="Product Categories Level"
        parent="stock.menu_product_in_config_stock"
        id="product_category_level_menu"
        action="action_product_category_level"
        sequence="3"
    />
</odoo>
