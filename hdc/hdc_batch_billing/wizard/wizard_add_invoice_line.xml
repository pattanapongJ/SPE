<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="wizard_add_invoice_line_form_view">
        <field name="name">Add Invoice Line</field>
        <field name="model">wizard.add.invoice.line</field>
        <field name="arch" type="xml">
            <form string="Add Invoice">
                    <field name="batch_billing_id" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <field name="invoice_exclude_ids" invisible="1"/>
                    <field nolabel="1" name="invoice_ids"/>
                <footer>
                    <button name="action_add_invoice_line" string="Add Invoice" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="add_invoice_line_wizard_action">
        <field name="name">Add Invoice</field>
        <field name="res_model">wizard.add.invoice.line</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_add_invoice_line_form_view"/>
        <field name="target">new</field>
    </record>

</odoo>
