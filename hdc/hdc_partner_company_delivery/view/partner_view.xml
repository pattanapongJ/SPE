<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="res_partner_view_delivery_line_company" model="ir.ui.view">
            <field name="name">res.partner.view.delivery.line.company</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="type" position="after">
                    <field name="delivery_company" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}" attrs="{'invisible': ['|',('type', '=', False),('type', 'not in', ['delivery', 'contact'])]}" domain="[('status_active', '=', True)]"/>
                </field>
            </field>
        </record>
</odoo>