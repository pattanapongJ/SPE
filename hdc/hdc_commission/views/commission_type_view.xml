<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_commission_type_form" model="ir.ui.view">
        <field name="name">commission.type.form</field>
        <field name="model">commission.type</field>
        <field name="arch" type="xml">            
            <form string="Commission Types">
                <sheet>
                    <group name="form_commission_type" string="string">
                        <field name="code"/>
                        <field name="description"/>
                        <field name="name"/>     
                        <field name="is_active"/>
                    </group>                    
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_commission_type_tree" model="ir.ui.view">
        <field name="name">commission.type.tree</field>
        <field name="model">commission.type</field>
        <field name="arch" type="xml">
            <tree string="Commission Types">       
                <field name="code"/>         
                <field name="description"/>   
                <field name="name"/>     
                <field name="is_active"/>          
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sub_menu_commission_type_action">
        <field name="name">Commission Types</field>
        <field name="res_model">commission.type</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
