<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="commission_product_template_form_view" model="ir.ui.view">
        <field name="name">commission.product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='invoicing']" position="after">
                <page name="commission" string="Commission" attrs="{'invisible': [('type', '=', 'service')]}" groups="hdc_commission.group_commission_user">
                    <group>
                        <group name="commission_gp">
                            <field name="commission_type_edit" invisible="1"/>
                            <field name="commission_type" widget="many2many_tags" domain="[('is_active', '=', True)]" attrs="{'readonly': [('commission_type_edit', '=', False)]}"/>
                        </group>
                        <group></group>
                    </group>
                </page>

            </xpath>
        </field>
    </record>
</odoo>
