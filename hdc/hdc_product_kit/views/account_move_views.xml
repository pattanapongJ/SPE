<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_backend" name="sale order line visibility assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/hdc_product_kit/static/src/js/hide_component_invoice.js"></script>
        </xpath>
    </template>
    <record id="view_view_move_form_inherit_component" model="ir.ui.view">
        <field name="name">account.move.form.inherit.component</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']" position="attributes">
                <attribute name="widget">hide_component_line</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']" position="attributes">
                <attribute name="widget">hide_component_line</attribute>
            </xpath>
            <xpath
                expr="//page/field[@name='invoice_line_ids']/tree/field[@name='discount']"
                position="after"
            >
                <field name="is_component" invisible="1"/>
            </xpath>
            <xpath
                expr="//page/field[@name='invoice_line_ids']/form//field[@name='discount']"
                position="after"
            >
                <field name="is_component" invisible="1"/>
            </xpath>
            <xpath
                expr="//page/field[@name='line_ids']/tree/field[@name='discount']"
                position="after"
            >
                <field name="is_component" invisible="1"/>
            </xpath>
            <xpath
                expr="//page/field[@name='line_ids']/form//field[@name='tax_ids']"
                position="before"
            >
                <field name="is_component" invisible="1"/>
            </xpath>
            
        </field>
    </record>
</odoo>
