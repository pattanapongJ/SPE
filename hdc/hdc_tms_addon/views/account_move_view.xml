<?xml version="1.0"?>
<odoo>
    <record id="view_move_form_inherit2" model="ir.ui.view">
        <field name="name">account.move.inherit2</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="hdc_tms.view_move_form_inherit"/>
        <field name="arch" type="xml">         
            <xpath expr="//field[@name='transport_line_id']" position="attributes"> 
                <attribute name = "readonly"> 1</attribute>
            </xpath>
            <xpath expr="//field[@name='transport_desc']" position="attributes"> 
                <attribute name = "readonly"> 1</attribute>
            </xpath>
            <xpath expr="//field[@name='company_round_id']" position="attributes"> 
                <attribute name = "readonly"> 1</attribute>
            </xpath>
            <xpath expr="//field[@name='company_round_desc']" position="attributes"> 
                <attribute name = "readonly"> 1</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_move_form_inherit_remark_billing" model="ir.ui.view">
        <field name="name">account.move.inherit.remark.billing</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='narration']" position="after">
                <group name="name" string="Remark Billing Finance">
                    <div>
                        <field name="remark_billing" nolabel="1"/>
                    </div>
                </group>
            </xpath>
        </field>
    </record>
    <record id="model_account_move_action_remark_billing" model="ir.actions.server">
        <field name="name">Remark Billing &amp; Finance</field>
        <field name="model_id" ref="hdc_tms_addon.model_wizard_remark_bill_finance"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="state">code</field>
        <field name="binding_view_types">list</field>
        <field name="code"> action = model.action_remark_billing() </field>
    </record>

</odoo>