<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_partner_view_inherit_addon_field" model="ir.ui.view">
        <field name="name">res.partner.view.inherit.addon.field</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority">41</field>
        <field name="arch" type="xml">
             <!-- <xpath expr="//notebook/page[@name='sales_purchases']" position="after">
                <page name='customer_detail' string="Customer Detail">
                    <group>
                        <group>
                            <field name="register_no"/>
                            <field name="register_date"/>
                            <field name="register_capital"/>
                            <field name="director_lists"/>
                        </group>
                        <group>
                            <field name="payment_term_description"/>
                        </group>
                    </group>
                </page>
            </xpath> -->
            <!-- <field name="comment" position="after"> -->
            <xpath expr="//notebook/page[@name='internal_notes']/field[@name='comment']" position="after">
                <separator string="Remark"/>
                <field name="internal_remark" placeholder="Add Remark..."/>
            </xpath>

            <xpath expr="//notebook/page[@name='accounting']" position="after">
                 <page name='delivery_tms' string="Delivery">
                    <group>
                        <group>
                            <field name="delivery_trl" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                            <field name="delivery_trl_description"/>
                            <field name="delivery_company" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                            <field name="delivery_company_description"/>
                        </group>
                        <group>
                        </group>
                    </group>
                 </page>
            </xpath>
            <xpath expr="//field[@name='parent_id']" position="replace">
                <!-- <attribute name="string">Parent Company</attribute> -->
                <group>
                    <field name="parent_id"
                            string="Parent Company"
                            widget="res_partner_many2one"
                            placeholder="Company"
                            domain="[('is_company', '=', True)]" context="{'default_is_company': True, 'show_vat': True}"
                            />
                </group>
            </xpath>

            <!-- <xpath expr="//h1//field[@name='name']/.." position="after">
                <div class="oe_edit_only">
                    <field name="parent_company" options="{'no_create_edit': True,'no_open': True, 'no_quick_create': True}"/>
                </div>
            </xpath> -->
        </field>
    </record>

    <record id="res_partner_view_inherit_addon2" model="ir.ui.view">
        <field name="name">res.partner.view.inherit.addon2</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="hdc_billing_period_route.view_partner_property_form_inherit"/>
        <field name="priority">41</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='account_register']" position="inside">
                <field name="register_no"/>
                <field name="register_date"/>
                <field name="register_capital"/>
                <field name="director_lists"/>
                <field name="bank_guarantee"/>
                <field name="bank_guarantee_amount"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </xpath>
        </field>
    </record>

    <record id="res_partner_payment_term_sale_form" model="ir.ui.view">
        <field name="name">res.partner.partner.payment.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <field name="property_payment_term_id" position="after">
                <field name="payment_term_description_sale" />
            </field>
        </field>
    </record>

    <record id="res_partner_payment_term_purchase_form" model="ir.ui.view">
        <field name="name">res.payment.term.form.field</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <field name="property_supplier_payment_term_id" position="after">
                <field name="payment_term_description_purchase"/>
            </field>
        </field>
    </record>
</odoo>
