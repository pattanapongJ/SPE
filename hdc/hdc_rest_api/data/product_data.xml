<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">
    <!-- Product for Discount -->
    <record id="discount_product_id" model="product.product">
        <field name="name">Discount Product</field>
        <field name="type">service</field>
        <field name="categ_id" ref="product.product_category_all"/>
        <field name="list_price">0.0</field>
        <field name="standard_price">0.0</field>
    </record>

    <!-- Product for Delivery Fee -->
    <record id="delivery_product_id" model="product.product">
        <field name="name">Delivery Fee</field>
        <field name="type">service</field>
        <field name="categ_id" ref="product.product_category_all"/>
        <field name="list_price">0.0</field>
        <field name="standard_price">0.0</field>
    </record>

    <!-- Set the default configuration parameters -->
    <record id="default_discount_product_config" model="ir.config_parameter">
        <field name="key">sale.product_discount_id</field>
        <field name="value" eval="ref('discount_product_id')"/>
    </record>

    <record id="default_delivery_product_config" model="ir.config_parameter">
        <field name="key">sale.product_delivery_id</field>
        <field name="value" eval="ref('delivery_product_id')"/>
    </record>
</odoo>
