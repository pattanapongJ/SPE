<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_wizard_generate_picking_list_report_form" model="ir.ui.view">
        <field name="name">wizard.generate.picking.list.report.form</field>
        <field name="model">wizard.generate.picking.list.report</field>
        <field name="arch" type="xml">
            <form string="Generate Picking List Report" create="false" edit="false">
                <group>
                    <group name="left_generate_view">
                        <field name="picking_list_ids" widget="many2many_tags"/>
                        <field name="user_id"/>
                        <field name="partner_id" widget="many2many_tags" required="1"/>
                        <field name="warehouse_id"/>
                        <field name="origin"/>
                        <field name="sale_id" widget="many2many_tags"/>
                        <field name="project_name"/>
                        <field name="location_id"/>
                    </group>
                    <group name="left_generate_view">
                        <!-- <field name="sale_type_id"/> -->
                        <field name="state"/>
                        <field name="date"/>
                        <label for="delivery_date_from" />
                        <div class="o_row">
                            <field name="delivery_date_from" />
                            <p class="font-weight-bold">To</p>
                            <field name="delivery_date_to" />
                        </div>

                        <field name="checker"/>
                        <!-- <field name="checker_date"/> -->
                        <field name="barcode_date"/>
                    </group>
                </group>
                <footer>
                    <button string="Generate" type="object" name="action_generate_report" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_generate_picking_list_report" model="ir.actions.act_window">
        <field name="name">Generate Picking List Report</field>
        <field name="res_model">wizard.generate.picking.list.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem name="Generate Picking Lists Report" id='menu_generate_picking_list_report' parent="hdc_inventory_picking_list_sale.menu_picking_list_main_root" sequence="3" action="action_wizard_generate_picking_list_report" />
</odoo>
