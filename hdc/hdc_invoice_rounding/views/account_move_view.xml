<?xml version="1.0"?>
<odoo>
    <record id="view_account_form_inherit_rounding" model="ir.ui.view">
        <field name="name">account.move.form.inherit.discount</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@id='invoice_tab']/group/field[@name='amount_untaxed']" position="before">
                <button string="Rounding" name="action_rounding_wizard" type="object"/>
            </xpath>
            <xpath expr="//page[@id='invoice_tab']/group/field[@name='amount_residual']" position="after">
                    <field name="rounding_untax" readonly="1" groups="base.group_no_one"/>
                    <field name="rounding_taxes" readonly="1" groups="base.group_no_one"/>
                    <field name="rounding_total" readonly="1" groups="base.group_no_one"/>
            </xpath>
            <xpath expr="//page[@id='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']" position="before">
                <field name="rounding_price" optional="hide" force_save="1"/>
            </xpath>
            <xpath expr="//page[@id='aml_tab']/field[@name='line_ids']/tree/field[@name='price_subtotal']" position="before">
                <field name="rounding_price" invisible="1" force_save="1"/>
            </xpath>
        </field>
    </record>
</odoo>
