<?xml version="1.0" ?>
<odoo>

    <record id="view_form_product_inherit" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="free_product" string="Free Product"/>
            </xpath>
        </field>
    </record>

    <record id="product_template_form_view_free_product" model="ir.ui.view">
        <field name="name">product.template.form.inherit.free.product</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="free_product" string="Free Product"/>
            </xpath>
        </field>
    </record>

</odoo>