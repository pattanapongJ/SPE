<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="before">
                <field name="sale_channel"/>
            </xpath>
            <xpath expr="//page[@name='sales_purchases']//group[@name='sale']" position="inside" priority="1">
                <field name="is_customer" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='sales_purchases']//group[@name='purchase']" position="inside" priority="1">
                <field name="is_purchase" priority="1" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='image_1920']" position="after">
                <div class="oe_avatar update_image" style="position: absolute; top: 160px; right: 0;">
                    <label for="last_update_image" string="Update" attrs="{'invisible': [('last_update_image', '=', False)]}"/>
                    <field name="last_update_image" readonly="1" attrs="{'invisible': [('last_update_image', '=', False)]}"/>
                </div>
            </xpath>
            <xpath expr="//group/group//field[@name='vat']" position="after">
                <field name="branch_name"/>
                <field name="branch_number"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                 <page name='tax_invoice' string="ข้อมูลใบกำกับภาษี">
                    <group>
                        <group>
                            <field name="customer_type"/>
                            <field name="name_tax_invoice"/>
                            <field name="sale_channel_tax_invoice"/>
                            <label for="street_tax_invoice" string="Address"/>
                            <div>
                                <div class="o_address_format">
                                    <field name="street_tax_invoice" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2_tax_invoice" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="zip_tax_invoice" placeholder="ZIP" class="o_address_zip"/>
                                </div>
                            </div>
                        </group>
                        <group>
                            <field name="vat_tax_invoice"/>
                            <field name="phone_tax_invoice"/>
                            <field name="email_tax_invoice"/>
                        </group>
                    </group>
                 </page>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="active"/>
            </xpath>
        </field>
    </record>
</odoo>
