<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_inherit" model="ir.ui.view">
        <field name="name">res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']/../.." position="replace">
                <div class="oe_title">
                    <label for="name_th" class="oe_edit_only"/>
                    <h1>
                        <field name="name_th"/>
                    </h1>
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                </div>
            </xpath>

            <xpath expr="//sheet/field[@name='logo']" position="before">
                <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
            </xpath>
            <xpath expr="//field[@name='favicon']" position="after">
                <field name="date_logo"/>
                <field name="active" invisible="0"/>
            </xpath>
            <xpath expr="//field[@name='email']" position="before">
                <field name="fax"/>
                <field name="mobile"/>
            </xpath>
            <xpath expr="//field[@name='vat']" position="after">
                <field name="branch_number"/>
                <field name="branch_name"/>
            </xpath>
            <xpath expr="//field[@name='website']" position="after">
                <field name="line"/>
                <field name="facebook"/>
                <field name="report_header_th"/>
                <field name="report_header_eng"/>
            </xpath>

             <xpath expr="//page[@name='general_info']" position="attributes">
                    <!-- แก้ไข attribute ของ <page> -->
                <attribute name="string">General Information(EN)</attribute>
            </xpath>

            <xpath expr="//page[@name='general_info']" position="before">
                <page string="General Information(TH)" name="general_info">
                    <group>
                        <group>
                            <label for="street_th" string="Address"/>
                            <div class="o_address_format">
                                <field name="street_th" placeholder="Street..." class="o_address_street"/>
                                <field name="street2_th" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city_th" placeholder="City" class="o_address_city"/>
                                <field name="state_th_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
                                <field name="zip_th" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_th_id" placeholder="Country" class="o_address_country" options='{"no_open": True}'/>
                            </div>
                            <field name="phone_th" class="o_force_ltr"/>
                            <field name="email_th"/>
                            <field name="fax_th"/>
                            <field name="mobile_th"/>
                            <field name="website_th" string="Website" widget="url" placeholder="e.g. https://www.odoo.com"/>
                            <field name="line_th"/>
                            <field name="facebook_th"/>
                        </group>
                        <group>
                            <field name="vat_th"/>
                            <field name="branch_number_th"/>
                            <field name="branch_name_th"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
