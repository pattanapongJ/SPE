<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="wizard_create_picking_list_form" model="ir.ui.view">
            <field name="name">wizard.create.picking.list.form</field>
            <field name="model">wizard.create.picking.list</field>
            <field name="arch" type="xml">
                <form string="Create Picking">
                    <sheet>
                        <group>
                            <group>
                                <field name="warehouse_id"/>
                                <field name="picking_type_id"/>
                                <field name="location_id"/>
                            </group>
                            <group>
                                <field name="scheduled_date"/>
                                <field name="user_id"/>
                            </group>
                            <group string="โครงการบ้าน">
                                <field name="project_name"/>
                                <field name="land"/>
                                <field name="home"/>
                            </group>
                            <group>
                                <field name="room"/>
                                <field name="remark" colspan="4" width="850" height="400" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Order Line" name="order_line">
                                <field name="line_ids">
                                    <tree string="Order Line" editable="bottom">
                                        <field name="name" invisible="1"/>
                                        <field name="product_id"/>
                                        <field name="categ_id"/>
                                        <field name="location_id"/>
                                        <field name="pick_location_id"/>
                                        <field name="demand_qty"/>
                                        <field name="virtual_available"/>
                                        <field name="picking_draft"/>
                                        <field name="picked_qty"/>
                                        <field name="canceled_qty"/>
                                        <field name="qty"/>
                                        <field name="uom_id"/>
                                        <field name="external_item" optional="hide" readonly="1" force_save="1"/>
                                        <field name="barcode_customer" optional="hide" readonly="1" force_save="1"/>
                                        <field name="barcode_modern_trade" optional="hide" readonly="1" force_save="1"/>
                                        <field name="description_customer" optional="hide" readonly="1" force_save="1"/>
                                        <field name="modify_type_txt" optional="hide" readonly="1" force_save="1"/>
                                        <field name="plan_home" optional="hide" readonly="1" force_save="1"/>
                                        <field name="room" optional="hide" readonly="1" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <footer>
                            <button string="Create Picking" name="action_create_picking" type="object" class="oe_highlight"/>
                            <button string="Cancel" class="oe_link" special="cancel" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_wizard_create_picking_list" model="ir.actions.act_window">
            <field name="name">Create Picking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.create.picking.list</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

</odoo>
