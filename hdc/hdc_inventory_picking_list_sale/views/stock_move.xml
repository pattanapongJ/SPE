<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form_picking_list" model="ir.ui.view">
            <field name="name">view.move.form.inherit.picking_list</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="picking_done_qty"/>
                    <field name="is_done_picking" invisible="0"/>
                    <field name="picking_list_line" invisible="0"/>
                </xpath>
            </field>
        </record>

        <record id="view_move_form_inherit_picking_list" model="ir.ui.view">
            <field name="name">account.move.inherit.picking_list</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="picking_list" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="sub_locations_view_tree" model="ir.ui.view">
            <field name="name">sub.locations.tree</field>
            <field name="model">sub.locations</field>
            <field name="arch" type="xml">
                <tree string="Sub Locations" editable="top">
                    <field name="location_id"/>
                    <field name="product_id"/>
                    <field name="name"/>
                    <field name="is_default" widget="boolean"/>
                </tree>
            </field>
        </record>

        <record id="sub_location_action" model="ir.actions.act_window">
            <field name="name">Sub Locations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sub.locations</field>
            <field name="view_mode">tree</field>
            <field name="view_id" eval="sub_locations_view_tree"/>
        </record>


        <record id="stock_putaway_list_sub_lo" model="ir.ui.view">
            <field name="name">sub_lo.stock.putaway.rule.tree</field>
            <field name="model">stock.putaway.rule</field>
            <field name="inherit_id" ref="stock.stock_putaway_list"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sequence']" position="before">
                    <header>
                        <button name="button_add_sub" type="object" string="Add Sub locations"/>
                    </header>
                </xpath>
                <xpath expr="//field[@name='location_out_id']" position="after">
                    <field name="sub_location_id"/>
                </xpath>
            </field>
        </record>

        <menuitem id="menu_sub_location" name="Sub Locations" parent="stock.menu_warehouse_config"
            action="sub_location_action" sequence="3"/>

    </data>
</odoo>