<odoo>
    <record id="default_purchase_request_form_add_field" model="ir.ui.view">
        <field name="name">default.purchase.request.form.add.fields</field>
        <field name="model">purchase.request</field>
        <field name="priority" eval="18"/>
        <field name="inherit_id" ref="purchase_request_add_field.purchase_request_form_add_field"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="attributes">
                <attribute name="string">Currency</attribute>
            </xpath>            
        </field>
    </record>
</odoo>