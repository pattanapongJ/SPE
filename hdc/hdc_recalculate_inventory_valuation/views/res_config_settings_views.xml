<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_inherit_recal" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.recal</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="stock_account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='valuation_setting_container']" position="after">
                    <div class="row mt16 o_settings_container" name="valuation_setting_container_recal">
                        <div class="col-12 col-lg-6 o_setting_box" id="additional_recalculate_inventory_valuation_setting">
                            <div class="o_setting_left_pane">
                                <field name="use_inventory_valuation_month"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="use_inventory_valuation_month"/>
                                <div class="text-muted">
                                    Set maximum range for recalculate inventory valuation.
                                </div>
                                <div class="content-group"  attrs="{'invisible': [('use_inventory_valuation_month','=',False)]}">
                                    <div class="mt16">
                                        <span class="col-lg-3">Maximum Limit: <field name="inventory_valuation_month" attrs="{'required': [('use_inventory_valuation_month', '=', True)]}"/> months</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
