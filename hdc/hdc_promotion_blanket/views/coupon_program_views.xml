<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_promotion_priority_form_inherit" model="ir.ui.view">
            <field name="name">coupon.program.priority.inherit.form</field>
            <field name="model">coupon.program</field>
            <field name="inherit_id" ref="coupon.coupon_program_view_promo_program_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='rule_date_to']" position="after">
                    <label for="maximum_use_free_product" string="Maximum number" attrs="{'invisible': [('reward_type', '!=', 'product')]}"/>
                    <div name="maximum_use_free_div" attrs="{'invisible': [('reward_type', '!=', 'product')]}">
                        <field name="maximum_use_free_product" class="oe_inline"/>
                        <span class="o_form_label oe_inline"></span> <span class="oe_grey">if 0, infinite use</span>
                    </div>
                    <field name="pricelists" widget="many2many_tags"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
