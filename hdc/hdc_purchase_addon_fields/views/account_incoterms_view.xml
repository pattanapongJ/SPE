<odoo>
    <record id="inherit_account_incoterms_tree" model="ir.ui.view">
        <field name="name">inherit.account.incoterms.tree</field>
        <field name="model">account.incoterms</field>
        <field name="inherit_id" ref="account.view_incoterms_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="description" />
            </xpath>
        </field>
    </record>

    <record id="inherit_account_incoterms_form" model="ir.ui.view">
        <field name="name">inherit.account.incoterms.form</field>
        <field name="model">account.incoterms</field>
        <field name="inherit_id" ref="account.account_incoterms_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="description" />
            </xpath>
        </field>
    </record>
</odoo>
