<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_partner_form_inherit_user_employee" model="ir.ui.view">
        <field name="name">view.partner.form.inherit.user.employee</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']//field[@name='user_id']" position="before">
                <field name="user_employee_id"/>
                <field name="sale_employee_ids" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='sales_purchases']//field[@name='user_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
