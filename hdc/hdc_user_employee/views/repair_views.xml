<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_repair_order_form_user_employee" model="ir.ui.view">
        <field name="name">view.repair.order.form.user.employee</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="user_employee_id"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
