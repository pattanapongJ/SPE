<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="crm_claims_ept_form_view_inherit_user_employee">
        <field name="name">crm.claims.ept.form.view.inherit.user.employee</field>
        <field name="model">crm.claim.ept</field>
        <field name="inherit_id" ref="rma_ept.crm_claims_ept_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='receive_by']" position="before">
                <field name="receive_by_employee"/>
            </xpath>
            <xpath expr="//field[@name='receive_by']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='sale_person_id']" position="before">
                <field name="sale_person_employee_id"/>
            </xpath>
            <xpath expr="//field[@name='sale_person_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='sale_spec']" position="before">
                <field name="sale_spec_employee"/>
            </xpath>
            <xpath expr="//field[@name='sale_spec']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="user_employee_id"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="purchase_crm_claims_ept_form_view_inherit_user_employee">
        <field name="name">purchase.crm.claims.ept.form.view.inherit.user.employee</field>
        <field name="model">purchase.crm.claim.ept</field>
        <field name="inherit_id" ref="hdc_rma_ept_purchase.purchase_crm_claims_ept_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='receive_by']" position="before">
                <field name="receive_by_employee"/>
            </xpath>
            <xpath expr="//field[@name='receive_by']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="user_employee_id"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
