<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mrp_mr_view_form_inherit_user_employee" model="ir.ui.view">
        <field name="name">mrp.mr.view.form.inherit.user.employee</field>
        <field name="model">mrp.mr</field>
        <field name="inherit_id" ref="hdc_mrp_mr.mrp_mr_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sale_person']" position="before">
                <field name="sale_person_employee"/>
            </xpath>
            <xpath expr="//field[@name='sale_person']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='user_request']" position="before">
                <field name="user_request_employee"/>
            </xpath>
            <xpath expr="//field[@name='user_request']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>    
</odoo>
