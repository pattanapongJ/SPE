<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_request_for_quotation_wizard" model="ir.ui.view">
        <field name="name">Request For Quotation Wizard</field>
        <field name="model">request.for.quotation.wizard</field>
        <field name="arch" type="xml">
            <form string="Choose your vendor">
                <group>
                    <group>
                        <field name="search_id" invisible="1"/>
                        <field name="partner_id"/>
                        <field name="order_type"/>
                    </group>
                    <group>
                        <field name="company_id"/>
                    </group>
                </group>
                <footer>
                    <button name="confirm_create_action" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
