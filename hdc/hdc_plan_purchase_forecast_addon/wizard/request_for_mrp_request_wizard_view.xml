<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_request_for_mar_request_wizard" model="ir.ui.view">
        <field name="name">Request For MRP Request Wizard</field>
        <field name="model">request.for.mrp.request.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <group>
                    <group>
                        <field name="search_id" invisible="1"/>
                        <field name="partner_id"/>
                        <field name="request_type"/>
                        <field name="product_type"/>
                    </group>
                    <group>                        
                        <field name="picking_type_id"/>
                        <field name="picking_type_do_id"/>
                        <field name="company_id"/>
                    </group>
                </group>
                <footer>
                    <button name="confirm_create_action" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
