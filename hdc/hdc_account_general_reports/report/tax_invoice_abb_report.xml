<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="tax_invoice_abb_report_document">
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-set="branch_id" t-value="doc.branch_id"/>

        <div class="header" style="font-family: KanitLight">
            <div class="row" style="margin-right:0mm;margin-top:25mm;margin-left:20mm;">
                <div class="col-10 text-center">
                    <div style="font-size: 18.67px;font-weight: bold;">
                        <span t-field="branch_id.company_id.name_th"/>
                    </div>
                </div>
                <div class="col-2 text-right" style="font-size: 12px;margin-left:4mm;">
                    <span>Page</span>
                    <span class="page"/>
                    /
                    <span class="topage"/>
                </div>
            </div>
            <div class="row" style="margin-left:20mm;">
                <div class="col-10 text-center">
                    <div style="font-size: 12px">
                        <span t-field="branch_id.address"/>
                    </div>
                </div>
                <div class="col-2 text-right" style="font-size: 12px">
                    <span style="font-weight: bold;">วันที่: </span>
                    <span t-if="doc.invoice_date">
                        <span t-field="doc.invoice_date"/>
                    </span>
                    <span t-if="not doc.invoice_date">
                        -
                    </span>
                </div>
            </div>
            <div class="row" style="margin-left:20mm;">
                <div class="col-5 text-right">
                    <div style="font-size: 12px">
                        โทร: <span t-field="branch_id.telephone"/>
                    </div>
                </div>
                <div class="col-5 text-left">
                    <div style="font-size: 12px">
                        โทรสาร: <span t-field="branch_id.fax"/>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-left:20mm;">
                <div class="col-6 text-right">
                    <div style="font-size: 12px">
                        เลขประจำตัวผู้เสียภาษีอากร <span t-field="branch_id.company_id.vat_th"/>
                    </div>
                </div>
                <div class="col-4 text-left">
                    <div style="font-size: 12px">
                        <t t-if="doc.branch_id.is_head_office">
                            <span t-field="doc.branch_id.name"/>
                        </t>
                        <t t-else="">
                            สาขาที่ <span t-field="doc.branch_id.branch_no"/>
                        </t>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-left:20mm;">
                <div class="col-10 text-center">
                    <div style="font-size: 16px;font-weight: bold;padding-top:20px">
                        ใบเสร็จรับเงิน/ใบกำกับภาษีอย่างย่อ
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-1 text-nowrap" style="font-size: 12px">
                    <span style="font-weight: bold;">เลขที่เอกสาร </span>
                </div>
                <div class="col-6" style="font-size: 12px">
                    <span t-if="doc.name">
                       <span t-field="doc.name"/>
                   </span>
                   <span t-if="not doc.name">
                       -
                   </span>
                </div>
                <div class="col-2 text-nowrap" style="font-size: 12px">
                    <span style="font-weight: bold;">Customer Req. </span>
                </div>
                <div class="col-3" style="font-size: 12px">
                    <span t-if="doc.customer_po">
                       <span t-field="doc.customer_po"/>
                   </span>
                   <span t-if="not doc.customer_po">
                       -
                   </span>
                </div>
            </div>
        </div>
        <div class="article" style="font-family: KanitLight" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <div class="row">
                <t t-set="l_no" t-value="0"/>
                <table class="table table-borderless" style="font-size: 12px;line-height:11px">
                    <thead>
                        <tr>
                            <th class="text-center border-dotted border-dotted-dark" style="width: 6%;">ลำดับ</th>
                            <th class="text-center border-dotted border-dotted-dark" style="width: 45%;">รายการ</th>
                            <th class="text-center border-dotted border-dotted-dark" style="width: 9%;">จำนวน</th>
                            <th class="text-center border-dotted border-dotted-dark" style="width: 8%;">หน่วยนับ</th>
                            <th class="text-center border-dotted border-dotted-dark" style="width: 13%;">ราคาต่อหน่วย</th>
                            <th class="text-center border-dotted border-dotted-dark" style="width: 19%;">จำนวนเงิน</th>
                        </tr>
                    </thead>
                    <tbody style="font-size: 12px;line-height:0cm">
                        <tr t-foreach="o.invoice_line_ids" t-as="ol">
                        <td class="text-center">
                            <t t-if="not ol.is_component">
                                <t t-set="l_no" t-value="l_no + 1"/>
                                <t t-esc="l_no"/>
                            </t>
                        </td>
                        <td class="text-left">
                            <span t-if="ol.name">
                                <span t-field="ol.name"/>
                            </span>
                            <span t-if="not ol.name">
                                -
                            </span>
                        </td>
                            <td class="text-right">
                            <span t-if="ol.quantity">
                                <span t-esc="'{:,.2f}'.format(float(ol.quantity))"/>
                            </span>
                            <span t-if="not ol.quantity">
                                -
                            </span>
                        </td>
                        <td class="text-right">
                            <span t-if="ol.product_uom_id">
                                <span t-field="ol.product_uom_id"/>
                            </span>
                            <span t-if="not ol.product_uom_id">
                            </span>
                        </td>
                        <td class="text-right">
                            <span t-if="ol.price_unit">
                                <span t-esc="'{:,.2f}'.format(float(ol.price_unit))"/>
                            </span>
                            <span t-if="not ol.price_unit">
                            </span>
                        </td>
                        <td class="text-right">
                            <span t-if="ol.price_total">
                                <span t-esc="'{:,.2f}'.format(float(ol.price_total))"/>
                            </span>
                            <span t-if="not ol.price_total">

                            </span>
                        </td>
                    </tr>
                    </tbody>
                </table>

            </div>
        </div>
        <div class="footer" style="margin-top:0mm;vertical-align: bottom;font-family: KanitLight">
            <div class="last-page not-first-page">
                <div class="row" style="font-size: 12px;">
                    <div class="col-6 text-left border-dotted border-dotted-dark" style="padding-top:7px;font-weight: bold;height:10mm;">
                        <span>
                            (<span t-esc="doc.currency_id.amount_to_text_th(abs(doc.amount_total), o.currency_id.currency_unit_label)"/> )
                        </span>  
                    </div>
                    <div class="col-4 text-left border-dotted-top border-dotted-bottom border-dotted-dark" style="height:10mm;padding-top:7px;">
                        <span>
                          (ราคารวมภาษีมูลค่าเพิ่ม)
                        </span>
                        <span style="padding-left: 70px;">
                            รวมทั้งสิน
                        </span>         
                    </div>
                    <div class="col-2 text-right border-dotted border-dotted-dark" style="height:10mm;padding-top:7px;">
                        <span t-esc="'{0:,.2f}'.format(float(doc.amount_total))"/>
                    </div>
                </div>
                <div class="row" style="font-size: 12px;">
                    <div class="col-4 text-center">
                        <div style="padding-top:20px;">ลงชื่อ.................................................................... ผู้รับสินค้า</div>
                        <div style="padding-top:5px;padding-bottom:5px;">วันที่ ........./........../.............</div>
                    </div>
                    <div class="col-4 text-center">
                        <div style="padding-top:20px;">ลงชื่อ.................................................................... ผู้อนุมัติ</div>
                        <div style="padding-top:5px;padding-bottom:5px;">วันที่ ........./........../.............</div>
                    </div>
                    <div class="col-4 text-center">
                        <div style="padding-top:20px;">ลงชื่อ.................................................................... ผู้รับเงิน</div>
                        <div style="padding-top:5px;padding-bottom:5px;">วันที่ ........./........../.............</div>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="tax_invoice_abb_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="hdc_account_general_reports.tax_invoice_abb_report_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>