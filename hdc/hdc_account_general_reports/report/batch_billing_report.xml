<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="batch_billing_report_document">
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-set="total_amount" t-value="0"/>
        <div class="header" style="font-family: KanitLight" >
            <div class="row">
                <div class="col-2 text-left">
                    
                </div>
                <div class="col-8 text-center">
                    <div style="font-size: 16px;font-weight: bold;" >
                        ใบรับบัญชี
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-4 text-left">
                    
                </div>
                <div class="col-3 text-center">

                </div>
                <div class="col-3 text-center">
                    <div class="row">
                        <div class="col-5" style="font-size: 12px">
                            <span style="font-weight: bold;">เลขที่เอกสาร</span>
                        </div>
                        <div class="col-7 text-left" style="font-size: 12px">
                            <span t-if="doc.name">
                                <span t-field="doc.name"/>
                            </span>
                            <span t-if="not doc.name">
                                -
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-2 text-left" style="font-size: 14px;margin-left:4mm;">
                    <span>Page</span>
                    <span class="page"/>
                    /
                    <span class="topage"/>
                </div>
            </div>
            <div class="row">
                <div class="col text-center" style="width: 50%">
                    <div class="row">
                        <div class="col-4" style="font-size: 12px">
                            <span style="font-weight: bold;">สายการวางบิล</span>
                        </div>
                        <div class="col-4 text-left" style="font-size: 12px">
                            <span t-if="doc.billing_route_id">
                                <span t-field="doc.billing_route_id.name"/>
                            </span>
                            <span t-if="not doc.billing_route_id">
                                -
                            </span>
                        </div>
                        <div class="col-4 text-left" style="font-size: 12px">
                            <span t-if="doc.billing_route_id">
                                <span t-field="doc.billing_route_id.description"/>
                            </span>
                            <span t-if="not doc.billing_route_id">
                                -
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col text-center" style="width: 25%">
                    <div class="row">
                        <div class="col-6" style="font-size: 12px">
                            <span style="font-weight: bold;">เงื่อนไขเครดิต</span>
                        </div>
                        <div class="col-6 text-left" style="font-size: 12px">
                            <span t-if="doc.payment_credit">
                                <span t-field="doc.payment_credit"/>
                            </span>
                            <span t-if="not doc.payment_credit">
                                -
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col text-center" style="width: 25%">
                    <div class="row">
                        <div class="col-6" style="font-size: 12px">
                            <span style="font-weight: bold;">วันที่เอกสาร</span>
                        </div>
                        <div class="col-6 text-left" style="font-size: 12px">
                            <span t-if="doc.date">
                                <span t-field="doc.date"/>
                            </span>
                            <span t-if="not doc.date">
                                -
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="article" style="font-family: KanitLight" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <t t-set="check_partner_id" t-value=""/>
            <t t-set="first_partner_id" t-value="1"/>
            <t t-set="count_partner_id_item" t-value="0"/>
            <t t-set="count_total" t-value="0"/>
            <div class="row">
                <t t-set="l_no" t-value="0"/>
                <table class="table table-borderless" style="font-size: 14px;line-height: 18px;">
                    <thead>
                        <tr>
                            <th class="text-center border border-dark" style="width: 6%;">ใบที่</th>
                            <th class="text-center border border-dark" style="width: 23%;">ชื่อลูกค้า</th>
                            <th class="text-center border border-dark" style="width: 14%;">เลขที่ใบวางบิล</th>
                            <th class="text-center border border-dark" style="width: 11%;">เลขที่บิล</th>
                            <th class="text-center border border-dark" style="width: 10%;">วันที่บิล</th>
                            <th class="text-center border border-dark" style="width: 7%;"> </th>
                            <th class="text-center border border-dark" style="width: 13%;">จำนวนเงิน</th>
                            <th class="text-center border border-dark" style="width: 16%;">ผู้ตัด บ / ช  เช็ค / สด</th>
                        </tr>
                    </thead>
                    <tbody style="font-size: 12px">
                        <t t-foreach="o.line_ids" t-as="ol">
                            <t t-if="check_partner_id == ol.partner_id">
                                <t t-set="check_partner_id" t-value="ol.partner_id"/>
                                <tr>
                                    <td class="text-center border-dark">
                                        <t t-set="l_no" t-value="l_no + 1"/>
                                        <t t-esc="l_no"/>
                                        <t t-set="count_partner_id_item" t-value="count_partner_id_item + 1"/>
                                    </td>
                                    <td class="text-left border-dark">
                                        <span t-if="ol.partner_id.display_name">
                                            <span t-field="ol.partner_id.display_name"/>
    
                                        </span>
                                        <span t-if="not ol.partner_id.display_name">
                                            -
                                        </span>
                                    </td>
                                        <td class="text-left border-dark">
                                        <span t-if="ol.invoice_id.form_no">
                                            <span t-field="ol.invoice_id.form_no"/>
                                        </span>
                                        <span t-if="not ol.invoice_id.form_no">
                                            -
                                        </span>
                                    </td>
                                    <td class="text-left border-dark">
                                        <span t-if="ol.invoice_id.form_no">
                                            <span t-field="ol.invoice_id.form_no"/>
                                        </span>
                                        <span t-if="not ol.invoice_id.form_no">
                                            -
                                        </span>
                                    </td>
                                    <td class="text-center border-dark">
                                        <span t-if="ol.invoice_date">
                                            <span t-field="ol.invoice_date"/>
                                        </span>
                                        <span t-if="not ol.invoice_date">
                                            -
                                        </span>
                                    </td>
                                    <td class="text-right border-dark">
                                        
                                    </td>
                                    <td class="text-right border-dark">
                                        <span t-if="ol.amount">
                                            <span t-esc="'{:.2f}'.format(float(ol.amount))"/>
                                            <t t-set="total_amount" t-value="total_amount + ol.amount"/>
                                        </span>
                                        <span t-if="not ol.amount">
                                            -
                                        </span>
                                    </td>
                                    <td class="text-right border-dark">
                                        
                                    </td>
                                </tr>
                            </t>
                            <t t-if="check_partner_id != ol.partner_id">
                                <t t-set="check_partner_id" t-value="ol.partner_id"/>
                                <t t-if="first_partner_id != 1">
                                    <tr>
                                        <td class="text-center border-dark">
                                        
                                        </td>
                                        <td class="text-left border-dark">
                                            
                                        </td>
                                        <td class="text-right border-dark" >
                                            
                                        </td>
                                        <td class="text-right border-dark" >
                                            
                                        </td>
                                        <td class="text-right border-dark" >
    
                                        </td>
                                        <td class="text-center border-dark">
                                            <t t-if="count_partner_id_item">
                                                <t t-set="count_total" t-value="count_total + count_partner_id_item"/>
                                                <t t-esc="'{0:,.0f}'.format(count_partner_id_item)"/> ใบ
                                                <t t-set="count_partner_id_item" t-value="0"/>
                                            </t>  
                                        </td>
                                        <td class="text-right border-dark">
        
                                        </td>
                                        <td class="text-right border-dark">
                                            
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="first_partner_id == 1">
                                    <t t-set="first_partner_id" t-value="0"/>
                                </t>
                                <tr>
                                    <td class="text-center border-dark">
                                        <t t-set="l_no" t-value="l_no + 1"/>
                                        <t t-esc="l_no"/>
                                        <t t-set="count_partner_id_item" t-value="count_partner_id_item + 1"/>
                                    </td>
                                    <td class="text-left border-dark">
                                        <span t-if="ol.partner_id.display_name">
                                            <span t-field="ol.partner_id.display_name"/>
    
                                        </span>
                                        <span t-if="not ol.partner_id.display_name">
                                            -
                                        </span>
                                    </td>
                                        <td class="text-left border-dark">
                                        <span t-if="ol.billing_no">
                                            <span t-field="ol.billing_no"/>
                                        </span>
                                        <span t-if="not ol.billing_no">
                                            -
                                        </span>
                                    </td>
                                    <td class="text-left border-dark">
                                        <span t-if="ol.invoice_id.form_no">
                                            <span t-field="ol.invoice_id.form_no"/>
                                        </span>
                                        <span t-if="not ol.invoice_id.form_no">
                                            -
                                        </span>
                                    </td>
                                    <td class="text-center border-dark">
                                        <span t-if="ol.invoice_date">
                                            <span t-field="ol.invoice_date"/>
                                        </span>
                                        <span t-if="not ol.invoice_date">
                                            -
                                        </span>
                                    </td>
                                    <td class="text-right border-dark">
                                        
                                    </td>
                                    <td class="text-right border-dark">
                                        <span t-if="ol.amount">
                                            <span t-esc="'{:.2f}'.format(float(ol.amount))"/>
                                            <t t-set="total_amount" t-value="total_amount + ol.amount"/>
                                        </span>
                                        <span t-if="not ol.amount">
                                            -
                                        </span>
                                    </td>
                                    <td class="text-right border-dark">
                                        
                                    </td>
                                </tr>
                            </t>
                        </t>
                        <tr>
                            <td class="text-center">
                            
                            </td>
                            <td class="text-left">
                                
                            </td>
                            <td class="text-right">
                                
                            </td>
                            <td class="text-right">
                                
                            </td>
                            <td class="text-right">

                            </td>
                            <td class="text-center">
                                <t t-if="count_partner_id_item">
                                    <t t-set="count_total" t-value="count_total + count_partner_id_item"/>
                                    <t t-esc="'{0:,.0f}'.format(count_partner_id_item)"/> ใบ
                                    <t t-set="count_partner_id_item" t-value="0"/>
                                </t>        
                            </td>
                            <td class="text-right">

                            </td>
                            <td class="text-right">
                                
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
        <div class="footer" style="margin-top:0mm;vertical-align: bottom;font-family: KanitLight">
            <div class="last-page not-first-page">
                <div class="row" style="font-size: 14px;">
                    <div class="col-4 border-left border-top border-dark">
                        
                    </div>
                    <div class="col-4 text-center border-left border-top border-dark">
                        <div class="row" style="font-size: 14px;">
                            <div class="col-4 text-left">
                                รวมบิล
                            </div>
                            <div class="col-4 text-center">
                               <t t-esc="'{0:,.0f}'.format(count_total)"/>
                            </div>
                            <div class="col-4 text-right">
                                ใบ
                            </div>
                        </div>
                    </div>
                    <div class="col-2 text-right border-left border-top border-dark">
                        <t t-esc="'{0:,.2f}'.format(total_amount)"/>
                    </div>
                    <div class="col-2 border-left border-right border-top border-dark">
                        
                    </div>
                </div>
                <div class="row" style="font-size: 14px;">
                    <div class="col-4 border-left border-top border-bottom border-dark" >
                        <br/>
                        ผู้ลงบัญชี.........................................................................................
                        <br/>
                        วันที่ลง...........................................................................................
                        <br/>&#160;
                    </div>
                    <div class="col-4 border-left border-top border-bottom border-dark">
                        <br/>
                        ผู้รับบัญชี.........................................................................................
                        <br/>
                        วันที่ลง...........................................................................................
                        <br/>&#160;
                    </div>
                    <div class="col-4 border-top border-left border-right border-bottom border-dark">
                        <br/>
                        ผู้ตัดบัญชี.........................................................................................
                        <br/>
                        วันที่ลง...........................................................................................
                        <br/>&#160;
                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="batch_billing_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="hdc_account_general_reports.batch_billing_report_document" t-lang="doc.responsible_id.lang"/>
            </t>
        </t>
    </template>

</odoo>