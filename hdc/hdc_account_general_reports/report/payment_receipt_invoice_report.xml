<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="payment_receipt_invoice_report_document">
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-set="amount_total" t-value="0"/>
        <div class="header" style="font-family: KanitLight" >
            <div class="row">
                <div class="col-2 text-left">
                    
                </div>
                <div class="col-8 text-center"  style="margin-right:0mm;margin-top:15mm">
                    <div style="font-size: 16px;font-weight: bold;" >
                        <span t-field="company.name_th"/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-2 text-left">
                    
                </div>
                <div class="col-8 text-center">
                    <div style="font-size: 10.67px" >
                        <span t-field="company.street_th"/>
                        <span t-field="company.street2_th"/>
                        <span t-field="company.city_th"/>
                        <span t-field="company.state_th_id.name"/>
                        <span t-field="company.zip_th"/>
                    </div>
                </div>
                <div class="col-2 text-right" style="font-size: 12px;margin-left:4mm;">
                    
                </div>
            </div>
            <div class="row">
                <div class="col-2 text-left">
                    
                </div>
                <div class="col-4 text-right">
                    <div style="font-size: 10.67px" >
                        โทร: <span t-field="company.phone_th"/>
                    </div>
                </div>
                <div class="col-4 text-left">
                    <div style="font-size: 10.67px" >
                        โทรสาร: <span t-field="company.fax_th"/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-2 text-left">
                    
                </div>
                <div class="col-5 text-right" style="font-size: 10.67px;width: 39%;">
                    เลขประจำตัวผู้เสียภาษี <span t-field="company.vat_th"/>
                </div>
                <div class="col-4 text-left" style="font-size: 10.67px">
                    สาขาที่ <span t-field="company.branch_number_th"/>
                </div>
            </div>
            <div class="row">
                <div class="col-2 text-left">
                    
                </div>
                <div class="col-8 text-center">
                    <div style="font-size: 16px;font-weight: bold;" >
                        ใบเสร็จรับเงิน/ใบแจ้งหนี้
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-2 text-left">
                    
                </div>
                <div class="col-8 text-center">
                    <div style="font-size: 16px;font-weight: bold;" >
                        RECEIPT / INVOICE
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6 border-top border-left border-right border-dark" style="width: 50%;height: 90px">
                    <div class="row">
                        <div class="col-4" style="font-size: 12px">
                            <span style="font-weight: bold;">รหัสผู้ชื้อ</span>
                        </div>
                        <div class="col-8 text-left" style="font-size: 12px">
                            <span t-if="doc.partner_id.ref">
                                <span t-field="doc.partner_id.ref"/>
                            </span>
                            <span t-if="not doc.partner_id.ref">
                                -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4" style="font-size: 12px">
                            <span style="font-weight: bold;">นามผู้ซื้อ</span>
                        </div>
                        <div class="col-8 text-left" style="font-size: 12px">
                            <span t-if="doc.partner_id.name">
                                <span t-field="doc.partner_id.name"/>
                            </span>
                            <span t-if="not doc.partner_id.name">
                                -
                            </span>
                        </div> 
                    </div>
                    <div class="row">
                        <div class="col-4" style="font-size: 12px">
                            <span style="font-weight: bold;"> ที่อยู่</span>
                        </div>
                        <div class="col-8 text-left">
                            <div style="font-size: 12px" >
                                <span t-field="doc.partner_id.street"/>
                                <span t-field="doc.partner_id.street2"/>
                                <span t-field="doc.partner_id.sub_district"/>
                                <br/>
                                <span t-field="doc.partner_id.city"/>
                                <span t-field="doc.partner_id.state_id.name"/>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-6 border-top border-left border-right border-dark" style="width: 49%;margin-left:9px;height: 90px">
                    <div class="row">
                        <div class="col-4" style="font-size: 12px">
                            <span style="font-weight: bold;">วันที่ / Date: </span>
                        </div>
                        <div class="col-8" style="font-size: 12px">
                            <span t-if="doc.move_id">
                                <span t-if="doc.move_id.date">
                                    <span t-field="doc.move_id.date"/>
                                 </span>
                            </span>
                            <span t-if="not doc.move_id">
                               -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4" style="font-size: 12px">
                            <span style="font-weight: bold;">เลขที่ / No.: </span>
                        </div>
                        <div class="col-8" style="font-size: 12px">
                            <span t-if="doc.name">
                               <span t-field="doc.name"/>
                           </span>
                           <span t-if="not doc.name">
                               -
                           </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4" style="font-size: 12px">
                            <span style="font-weight: bold;">อ้างอิง / Reference: </span>
                        </div>
                        <div class="col-8" style="font-size: 12px">
                            <span t-if="doc.ref">
                                <span t-field="doc.ref"/>
                            </span>
                           <span t-if="not doc.ref">
                               -
                           </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6 border-bottom border-left border-right border-dark" style="width: 50%;">
                    <div class="row">
                        <div class="col-6" style="font-size: 12px;font-weight: bold;padding-bottom:1px;">
                            <span>เลขประจำตัวผู้เสียภาษีอากรผู้ซื้อ</span>
                        </div>
                        <div class="col-6 text-left" style="font-size: 12px">
                            <span t-if="doc.partner_id.vat">
                                <span t-field="doc.partner_id.vat"/>
                            </span>
                            <span t-if="not doc.partner_id.vat">
                                -
                            </span>
                        </div>
                    </div>
                </div>

                <div class="col-6 border-bottom border-left border-right border-dark" style="width: 49%;margin-left:9px;">
                    <div class="row">
                        <div class="col-7" style="font-size: 12px">
                            <span style="font-weight: bold;">เงื่อนไขการชำระเงิน /Payment term </span>
                        </div>
                        <div class="col-4" style="font-size: 12px">
                            <span t-if="doc.reconciled_invoice_ids">
                                <t t-set="invoice_count" t-value="0"/>
                                <t t-foreach="doc.reconciled_invoice_ids" t-as="doc_invoice" >
                                    <span t-if="invoice_count == 0">
                                        <span t-if="doc_invoice.invoice_payment_term_id">
                                            <span t-field="doc_invoice.invoice_payment_term_id.name"/>
                                        </span>
                                        <t t-set="invoice_count" t-value="invoice_count + 1"/>
                                    </span>
                                </t>
                            </span>
                            <span t-if="not doc.reconciled_invoice_ids">
                               -
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="article" style="font-family: KanitLight" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <div class="row">
                <t t-set="l_no" t-value="0"/>
                <table class="table table-borderless" style="font-size: 12px;line-height: 18px;">
                    <thead>
                        <tr>
                            <th class="text-center border border-dark" style="width: 6%;">Item</th>
                            <th class="text-center border border-dark" style="width: 14%;">รหัสสินค้า</th>
                            <th class="text-center border border-dark" style="width: 35%;">รายการ</th>
                            <th class="text-center border border-dark" style="width: 9%;">จำนวน</th>
                            <th class="text-center border border-dark" style="width: 6%;">หน่วย</th>
                            <th class="text-center border border-dark" style="width: 15%;">ราคาต่อหน่วย</th>
                            <th class="text-center border border-dark" style="width: 15%;">จำนวนเงิน</th>
                        </tr>
                    </thead>
                    <tbody style="font-size: 10.67px">
                        <t t-foreach="doc.reconciled_invoice_ids" t-as="doc_invoice" >
                            <tr t-foreach="doc_invoice.invoice_line_ids" t-as="ol">
                                <td class="text-center">
                                    <t t-if="not ol.is_component">
                                        <t t-set="l_no" t-value="l_no + 1"/>
                                        <t t-esc="l_no"/>
                                    </t>
                                </td>
                                <td class="text-left">
                                    <span t-if="ol.product_id.default_code">
                                        <span t-field="ol.product_id.default_code"/>
                                    </span>
                                    <span t-if="not ol.product_id.default_code">
                                        -
                                    </span>
                                </td>
                                <td class="text-left">
                                    <span t-if="ol.product_id.name">
                                        <span t-field="ol.product_id.name"/>
                                    </span>
                                    <span t-if="not ol.product_id.name">
                                        -
                                    </span>
                                </td>
                                    <td class="text-right" >
                                    <span t-if="ol.quantity">
                                        <span t-field="ol.quantity"/>
                                    </span>
                                    <span t-if="not ol.quantity">
                                        -
                                    </span>
                                </td>
                                <td class="text-right" >
                                    <span t-if="ol.product_uom_id">
                                        <span t-field="ol.product_uom_id"/>
                                    </span>
                                    <span t-if="not ol.product_uom_id">
                                        -
                                    </span>
                                </td>
                                <td class="text-right" >
                                    <span t-if="ol.price_unit">
                                        <span t-esc="'{:.2f}'.format(float(ol.price_unit))"/>
                                    </span>
                                    <span t-if="not ol.price_unit">
                                        -
                                    </span>
                                </td>
                                
                                <td class="text-right">
                                    <span t-if="ol.price_total">
                                        <span t-esc="'{:.2f}'.format(float(ol.price_total))"/>
                                        <t t-set="amount_total" t-value="amount_total + ol.price_total"/>
                                    </span>
                                    <span t-if="not ol.price_total">
                                        -
                                    </span>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>

            </div>
        </div>
        <div class="footer" style="margin-top:0mm;vertical-align: bottom;font-family: KanitLight">
            <div class="last-page not-first-page">
                <div class="row" style="font-size: 12px;">
                    <div class="col border border-dark" style="font-size: 10.67px;width: 66%;">
                        หมายเหตุ&#160;&#160;&#160;
                        <span t-if="doc.move_id">
                            <t t-set="line_count" t-value="0"/>
                            <t t-foreach="doc.move_id.line_ids" t-as="move_line" >
                                <span t-if="line_count == 0">
                                    <span t-if="move_line.name">
                                        <span t-field="move_line.name"/>
                                    </span>
                                    <t t-set="line_count" t-value="line_count + 1"/>
                                </span>
                            </t>
                        </span>
                        <span t-if="not doc.move_id">
                           -
                        </span>
                    </div>
                    <div class="col" style="width: 34%;">
                        <div class="row">
                            <div class="col-6 text-left border-top border-bottom border-dark">รวมเงิน</div>
                            <div class="col-6 text-right border border-dark" style="width: 51%;">
                                <span t-esc="'{0:,.2f}'.format(float(amount_total))"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 text-left border-bottom border-dark"><span>&#160;</span></div>
                            <div class="col-6 text-right border-bottom border-left border-right border-dark">

                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="font-size: 12px;">
                    <div class="col text-center border-bottom border-left border-right border-dark" style="width: 66%;">
                        <div>
                            ( <span t-esc="doc.currency_id.amount_to_text_th(abs(doc.amount), doc.currency_id.currency_unit_label)"/> )
                        </div>  
                    </div>
                    <div class="col" style="width: 34%;">
                        <div class="row">
                            <div class="col-6 text-left border-bottom border-dark">จำนวนเงินทั้งสิ้น</div>
                            <div class="col-6 text-right border-bottom border-left border-right border-dark">
                                <span t-esc="'{0:,.2f}'.format(float(doc.amount))"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="font-size: 10.67px;padding-top:5px;">
                    <div class="col text-left" style="width: 12%;">
                        ชำระเงินโดย
                    </div>
                    <div class="col text-left" style="width: 10%;">
                        (&#160;&#160;) เงินสด
                    </div>
                    <div class="col text-left" style="width: 78%;">
                        (&#160;&#160;) เช็คธนาคาร............................................................... สาขา................................. เลขที่.................................. วันที่...................................... จำนวนเงิน.............................................
                    </div>
                </div>
                <div class="row" style="font-size: 10.67px;">
                    <div class="col text-left" style="width: 12%;">
                        
                    </div>
                    <div class="col text-left" style="width: 10%;">
                        
                    </div>
                    <div class="col text-left" style="width: 78%;">
                        (&#160;&#160;) เช็คธนาคาร............................................................... สาขา................................. เลขที่.................................. วันที่...................................... จำนวนเงิน.............................................
                    </div>
                </div>
                <div class="row" style="font-size: 10.67px;">
                    <div class="col text-left">
                        กรณีชำระเงินด้วยเช็ค ใบเสร็จรับเงินฉบับนี้จะสมบูรณ์ต่อเมื่อเรียกเก็บเงินตามเช็คได้เรียบร้อย
                    </div>
                </div>
                <div class="row" style="font-size: 10.67px;">
                    <div class="col-3 text-center border border-dark">
                        <div style="padding-top:20px;">..................................</div>
                        <div style="font-size: 10.67px;">ผู้มีอำนาจลงนาม / Authorized by</div>
                        <div style="padding-top:5px;padding-bottom:5px;">วันที่ ........./........../.............</div>
                    </div>
                    <div class="col-3 text-center border-top border-bottom border-dark">
                        <div style="padding-top:20px;">..................................</div>
                        <div style="font-size: 10.67px;">ผู้จัดทำ / Prepared by</div>
                        <div style="padding-top:5px;padding-bottom:5px;">วันที่ ........./........../.............</div>
                    </div>
                    <div class="col-3 text-center border-top border-left border-bottom border-dark">
                        <div style="padding-top:20px;">..................................</div>
                        <div style="font-size: 10.67px;">ผู้รับเงิน / Collector</div>
                        <div style="padding-top:5px;padding-bottom:5px;">วันที่ ........./........../.............</div>
                    </div>
                    <div class="col-3 text-center border border-dark">
                        <div style="padding-top:20px;">..................................</div>
                        <div style="font-size: 10.67px;">ผู้รับบิล / Received by</div>
                        <div style="padding-top:5px;padding-bottom:5px;">วันที่ ........./........../.............</div>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="payment_receipt_invoice_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="hdc_account_general_reports.payment_receipt_invoice_report_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>