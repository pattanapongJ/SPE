<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="physical_detail_report_view" model="ir.ui.view">
        <field name="name">Physical Detail Report</field>
        <field name="model">wizard.physical.detail.report</field>
        <field name="arch" type="xml">
            <form string="Physical Detail Report">
                <group string="วันที่ค้นหา">
                    <group>
                        <field name="date_from" required="1"/>
                    </group>
                    <group>
                        <field name="date_to" required="1"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="warehouse_id"/>
                    </group>
                </group>

                <group string="สินค้า">
                </group>
                <field name="product_id" domain="[('type','!=','service')]" >
                    <tree string="Product" editable="bottom">
                        <field name="name" string="ชื่อสินค้า"/>
                    </tree>
                </field>

                <footer>
                    <button name="get_report" string="พิมพ์ Excel" type="object" class="oe_highlight"/>
                    <button string="ยกเลิก" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_physical_detail_report_view" model="ir.actions.act_window">
        <field name="name">Physical (Detail)</field>
        <field name="res_model">wizard.physical.detail.report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="physical_detail_report_view"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_physical_detail_report"
        name="Physical (Detail) Report"
        action="action_physical_detail_report_view"
        sequence="3"
        parent="hdc_stock_movement_reports.menu_stock_operation_reports"
    />
</odoo>
