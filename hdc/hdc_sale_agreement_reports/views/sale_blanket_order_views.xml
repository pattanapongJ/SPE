<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_blanket_order_inherit_report" model="ir.ui.view">
        <field name="name">sale.blanket.order.form.inherit.report</field>
        <field name="model">sale.blanket.order</field>
        <field name="inherit_id" ref="sale_blanket_order.view_blanket_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_confirm']" position="after">
                <button name="print" string="Print Sale Agreement" class="oe_highlight" type="object"/>
            </xpath>
        </field>
    </record>
</odoo>
