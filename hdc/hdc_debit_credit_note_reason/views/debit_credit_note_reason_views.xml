        <field name="model">debit.credit.note.reason</field>
        <field name="arch" type="xml">
            <form string="Reason">
                <group>
                    <field name="name"/>
                    <field name="type"/>
                </group>
            </form>
        </field>
    </record> -->

    <!-- Menu -->
    <menuitem id="menu_debit_credit_note_reason"
          name="Debit Note, Credit Note Reason"
          parent="account.menu_finance_configuration"
          action="action_debit_credit_note_reason"
          sequence="2"/>

</odoo>
