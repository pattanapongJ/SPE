<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_record_deletion_log_tree" model="ir.ui.view">
        <field name="name">record.deletion.log.tree</field>
        <field name="model">record.deletion.log</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="create_date"/>
                <field name="model"/>
                <field name="res_id"/>
                <field name="name"/>
                <field name="deleted_by"/>
            </tree>
        </field>
    </record>

    <record id="view_record_deletion_log_form" model="ir.ui.view">
        <field name="name">record.deletion.log.form</field>
        <field name="model">record.deletion.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="create_date"/>
                        <field name="model"/>
                        <field name="res_id"/>
                        <field name="name"/>
                        <field name="deleted_by"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_delete_record_log" model="ir.actions.act_window">
        <field name="name">Deletion Record Logs</field>
        <field name="res_model">record.deletion.log</field>
        <field name="view_mode">tree,form</field>
    </record>

        <record id="view_record_deletion_log_setting_tree" model="ir.ui.view">
        <field name="name">record.deletion.log.setting.tree</field>
        <field name="model">record.deletion.log.setting</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="model_id"/>
                <field name="active_log" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="view_record_deletion_log_setting_form" model="ir.ui.view">
        <field name="name">record.deletion.log.setting.form</field>
        <field name="model">record.deletion.log.setting</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="model_id"/>
                        <field name="active_log" widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_record_deletion_log_setting" model="ir.actions.act_window">
        <field name="name">Deletion Record Logs Setting</field>
        <field name="res_model">record.deletion.log.setting</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
        id="hdc_unlink_log"  
        name="Deletion Record Logs"  
        parent="base.menu_custom" 
        sequence="26"/>

    <menuitem
        id="menu_delete_record" 
        name="Deletion Record Logs"
        parent="hdc_unlink_log"
        action="action_delete_record_log"
        sequence="10"/>

    <menuitem 
        id="menu_record_deletion_log_setting" 
        name="Deletion Record Logs Settings" 
        parent="hdc_unlink_log" 
        action="action_record_deletion_log_setting"
        sequence="20"/>

</odoo>