    <record id="product_supplierinfo_addon_fields_inherit_product_supplierinfo" model="ir.ui.view">
        <field name="name">product.supplierinfo.addon.fields.form.inherit.product.supplierinfo</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="vendor_code" readonly="True"/>
            </xpath>
            <xpath expr="//group[@name='vendor']" position="inside">
                <field name="buyer_name"/>
                <label for="production_leadtime"/>
                <div>
                    <field name="production_leadtime" class="oe_inline"/> days
                </div>
                <label for="booking"/>
                <div>
                    <field name="booking" class="oe_inline"/> days
                </div>
                <label for="transit_time"/>
                <div>
                    <field name="transit_time" class="oe_inline"/> days
                </div>
                <label for="clearance"/>
                <div>
                    <field name="clearance" class="oe_inline"/> days
                </div>
                <label for="product_delivery_safety"/>
                <div>
                    <field name="product_delivery_safety" class="oe_inline" readonly="True"/> days
                </div>
                <label for="safety_stock"/>
                <div>
                    <field name="safety_stock" class="oe_inline"/> days
                </div>
                <label for="month_to_stock"/>
                <div>
                    <field name="month_to_stock" class="oe_inline" readonly="True"/> month
                </div>
            </xpath>
            <xpath expr="//group" position="after">  
                <group name="remark" string="Remark">
                    <div>
                        <field name="remark" placeholder="This note is added to purchase orders."/>
                    </div>
                </group>
            </xpath>
        </field>
    </record>  
    <record id="product_addon_fields_view_product_supplierinfo_tree_inherit" model="ir.ui.view">
        <field name="name">product.addon.fields.view.product.supplierinfo.tree.inherit</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="vendor_code" readonly="True"/>
            </xpath>
        </field>
    </record>
</odoo>
