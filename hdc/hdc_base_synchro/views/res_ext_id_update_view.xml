<odoo>

    <record id="view_res_ext_id_update_form" model="ir.ui.view">
        <field name="name">res.ext.id.update.form</field>
        <field name="model">res.ext.id.update</field>
        <field name="arch" type="xml">
            <form string="External ID Update" create="false" edit="false">
                <sheet>
                    <group col="4">
                        <field name="name"/>
                        <field name="date"/>
                        <field name="user_id"/>
                        <field name="obj_id"/>
                    </group>
                    <separator string="Message"/>
                    <field name="body"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_res_ext_id_update_tree" model="ir.ui.view">
        <field name="name">res.ext.id.update.tree</field>
        <field name="model">res.ext.id.update</field>
        <field name="arch" type="xml">
            <tree string="External ID Update" create="false" edit="false">
                <field name="name"/>
                <field name="date"/>
                <field name="user_id"/>
                <field name="obj_id"/>
            </tree>
        </field>
    </record>

    <record id="action_res_ext_id_update" model="ir.actions.act_window">
        <field name="name">Request Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.ext.id.update</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
