<odoo>
    <record id="booth_consign_urgent_delivery_tree" model="ir.ui.view">
        <field name="name">booth.consign.urgent.delivery.tree</field>
        <field name="model">booth.consign.urgent.delivery</field>
        <field name="arch" type="xml" >
            <tree create="true" duplicate="false">
                <field name="name"/>
                <field name="date" />
                <field name="delivery_date" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="booth_consign_urgent_delivery_form" model="ir.ui.view">
        <field name="name">booth.consign.urgent.delivery.form</field>
        <field name="model">booth.consign.urgent.delivery</field>
        <field name="arch" type="xml">
            <form string="Booth &amp; Consignment Urgent Delivery" create="false" duplicate="false">
                <header>
                    <field name="delivery_check" invisible="1"/>
                    <field name="receipt_check" invisible="1"/>
                    <button name="action_open_wizard_add_urgent_delivery" states="in_progress,waiting_delivery" type="object" string="Add Sale Order" class="oe_highlight" />
                    <button name="action_open_wizard_remove_urgent_delivery" states="in_progress,waiting_delivery" type="object" string="Remove Sale Order" class="oe_highlight" />
                    <button name="action_open_urgent_delivery_lines" type="object" string="Urgent Delivery Transfer Lines" class="oe_highlight" invisible="1"/>
                    <button name="create_delivery" type="object" string="Create Delivery" class="oe_highlight" attrs="{'invisible': [('delivery_check', '=', True)]}"/>
                    <button name="create_receipt" type="object" string="Create Receipt" class="oe_highlight" attrs="{'invisible': ['|',('receipt_check', '=', True),('delivery_check', '=', False)]}"/>
                    <button name="action_cancel" states="in_progress,waiting_delivery" type="object" string="Cancel" class="oe_highlight" />
                    <field name="state" widget="statusbar" statusbar_visible="in_progress,waiting_delivery,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" string="Transfer" name="action_inter" type="object" icon="fa-truck">
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group name="urgent_header">
                        <group>
                            <field name="user_employee_id" readonly="0"/>
                            <field name="from_warehouse" required="1"/>
                            <field name="transit_location" required="1"/>
                            <field name="location_dest_id" required="1"/>
                        </group>
                        <group>
                            <field name="to_warehouse" required="1"/>
                            <field name="date" readonly="1"/>
                            <field name="delivery_date" readonly="1"/>
                            <field name="picking_ids" invisible="1"/>
                            <field name="location_id" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sale Orders">
                            <field name="sale_order_ids">
                                <tree editable="bottom" create="0" delete="0">
                                    <field name="name" readonly="1"/>
                                    <field name="partner_id" readonly="1"/>
                                    <field name="location_id" readonly="1"/>
                                    <field name="date_order" readonly="1"/>
                                    <field name="state" readonly="1"/>
                                </tree>
                            </field>
                            <group string="Remark" name="remark_group">
                                <div>
                                    <field name="remark" class="oe_inline"/>
                                </div>
                            </group>
                        </page>
                        <page string="Product Lists">
                            <field name="b_c_urgent_delivery_line" attrs="{'readonly': [('delivery_check', '=', True)]}">
                                <tree editable="bottom" create="0" delete="0">
                                    <field name="b_c_urgent_delivery_id" invisible="1"/>
                                    <field name="product_id" readonly="1" force_save="1"/>
                                    <field name="qty_inventory_quantity" readonly="1" force_save="1"/>
                                    <field name="qty_available_quantity" readonly="1" force_save="1"/>
                                    <field name="qty"/>
                                    <field name="urgent_pick" readonly="1" force_save="1"/>
                                    <field name="qty_remain" readonly="1" force_save="1"/>
                                    <field name="urgent_location_ids" string="Urgent Location" widget="many2many_tags" readonly="1" force_save="1"/>
                                    <field name="sale_order_ids" string="Sale Orders" widget="many2many_tags" readonly="1" force_save="1"/>
                                    <field name="product_uom" readonly="1" force_save="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="booth_consign_urgent_delivery_form_action" model="ir.actions.act_window">
        <field name="name">Booth &amp; Consignment Urgent Delivery Transfer</field>
        <field name="res_model">booth.consign.urgent.delivery</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="booth_consign_urgent_delivery_tree"/>
    </record>

    <menuitem
        action="booth_consign_urgent_delivery_form_action"
        id="booth_consign_urgent_delivery_menu"
        parent="hdc_sale_quick_invoice.menu_urgent_delivery" sequence="50"/>

</odoo>