<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="is_below_cost" invisible="1" />
                <field name="is_oversea" invisible="1" />
            </xpath>
        </field>
    </record>
    <record id="view_sales_order_filter_inherit_sale_type" model="ir.ui.view">
        <field name="name">view.sales.order.filter.inherit.sale.type</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <filter string="Approve Below Cost" name="is_confirm_below_cost" context="{'group_by':'is_confirm_below_cost'}"/>
            </xpath>
        </field>
    </record>
</odoo>