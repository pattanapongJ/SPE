<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hdc_purchase_order_report_document">
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <div class="header" style="font-family: Kanit" >
            <div class="row">
                <div class="col-2 text-left">
                    <t t-call="hdc_purchase_general_reports.report_logo_style"/>
                </div>
                <div class="col-7 text-left" style="font-size: 10px">
                    <span style=""><t t-esc="company.name_th"/></span><br/>
                    <span style=""><t t-esc="company.name"/></span><br/>
                    <span style=""><t t-esc="company.street_th"/><t t-esc="company.street2_th"/> <t t-esc="company.city_th"/> <t t-esc="company.state_th_id.name"/> <t t-esc="company.zip_th"/></span><br/>
                    <span style=""><t t-esc="company.street"/><t t-esc="company.street2"/> <t t-esc="company.city"/> <t t-esc="company.state_id.name"/> <t t-esc="company.zip"/></span><br/>
                    <span style="">TEL: <t t-esc="company.phone"/></span> / <span style="">FAX <t t-esc="company.fax"/></span> / <span style="">WEBSITE <t t-esc="company.website"/></span> / <span style="">EMAIL: <t t-esc="company.email"/></span><br/>
                    <span style="">เลขประจำตัวผู้เสียภาษี: <t t-esc="company.vat"/></span><br/>
                </div>
                <div class="col-3 text-right"  style="margin-right:0mm;margin-top:3mm">
                    <div style="font-size: 15px" >
                        <span><strong>ใบขอซื้อสินค้า</strong></span><br/>
                        <span><strong>(PURCHASE REQUISTION)</strong></span><br/>
                    </div>
                    <div style="font-size: 10px" >
                        <span>ต้นฉบับ/Original</span>
                    </div>
                </div>
            </div>

            <div class="row" style="font-size: 15px;margin-bottom:2mm;margin-top:10mm;border-top: 1px solid black;border-bottom: 1px solid black;height: 105px">
                <br/>
                <div class="col-7">
                    <div class="row">
                        <div class="">
                            <span><strong>แผนกที่ขอซื้อ: </strong></span>
                        </div>
                        <div class="">
                            <!-- <span t-if="doc.partner_id.ref">
                                <span t-field="doc.partner_id.ref"/>
                            </span>
                            <span t-if="not doc.partner_id.ref">
                                -
                            </span> -->
                        </div>
                    </div>
                    <div class="row">
                        <div class="">
                            <span><strong>ขื่อผู้ขอซื้อ: </strong></span>
                        </div>
                        <div class="">
                            <!-- <span t-if="doc.partner_id.name">
                                <span t-field="doc.partner_id.name"/>
                            </span>
                            <span t-if="not doc.partner_id.name">
                                -
                            </span> -->
                        </div>
                    </div>
                    <!-- <div class="row">
                        <div class="col-4">
                            <span><strong>Address: </strong></span>
                        </div>
                        <div class="col-8">
                            <span t-if="doc.partner_id.street">
                                <span t-field="doc.partner_id.street"/>
                            </span>
                            <span t-if="doc.partner_id.street2">
                                <span t-field="doc.partner_id.street2"/>
                            </span>
                            <span t-if="doc.partner_id.sub_district">
                                <span t-field="doc.partner_id.sub_district"/>
                            </span>
                            <span t-if="doc.partner_id.city">
                                <span t-field="doc.partner_id.city"/>
                            </span>
                            <span t-if="doc.partner_id.state_id.name">
                                <span t-field="doc.partner_id.state_id.name"/>
                            </span>
                            <span t-if="doc.partner_id.zip">
                                <span t-field="doc.partner_id.zip"/>
                            </span>
                            <span t-if="doc.partner_id.vat">
                                <span t-field="doc.partner_id.vat"/>
                            </span>
                        </div>
                    </div> -->
                    <div class="row">
                        <div class="">
                            <span><strong>ชื่อผู้ขายหรือยี่ห้อที่ต้องการ: </strong></span>
                        </div>
                        <div class="">
                            <!-- <span t-if="doc.contact_person">
                                <span t-field="doc.contact_person.name"/>
                            </span>
                            <span t-if="not doc.contact_person">
                                -
                            </span> -->
                        </div>
                    </div>
        

                </div>
                <div class="col-5">
                    <div class="row">
                            <div class="col-12" style="background-color:#ECECEC">
                            <div class="row">
                                <div class="col-5">
                                    <span><strong>วันที่:</strong></span>
                                </div>
                                <div class="col-7">
                                    <!-- <span t-if="doc.date_order">
                                        <span t-field="doc.date_order" t-options='{"format": "dd/MM/yyyy"}'/>
                                </span>
                                <span t-if="not doc.date_order">
                                    -
                                </span> -->
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-5">
                                    <span><strong>เลขที่ใบขอซื้อ:</strong></span>
                                </div>
                                <div class="col-7">
                                    <!-- <span t-if="doc.name">
                                        <t t-esc="doc.name" />
                                    </span>
                                    <span t-if="not doc.name">
                                    -
                                    </span> -->
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-5">
                                    <span><strong>วันที่ต้องการ:</strong></span>
                                </div>
                                <div class="col-7">
                                <!-- <span t-if="doc.date_order">
                                    <t t-esc="doc.date_order.strftime('%d/%m/%Y')" />
                                    </span>
                                    <span t-if="not doc.date_order">
                                    -
                                    </span> -->
                                    -
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-5">
                                    <span><strong>วันที่หมดอายุ:</strong></span>
                                </div>
                                <div class="col-7">
                                    <!-- <span t-if="doc.incoterm_id.name">
                                    <span t-field="doc.incoterm_id.name"/>
                                    </span>
                                    <span t-if="not doc.incoterm_id.name">
                                    -
                                    </span> -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

       

        <div class="article" style="font-family: Kanit" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <div class="row">
                    <t t-set="l_no" t-value="0"/>
                    <table class="table" style="font-size: 14px;line-height: 18px">
                        <thead style="background-color:#ECECEC">
                            <tr>
                                <th class="text-center" style="width: 6%;">NO</th>
                                <th class="text-center" style="width: 20%;">MATERIAL CODE</th>
                                <th class="text-center" style="width: 40%;">DESCRIPTION</th>
                                <th class="text-center" style="width: 17%;">STOCK ON HAND</th>
                                <th class="text-center" style="width: 17%;">PANDING ORDER</th>
                                <!-- <th class="text-center" style="width: 11%;">Unit Price</th> -->
                                <!-- <th class="text-center" style="width: 6%;">Discount</th> -->
                                <!-- <th class="text-center" style="width: 6%;">VAT</th> -->
                                <!-- <th class="text-center" style="width: 19%;">Untaxed Amount</th> -->
                            </tr>
                        </thead>
                        <tbody style="font-size: 14px">
                            <t t-set="set_no_vat" t-value="0"/>
                            <t t-set="set_vat" t-value="0"/>
                            <t t-set="set_dis" t-value="0"/>
                            <tr t-foreach="o.order_line" t-as="ol">
                                <td class="text-center">
                                    <t t-if="not ol.display_type == 'line_section'" >
                                        <t t-set="l_no" t-value="l_no + 1"/>
                                        <t t-esc="l_no"/>
                                    </t>
                                </td>
    
                                <td class="text-center" >
                                    <span t-if="ol.product_id.default_code">
                                        <span t-field="ol.product_id.default_code"/>
                                    </span>
                                    <span t-if="not ol.product_id.default_code">
                                        -
                                    </span>
                                </td>
                                <td class="text-left" >
                                    <span t-if="ol.name">
                                        <span t-field="ol.name"/>
                                    </span>
                                    <span t-if="not ol.name">
                                        -
                                    </span>
                                </td>
                                <td class="text-center" >
                                    <!-- <span t-if="ol.product_qty">
                                        <span t-field="ol.product_qty"/>
                                    </span>
                                    <span t-if="not ol.product_qty">
                                        -
                                    </span> -->
                                </td>
                                <td class="text-center" >
                                    <!-- <span t-if="ol.price_unit">
                                        <span t-field="ol.price_unit"/>
                                    </span>
                                    <span t-if="not ol.price_unit">
                                        -
                                    </span> -->
                                </td>
                            
                            </tr>
                        </tbody>
                    </table>
            </div>
        </div>
        <div class="footer" style="margin-top:0mm;vertical-align: bottom;font-family: Kanit">
                <div class="row" style="font-size: 15px;border-top: 1px solid black;max-height:183px;overflow: hidden;">
                    <br/>
                    <div class="col-12 ">
                        <div>หมายเหตุ: <span t-field="doc.notes"/></div>
                    </div>
                </div>

                <br/>
            <div class="last-page not-first-page" style="font-size: 15px">
                <div class="row" style="font-size: 15px;border-top: 1px solid black;max-height:183px;overflow: hidden;">
                    <div class="col-4 " align="center">
                        <div>ผู้ขอซื้อ</div>
                        <br/><br/>
                        <div class="row">
                            <div class="col-8" style="border-bottom: 1px solid black">&#160;</div>
                        </div>
                        <div style="font-size: 13px">&#160;</div>
                        <div>วันที่............/.............../..............</div>
                    </div>
                    <div class="col-4 " align="center">
                        <div>หัวหน้าแผนก</div>
                        <br/><br/>
                        <div class="row">
                            <div class="col-8" style="border-bottom: 1px solid black">&#160;</div>
                        </div>
                        <div style="font-size: 13px">&#160;</div>
                        <div>วันที่............/.............../..............</div>
                    </div>
                    <div class="col-4 " align="center">
                        <div>ผู้อนุมัติ</div>
                        <br/>
                        <br/>
                        <div class="row">
                            <div class="col-8" style="border-bottom: 1px solid black">&#160;</div>
                        </div>
                        <div style="font-size: 13px">&#160;</div>
                        <div>วันที่............/.............../..............</div>
                    </div>
                </div>
            </div>


            <div  class="row text-right" style="font-size: 15px;border-top: 1px solid black">
                <div class="col-12 text-right">
                    <span>หน้า </span>
                    <span class="page"/>
                    /
                    <span class="topage"/>
                </div>
            </div>
        </div>
    </template>

    <template id="hdc_purchase_order_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="hdc_purchase_general_reports.hdc_purchase_order_report_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>