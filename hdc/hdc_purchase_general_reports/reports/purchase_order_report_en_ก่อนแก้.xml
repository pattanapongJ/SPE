<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hdc_purchase_order_report_document_en_edit">
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <div class="header" style="font-family: Kanit" >
            <div class="row">
                <div class="col-2 text-center">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo.decode('ascii')" class="pull-left" style="max-height: 140px; max-width: 140px;"/>
                </div>
                <div class="col-7 text-left" style="font-size: 10px">
                    <span style=""><t t-esc="company.name_th"/></span><br/>
                    <span style=""><t t-esc="company.name"/></span><br/>
                    <span style=""><t t-esc="company.street_th"/> <t t-esc="company.street2_th"/> <t t-esc="company.city_th"/> <t t-esc="company.state_th_id.name"/> <t t-esc="company.zip_th"/></span><br/>
                    <span style=""><t t-esc="company.street"/>,<t t-esc="company.street2"/>,<t t-esc="company.city"/>,<t t-esc="company.state_id.name"/>,<t t-esc="company.zip"/>,<t t-esc="company.country_id.name"/></span><br/>
                    <span style="">+<t t-esc="company.phone"/></span> / <span style="">FAX +<t t-esc="company.fax"/></span> / <span style="">WEBSITE <t t-esc="company.website"/></span> / <span style="">EMAIL: <t t-esc="company.email"/></span><br/>
                    <span style="">เลขประจำตัวผู้เสียภาษี: <t t-esc="company.vat"/></span><br/>
                </div>
                <div class="col-3 text-right"  style="margin-right:0mm;margin-top:3mm">
                    <div style="font-size: 15px" >
                        <span><strong>ใบสั่งซื้อสินค้า</strong></span><br/>
                        <span><strong>(Purchase Order)</strong></span><br/>
                    </div>
                    <div style="font-size: 10px" >
                        <span>ต้นฉบับ/Original</span><br/>
                        <span>Page </span>
                        <span class="page"/>
                        /
                        <span class="topage"/>
                    </div>
                </div>
            </div>


            <div class="row" style="font-size: 12px;margin-bottom:1mm;margin-top:2mm;border-top: 1px solid black;border-bottom: 1px solid black;height: 150px">
                <br/><br/><br/>
                <div class="col-7">
                    <div class="row">
                        <div class="col-4">
                            <span><strong>VENDER ID: </strong></span>
                        </div>
                        <div class="col-8">
                            <span t-if="doc.partner_id.ref">
                                <span t-field="doc.partner_id.ref"/>
                            </span>
                            <span t-if="not doc.partner_id.ref">
                                -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <span><strong>VENDER NAME: </strong></span>
                        </div>
                        <div class="col-8">
                            <span t-if="doc.partner_id">
                                <span t-field="doc.partner_id.name"/>
                            </span>
                            <span t-if="not doc.partner_id">
                                -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                       <div class="col-4">
                           <span><strong>ADDRESS: </strong></span>
                       </div>
                       <div class="col-8">
                           <span t-if="doc.partner_id.street">
                               <span t-field="doc.partner_id.street"/>
                           </span>
                           <span t-if="doc.partner_id.street2">
                               <span t-field="doc.partner_id.street2"/>
                           </span>
                           <span t-if="doc.partner_id.sub_district">
                               <span t-field="doc.partner_id.sub_district"/>
                           </span>
                           <span t-if="doc.partner_id.city">
                               <span t-field="doc.partner_id.city"/>
                           </span>
                           <span t-if="doc.partner_id.state_id.name">
                               <span t-field="doc.partner_id.state_id.name"/>
                           </span>
                           <span t-if="doc.partner_id.zip">
                               <span t-field="doc.partner_id.zip"/>
                           </span>
                           <span t-if="doc.partner_id.vat">
                               <span t-field="doc.partner_id.vat"/>
                           </span>
                       </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <span><strong>VENDER REF: </strong></span>
                        </div>
                        <div class="col-8">
                            <span t-if="doc.partner_ref">
                                <span t-field="doc.partner_ref"/>
                            </span>
                            <span t-if="not doc.partner_ref">
                                -
                            </span>
                        </div>
                    </div>
                     <div class="row">
                        <div class="col-4">
                            <span><strong>REQUIRED DATE: </strong></span>
                        </div>
                        <div class="col-8">
                            <span t-if="doc.date_planned">
                                <span t-field="doc.date_planned" t-options='{"format": "dd/MM/yyyy"}'/>
                            </span>
                            <span t-if="not doc.date_planned">
                                -
                            </span>
                        </div>
                    </div>
        

                </div>
                <div class="col-5">
                    <div class="row">
                          <div class="col-12" style="background-color:#ECECEC">
                            <div class="row">
                                <div class="col-5">
                                    <span><strong>PO NO:</strong></span>
                                </div>
                                <div class="col-7">
                                    <span t-if="doc.name">
                                        <span t-field="doc.name"/>
                                    </span>
                                    <span t-if="not doc.name">
                                        -
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-5">
                                    <span><strong>DATE:</strong></span>
                                </div>
                                <div class="col-7">
                                   <span t-if="doc.date_approve">
                                        <span t-field="doc.date_approve" t-options='{"format": "dd/MM/yyyy"}'/>
                                    </span>
                                    <span t-if="not doc.date_approve">
                                        -
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-5">
                                    <span><strong>SHIPPING METHOD:</strong></span>
                                </div>
                                <div class="col-7">
                                <!-- <span t-if="doc.order_type">
                                    <t t-esc="doc.order_type.name" />
                                    </span>
                                    <span t-if="not doc.order_type">
                                    -
                                    </span> -->
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-5">
                                    <span><strong>DELIVERY TERMS:</strong></span>
                                </div>
                                <div class="col-7">
                                    <span t-if="doc.incoterm_id">
                                        <span t-field="doc.incoterm_id.name"/>
                                    </span>
                                    <span t-if="not doc.incoterm_id">
                                        -
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-5">
                                    <span><strong>PAYMENT TERMS:</strong></span>
                                </div>
                                <div class="col-7">
                                    <span t-if="doc.payment_term_id">
                                    <span t-field="doc.payment_term_id.name"/>
                                    </span>
                                    <span t-if="not doc.payment_term_id">
                                    -
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-5">
                                    <span><strong>CURRENCY:</strong></span>
                                </div>
                                <div class="col-7">
                                    <span t-if="doc.currency_id">
                                    <span t-field="doc.currency_id.name"/>
                                    </span>
                                    <span t-if="not doc.currency_id">
                                    -
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="article" style="font-family: Kanit;" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <div class="row">
                    <t t-set="l_no" t-value="0"/>
                    <table class="table" style="font-size: 12px;line-height: 18px">
                        <thead style="background-color:#ECECEC">
                            <tr>
                                <th class="text-center" style="width: 6%;">NO</th>
                                <th class="text-center" style="width: 16%;">MATERIAL CODE</th>
                                <th class="text-center" style="width: 30%;">DESCRIPTION</th>
                                <th class="text-center" style="width: 8%;">QUANTITY</th>
                                <th class="text-center" style="width: 8%;">UOM</th>
                                <th class="text-center" style="width: 11%;">UNIT PRICE</th>
                                <th class="text-center" style="width: 8%;">Sub Disc%</th>
                                <th class="text-center" style="width: 13%;">SUB TOTAL</th>
                                <!-- <th class="text-center" style="width: 11%;">Unit Price</th> -->
                                <!-- <th class="text-center" style="width: 6%;">Discount</th> -->
                                <!-- <th class="text-center" style="width: 6%;">VAT</th> -->
                                <!-- <th class="text-center" style="width: 19%;">Untaxed Amount</th> -->
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="set_no_vat" t-value="0"/>
                            <t t-set="set_vat" t-value="0"/>
                            <t t-set="set_dis" t-value="0"/>
                            <tr t-foreach="o.order_line" t-as="ol">
                                <td class="text-center">
                                    <t t-if="not ol.display_type == 'line_section'" >
                                        <t t-set="l_no" t-value="l_no + 1"/>
                                        <t t-esc="l_no"/>
                                    </t>
                                </td>
    
                                <td class="text-left" >
                                    <span t-if="ol.product_id.default_code">
                                        <span t-field="ol.product_id.default_code"/>
                                    </span>
                                    <span t-if="not ol.product_id.default_code">
                                        <div class="text-center">
                                            -
                                        </div>
                                    </span>
                                </td>
                                <td class="text-left" >
                                    <span t-if="ol.name">
                                        <span t-field="ol.name"/>
                                    </span>
                                    <span t-if="not ol.name">
                                        <div class="text-center">
                                            -
                                        </div>
                                    </span>
                                </td>
                                <td class="text-center" >
                                    <span t-if="ol.product_qty">
                                        <span t-field="ol.product_qty"/>
                                    </span>
                                    <span t-if="not ol.product_qty">
                                        -
                                    </span>
                                </td>
                                <td class="text-center" >
                                    <span t-if="ol.product_uom">
                                        <span t-field="ol.product_uom"/>
                                    </span>
                                    <span t-if="not ol.product_uom">
                                        -
                                    </span>
                                </td>
                                <td class="text-center" >
                                    <span t-if="ol.price_unit">
                                        <span t-field="ol.price_unit"/>
                                    </span>
                                    <span t-if="not ol.price_unit">
                                        -
                                    </span>
                                </td>
                                <td class="text-center" >
                                    <span t-if="ol.multi_disc_amount">
                                        <span t-field="ol.multi_disc_amount"/>
                                    </span>
                                    <span t-if="not ol.multi_disc_amount">
                                        -
                                    </span>
                                </td>
                                <td class="text-center" >
                                    <span t-if="ol.price_subtotal">
                                        <span t-field="ol.price_subtotal"/>
                                    </span>
                                    <span t-if="not ol.price_subtotal">
                                        -
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
            </div>
        </div>

         <div class="footer last-page not-first-page" style="font-size: 12px;margin-top:2mm;vertical-align: bottom;font-family: Kanit;max-height:403px">
            <div class="row">
                
                <div class="col-7">
                    <div class="col-12">
                        <div class="row" style="background-color:#ECECEC">
                            <div class="col-3 text-left"><strong>AMOUNT TO TEXT:</strong></div>
                            <div class="col-9 text-left"><span t-esc="doc.currency_id.amount_to_text_en(abs(doc.amount_total), o.currency_id.currency_unit_label)"/></div>
                        </div>
                   
                        <div class="row" >
                            <div class="col-12 text-left" style="font-size: 12px;">
                                <!-- <span t-esc=""/> -->
                                <span>REMARK: </span><br/>
                                    <span t-field="doc.notes"/> 
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-5" style="background-color:#ECECEC">
                    
                    <div class="col-12">
                        <div class="row">
                            <div class="col-6 text-left"><strong>TOTAL</strong></div>
                            <div class="col-6 text-right">
                                <span t-esc="'{0:,.2f}'.format(float(doc.total_amount))"/>
                            </div>
                        </div>
    
                        <div class="row" >
                            <div class="col-6 text-left"><strong>DISCOUNT</strong></div>
                            <div class="col-6 text-right">
                                <span t-esc="'{0:,.2f}'.format(float(doc.total_amount_vat))"/>
                            </div>
                        </div>
    
                        <div class="row">
                            <div class="col-6 text-left"><strong>GRAND TOTAL</strong></div>
                            <div class="col-6 text-right"><span t-esc="'{0:,.2f}'.format(float(doc.amount_total))"/></div>
                        </div>
                    </div>
                </div>
               
            </div>
            <div class="row" style="border-top: 1px solid black; border-bottom: 1px solid black;max-height:198px;overflow: hidden;">
                <div class="col-12">
                    <div>
                        <span>
                            เงื่อนไขการสั่งซื้อ: 
                        </span>
                        <br/> 
                        <span>
                            1. กำหนดส่งสินค้าต้องตรงตามที่ระบุในใบสั่งซื้อ หากล่าช้าบริษัทฯ สงวนสิทธิ์ที่จะยกเลิกการสั่งซื้อ และปฎิเสธการรับสินค้า/บริการนั้น โดยไม่ต้องแจ้งให้ทราบล่วงหน้า <br/>
                            2. ทุกครั้งที่ส่งสินค้า/บริการ ต้องแนบใบส่งสินค้า หรือใบกำกับภาษีฉบับจริงพร้อมใบสั่งซื้อนี้ด้วยทุกครั้ง <br/>
                            3. จะต้องระบุหมายเลขใบสั่งซื้อนี้ทุกครั้งในใบส่งสินค้า หรือใบกำกับภาษี <br/>
                            4. การรับสินค้า จะรับตามจำนวนและรายการที่สั่งซื้อตามใบสั่งซื้อนี้เท่านั้น หากส่งของไม่ครบหรือเกิน ต้องขออนุมัติจากฝ่ายจัดซื้อก่อนทุกครั้ง <br/>
                            5. ผู้ขายจะต้องรับผิดชอบค่าใช้จ่ายต่างๆ ที่ผู้ซื้อจะต้องเสียไป อันเกิดจากการที่ผู้ขายส่งสินค้า/บริการล่าช้ากว่ากำหนด
                        </span>
                    </div>
                </div>
            </div>
            <div  class="row" style="">
                
                <div class="col-6" align="center">
                    <br/>
                    <div>OVERSEAS PURCHASING OFFICER</div>
                    <br/>
                    <div style="position: relative;">
                        <div style="position: absolute; top: -7px; width: 100%; text-align: center;">
                            <!-- <span t-field="doc.create_uid.name"/> -->
                            <img t-if="doc.create_uid.employee_id.signature" t-att-src="'data:image/png;base64,' + doc.create_uid.employee_id.signature.decode('utf-8')" style="max-height: 100px; max-width: 100px;"/>

                        </div>
                        <div class="col-8" style="border-bottom: 1px solid black">&#160;</div>
                    </div>
                    <br/>
                    <div style="position: relative;">
                        <div style="position: absolute; top: -7px; width: 100%; text-align: center;">
                            <span t-field="doc.create_date" t-options='{"format": "dd/MM/yyyy"}'/>
                        </div>
                        <div>.................................................................&#160;</div>
                    </div>
                </div>
                <div class="col-6" align="center">
                    <br/>
                    <div>MANAGING DIRECTOR</div>
                    <br/>
                    <div style="position: relative;">
                        <div style="position: absolute; top: -7px; width: 100%; text-align: center;">
                            <!-- <span t-field="doc.review_ids.done_by.name"/> -->
                            <img t-if="doc.review_ids.done_by.employee_id.signature" t-att-src="'data:image/png;base64,' + doc.review_ids.done_by.employee_id.signature.decode('utf-8')" style="max-height: 100px; max-width: 100px;"/>
                        </div>
                        <div class="col-8" style="border-bottom: 1px solid black">&#160;</div>
                    </div>
                    <br/>
                    <div style="position: relative;">
                        <div style="position: absolute; top: -7px; width: 100%; text-align: center;">
                            <span t-field="doc.review_ids.reviewed_date" t-options='{"format": "dd/MM/yyyy"}'/>
                        </div>
                        <div>.................................................................&#160;</div>
                    </div>
                </div>

                

        
            </div>

            <div class="row">
                <div class="col-12 text-right"  style="margin-right:0mm;margin-top:3mm">
                    <div style="font-size: 10px" >
                        <span>ISO: FM-PU-08 REV 02 01/01/2567</span>

                    </div>
                </div>
            </div>
            

        </div>
    </template>

    <template id="hdc_purchase_order_report_en_edit">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="hdc_purchase_general_reports.hdc_purchase_order_report_document_en_edit" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>