<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hdc_purchase_order_rfq_report_document_en">
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <div class="header" style="font-family: KanitLight;" >
            <div class="row">
                <div class="col-2 text-left">
                    <t t-call="hdc_purchase_general_reports.report_logo_style"/>
                </div>
                <div class="col-7 text-left" style="font-size: 12.12px;">
                    <span style="font-size: 16.67px; font-weight: bold;"><t t-esc="company.name_th"/></span><br/>
                    <span style="font-size: 16.67px; font-weight: bold;"><t t-esc="company.name"/></span><br/>
                    <span style=""><t t-esc="company.street_th"/> <t t-esc="company.street2_th"/> <t t-esc="company.city_th"/> <t t-esc="company.state_th_id.name"/> <t t-esc="company.zip_th"/></span><br/>
                    <span style=""><t t-esc="company.street"/>,<t t-esc="company.street2"/>,<t t-esc="company.city"/>,<t t-esc="company.state_id.name"/>,<t t-esc="company.zip"/>,<t t-esc="company.country_id.name"/></span><br/>
                    <span style="">TEL : +<t t-esc="company.phone"/></span><span style=""> FAX : +<t t-esc="company.fax"/></span> <br/> 
                    <span style="">WEBSITE <t t-esc="company.website"/></span> / <span style="">EMAIL : <t t-esc="company.email"/></span><br/>
                    <span style="">เลขประจำตัวผู้เสียภาษี: <t t-esc="company.vat"/></span><br/>
                </div>
                <div class="col-3 text-right"  style="margin-right:0mm;margin-top:3mm">
                    <div style="font-size: 18.18px; font-weight: bold;" >
                        <span><strong>ใบขอใบเสนอราคา</strong></span><br/>
                        <span><strong>(Request for Quotation)</strong></span><br/>
                    </div>
                    <!-- <div style="font-size: 10px" >
                        <span>ต้นฉบับ/Original</span>
                    </div> -->
                    <div style="font-size: 18.18px; font-weight: bold;" >
                        <!-- <span>ต้นฉบับ/Original</span><br/> -->
                        <!-- <span>Page</span>
                        <span class="page"/>
                        /
                        <span class="topage"/> -->
                    </div>
                </div>
            </div>



            <div class="row" style="font-size: 13.64px;margin-top:7px;padding-top:6px;border-top: 1px solid black;border-bottom: 1px solid black;height: 160px">
                <div class="col-7">
                    <div class="row">
                        <div class="col-4">
                            <span><strong>VENDER ID: </strong></span>
                        </div>
                        <div class="col-8">
                            <span t-if="doc.partner_id.ref">
                                <span t-field="doc.partner_id.ref"/>
                            </span>
                            <span t-if="not doc.partner_id.ref">
                                -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <span><strong>VENDER NAME: </strong></span>
                        </div>
                        <div class="col-8">
                            <span t-if="doc.partner_id">
                                <span t-field="doc.partner_id.name"/>
                                <span t-if="doc.partner_id.branch">
                                    (
                                        <span t-field="doc.partner_id.branch"/>
                                    )
                                </span>
                                <span t-if="not doc.partner_id.branch">
                                    -
                                </span>
                            </span>
                            <span t-if="not doc.partner_id">
                                -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <span><strong>TAX ID: </strong></span>
                        </div>
                        <div class="col-8">
                            <span t-if="doc.partner_id.vat">
                                <span t-field="doc.partner_id.vat"/>
                            </span>
                            <span t-if="not doc.partner_id.vat">
                                -
                            </span>
                        </div>
                    </div>
                    <div class="row">
                       <div class="col-4">
                           <span><strong>ADDRESS: </strong></span>
                       </div>
                       <div class="col-8">
                           <span t-if="doc.partner_id.street">
                               <span t-field="doc.partner_id.street"/>,
                           </span>
                           <span t-if="doc.partner_id.street2">
                               <span t-field="doc.partner_id.street2"/>,
                           </span>
                           <span t-if="doc.partner_id.sub_district">
                               <span t-field="doc.partner_id.sub_district"/>,
                           </span>
                           <span t-if="doc.partner_id.city">
                               <span t-field="doc.partner_id.city"/>,
                           </span>
                           <span t-if="doc.partner_id.state_id.name">
                               <span t-field="doc.partner_id.state_id.name"/>,
                           </span>
                           <span t-if="doc.partner_id.zip">
                               <span t-field="doc.partner_id.zip"/>,
                           </span>
                           <span t-if="doc.partner_id.vat">
                               <span t-field="doc.partner_id.vat"/>,
                           </span>
                       </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <span><strong>CONTACT NAME: </strong></span>
                        </div>
                        <div class="col-8">
                            <span t-if="doc.contact_person">
                                <span t-field="doc.contact_person.name"/>
                            </span>
                            <span t-if="not doc.contact_person">
                                -
                            </span>
                        </div>
                    </div>
        

                </div>
                <div class="col-5">
                    <div class="row">
                          <div class="col-12" style="background-color:#ECECEC">
                            <div class="row">
                                <div class="col-5">
                                    <span><strong>DATE:</strong></span>
                                </div>
                                <div class="col-7">
                                    <span t-if="doc.date_order">
                                        <span t-field="doc.date_order" t-options='{"format": "dd/MM/yyyy"}'/>
                                    </span>
                                    <span t-if="not doc.date_order">
                                        -
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-5">
                                    <span><strong>RFQ NO:</strong></span>
                                </div>
                                <div class="col-7">
                                    <span t-if="doc.name">
                                        <t t-esc="doc.name" />
                                    </span>
                                    <span t-if="not doc.name">
                                    -
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-5">
                                    <span><strong>DELIVERY TERMS:</strong></span>
                                </div>
                                <div class="col-7">
                                <span t-if="doc.delivery_terms">
                                    <span t-field="doc.delivery_terms.name"/>
                                    </span>
                                    <span t-if="not doc.delivery_terms">
                                    -
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-5">
                                    <span><strong>MODE OF SHIPMENT:</strong></span>
                                </div>
                                <div class="col-7">
                                    <span t-if="doc.incoterm_id">
                                    <span t-field="doc.incoterm_id.name"/>
                                    </span>
                                    <span t-if="not doc.incoterm_id.name">
                                    -
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="article" style="font-family: KanitLight;" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <div class="row">
                    <t t-set="l_no" t-value="0"/>
                    <table class="table" style="font-size: 13.64px;line-height: 18px">
                        <thead style="background-color:#ECECEC">
                            <tr>
                                <th class="text-center" style="width: 6%;">NO</th>
                                <th class="text-center" style="width: 20%;">MATERIAL CODE</th>
                                <th class="text-center" style="width: 40%;">DESCRIPTION</th>
                                <th class="text-center" style="width: 17%;">QUANTITY</th>
                                <th class="text-center" style="width: 17%;">UOM</th>
                                <!-- <th class="text-center" style="width: 11%;">Unit Price</th> -->
                                <!-- <th class="text-center" style="width: 6%;">Discount</th> -->
                                <!-- <th class="text-center" style="width: 6%;">VAT</th> -->
                                <!-- <th class="text-center" style="width: 19%;">Untaxed Amount</th> -->
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="set_no_vat" t-value="0"/>
                            <t t-set="set_vat" t-value="0"/>
                            <t t-set="set_dis" t-value="0"/>
                            <t t-foreach="o.order_line" t-as="ol" >
                                <t t-if="ol.display_type in ['line_section', 'line_note']">
                                    <tr>
                                        <td></td>
                                        <td colspan="7" class="text-left" >
                                            <span t-if="ol.name">
                                                <t t-if="ol.display_type == 'line_note'">
                                                    <em>
                                                        <span t-field="ol.name"/>
                                                    </em>
                                                </t>
                                                <t t-if="ol.display_type == 'line_section'">
                                                    <strong><span t-field="ol.name"/></strong>
                                                </t>
                                            </span>
                                            <span t-if="not ol.name">
                                                -
                                            </span>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="not ol.display_type in ['line_section', 'line_note']">
                                    <tr>
                                        <td class="text-center">
                                            <t t-set="l_no" t-value="l_no + 1"/>
                                            <t t-esc="l_no"/>
                                        </td>
            
                                        <td class="text-left" >
                                            <span t-if="ol.product_id.default_code">
                                                <span t-field="ol.product_id.default_code"/>
                                            </span>
                                            <span t-if="not ol.product_id.default_code">
                                                <div class="text-center">
                                                    -
                                                </div>
                                            </span>
                                        </td>
                                        <td class="text-left" >
                                            <span t-if="ol.name">
                                                <span t-field="ol.name"/>
                                            </span>
                                            <span t-if="not ol.name">
                                                <div class="text-center">
                                                    -
                                                </div>
                                            </span>
                                        </td>
                                        <td class="text-center" >
                                            <span t-if="ol.product_qty">
                                                <span t-field="ol.product_qty"/>
                                            </span>
                                            <span t-if="not ol.product_qty">
                                                -
                                            </span>
                                        </td>
                                        <td class="text-center" >
                                            <span t-if="ol.product_uom">
                                                <span t-field="ol.product_uom"/>
                                            </span>
                                            <span t-if="not ol.product_uom">
                                                -
                                            </span>
                                        </td>
                                    
                        
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
            </div>
        </div>
        <div class="footer" style="margin-top:0mm;vertical-align: bottom;font-family: KanitLight;">
            <div class="last-page not-first-page" style="font-size: 11px">
                <div class="row" style="font-size: 13.64px;border-top: 1px solid black;max-height:183px;overflow: hidden;padding-top:5px;padding-bottom:5px;">
                    <div class="col-7"></div>
                    <div class="col-5" style="background-color:#ECECEC">
                        <div class="row">
                            <br/>
                            <div class="col-3 text-left"><strong>TOTAL</strong></div>
                            
                            <div class="col-9 text-left">
                                <t t-set="unit_total" t-value="sum(line.product_qty for line in doc.order_line)" />
                                <span t-esc="'{0:,.2f}'.format(float(unit_total))"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div  class="row text-right" style="font-size: 11px;border-top: 1px solid black">
                <div class="col-12 text-right">
                    <span>Page </span>
                    <span class="page"/>
                    /
                    <span class="topage"/>
                </div>
            </div>
        </div>
    </template>

    <template id="hdc_purchase_order_rfq_report_en">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="hdc_purchase_general_reports.hdc_purchase_order_rfq_report_document_en" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>