    <template id="report_logo_style">
      <!-- เช็คชื่อบริษัทและกำหนดค่า logo_style -->
      <t t-if="company.name in ['Colt Plus (Thailand) Co.,Ltd.', 
                                 'Siam Modern Home Co.,Ltd.', 
                                 'Siam Techno Industry Co., Ltd.']">
         <t t-set="logo_style">margin-top:30px;</t>
      </t>
      <t t-elif="company.name == 'Saeng Charoen Patana Enterprise Co., Ltd.'">
         <t t-set="logo_style">margin-top:0px;</t>
      </t>
      <t t-else="">
         <t t-set="logo_style">margin-top:0px;</t>
      </t>

      <img t-if="company.logo"
            t-att-src="'data:image/png;base64,%s' % company.logo.decode('ascii')"
            class="pull-left img-logo"
            t-attf-style="{{ logo_style }}; max-height: 140px; max-width: 140px;" />
   </template>
