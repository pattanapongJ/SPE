<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="schedule_action_pricelist_update" model="ir.cron">
        <field name="name">Schedule Action Pricelist Update</field>
        <field eval="True" name="active" />
        <field name="model_id" ref="model_pricelist_update" />
        <field name="state">code</field>
        <field name="code">model.action_pricelist_update()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field
            name="nextcall"
            eval="(DateTime.now() + relativedelta(hour=00, minute=1, second=0)).strftime('%Y-%m-%d %H:%M:%S')"
        />
        <field name="priority" eval="5" />
    </record>
</odoo>