<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_advance_payment_inv_inherit" model="ir.ui.view">
        <field name="name">sale.order.view.edit.inherit.sale.form</field>
        <field name="model">sale.advance.payment.inv</field>
        <field name="inherit_id" ref="sale.view_sale_advance_payment_inv" />
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <field name="is_global_discount" invisible="1"/>
                <field name="global_discount_price" attrs="{'invisible': ['|',('advance_payment_method','not in', ('delivered', 'picking','picking_urgent')),('is_global_discount','=',False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
