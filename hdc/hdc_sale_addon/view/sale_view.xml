<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_order_view_inherit_tree" model="ir.ui.view">
        <field name="name">sale.order.inherit.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                <field name="invoice_ids" string="Invoices No." optional="show" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </xpath>
        </field>
    </record>
    <record id="sale_order_line_view_inherit_tree" model="ir.ui.view">
        <field name="name">sale.order.line.inherit.tree</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="invoice_lines" string="Invoices No." optional="show" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </xpath>
        </field>
    </record>
    <!-- <record id="sale_order_view_edit_inherit_sale_form" model="ir.ui.view">
        <field name="name">sale.order.view.edit.inherit.sale.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_order_type.sot_view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type_id']" position="attributes">
                <attribute name="string">Sales Type</attribute>
            </xpath>
        </field>
    </record> -->
    <record id="sale_order_view_edit_inherit_hdc_sale_form" model="ir.ui.view">
        <field name="name">sale.order.view.edit.inherit.hdc.sale.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="hdc_sale.hdc_sale_view_order_form_inherit" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='validity_date']" position="attributes">
                <attribute name="string">Expiration QT/SA</attribute>
            </xpath>
            <xpath expr="//field[@name='user_sale_agreement']" position="attributes">
                <attribute name="string">Sale Taker</attribute>
            </xpath>
<!-- 
            <xpath expr="//field[@name='plan_home']" position="after">
                
            </xpath> -->
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                <field name="tags_product_sale_ids" string="Product Tags" optional="hide" force_save="1" widget="many2many_tags"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='price_total']" position="before">
                <field name="external_item" optional="hide" readonly="1" force_save="1"/>
                <field name="barcode_customer" optional="hide" readonly="1" force_save="1"/>
                <field name="barcode_modern_trade" optional="hide" readonly="1" force_save="1"/>
                <field name="description_customer" optional="hide" readonly="1" force_save="1"/>
                <field name="modify_type_txt" optional="hide" readonly="1" force_save="1"/>
                <field name="plan_home" optional="hide" readonly="1" force_save="1"/>
                <field name="room" optional="hide" readonly="1" force_save="1"/>
            </xpath>
        </field>
    </record>

    <record id="sale.action_orders" model="ir.actions.act_window">
        <field name="name">Sales Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
        <field name="search_view_id" ref="sale.sale_order_view_search_inherit_sale"/>
        <field name="context">{}</field>
        <field name="domain">['|',('active','=',False),('active','=',True)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new quotation, the first step of a new sale!
            </p><p>
                Once the quotation is confirmed, it becomes a sales order.<br/> You will be able to create an invoice and collect the payment.
            </p>
        </field>
    </record>

     <menuitem
        id="pricelists_menu"
        name="Pricelists"
        action="product.product_pricelist_action2"
        parent="sale.product_menu_catalog"
        sequence="3"/>

</odoo>
