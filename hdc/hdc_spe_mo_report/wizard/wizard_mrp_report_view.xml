<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_mrp_report_form_view" model="ir.ui.view">
        <field name="name">wizard.mrp.report.form.view</field>
        <field name="model">wizard.mrp.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="state" invisible="1"/>
                            <field name="mrp_id" invisible="1"/>
                            <field name="document" widget="selection" string="Documents"/>
                            <field name="operation_id" attrs="{'invisible': [('document', 'not in', ['material_requestion', 'material_requestion_cutting'])]}"/>
                            <field name="material_requisition_type_id" attrs="{'invisible': [('document', 'not in', ['material_requestion', 'material_requestion_cutting'])]}"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Print" type="object" name="print" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

	<record id="action_wizard_mrp_report" model="ir.actions.act_window">
		<field name="name">Report</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">wizard.mrp.report</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
		<field name="view_id" ref="wizard_mrp_report_form_view"/>
	</record>
    

    
</odoo>