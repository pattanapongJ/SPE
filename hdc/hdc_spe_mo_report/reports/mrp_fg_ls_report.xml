<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hdc_mrp_fg_ls_report_document">

        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>

         <div class="header font-inventory-div" style="font-family: KanitLight;" >
            <div class="row">
                <div class="col-3 text-left">
                    <!-- <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo.decode('ascii')" class="pull-left img-logo" style="max-height: 140px; max-width: 140px;"/> -->
                </div>
                <div class="col-6 text-center" style="font-size: 16.67px;">
                    <br/>
                    <span>ใบรับผลิตเสร็จ</span>
                </div>
                <div class="col-3 text-right" style="margin-right:0mm;margin-top:3mm">

                    <div style="font-size: 10px; " >
                        <!-- <span>ต้นฉบับ/Original</span><br/> -->
                        <span>หน้า </span>
                        <span class="page"/>
                        /
                        <span class="topage"/>
                    </div>
                </div>
            </div>
            
            <div class="row" style="font-family: KanitLight;font-size: 13.64px;margin-bottom:1mm;margin-top:2mm">
              <div class="col-6">
                    <div class="row ">
                        <div class="col-2 text-nowrap">
                            <strong><span>วันที่: </span></strong>
                        </div>
                        <div class="col-8 text-left" style="border-bottom: 1px solid black"> 
                           <span t-if="doc.create_date">
                                <span t-field="doc.create_date" t-options='{"format": "dd/MM/yyyy"}'/>
                            </span>
                            <span t-if="not doc.create_date">
                                
                            </span>
                        </div>
                    </div>
                    <br/>
                </div>

                <!-- <div class="col-6">
                    <div class="row">
                        <div class="col-2">
                            <strong><span>ฝ่าย:   </span></strong>
                        </div>
                        <div class="col-8" style="border-bottom: 1px solid black">
                            <span t-if="doc.bom_id.operation_id_department">
                              <span t-field="doc.bom_id.operation_id_department.name"/>
                            </span>
                            <span t-if="not doc.bom_id.operation_id_department">
                               
                            </span>
                        </div>
                    </div>
                    <br/>     
                </div> -->
            </div>
        </div>

        <div class="article font-inventory-div" style="font-family: KanitLight;" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <div class="row">
                <t t-set="l_no" t-value="0"/>
                <table class="table" style="font-size: 13.64px;line-height: 18px">
                    <thead>
                        <tr>
                            <th class="text-center font-inventory-th border border-dotted border-dotted-dark" style="width: 6%;">ลำดับ</th>
                            <th class="text-center font-inventory-th border border-dotted border-dotted-dark" style="width: 13%;">รหัส</th>
                            <th class="text-center font-inventory-th border border-dotted border-dotted-dark" style="width: 20%;">รายการ</th>
                            <th class="text-center font-inventory-th border border-dotted border-dotted-dark" style="width: 17%;">MO NO.</th>
                            <th class="text-center font-inventory-th border border-dotted border-dotted-dark" style="width: 20%;">จำนวน</th>
                            <th class="text-center font-inventory-th border border-dotted border-dotted-dark" style="width: 9%;">หน่วย</th>
                            <th class="text-center font-inventory-th border border-dotted border-dotted-dark" style="width: 15%;">หมายเหตุ</th>
                        </tr>
                    </thead>
                    <tbody class="table-borderless">
                        <tr class="table-borderless">
                            <td class="text-center"> 
                                <t t-set="l_no" t-value="l_no + 1"/>
                                <t t-esc="l_no"/>
                            </td>
                            <td style="text-align: left;">
                                <span t-if="doc.product_id.default_code">
                                    <span t-field="doc.product_id.default_code"/>
                                </span>
                                <span t-if="not doc.product_id.default_code">
                                    -
                                </span>
                            </td>
                            <td style="text-align: left;">
                                <span t-if="doc.product_id">
                                    <span t-field="doc.product_id.name"/>
                                </span>
                                <span t-if="not doc.product_id">
                                    -
                                </span>
                            </td>
                            <td class="text-center" >
                                <span t-if="doc.name">
                                    <span t-field="doc.name"/>
                                </span>
                                <span t-if="not doc.name">

                                </span>
                            </td>
                            <td class="text-center" >
                                <span t-if="doc.qty_producing">
                                    <span t-field="doc.qty_producing"/> / <span t-field="doc.product_qty"/>
                                </span>
                                <span t-if="not doc.qty_producing">
                                    0.00
                                </span>
                            </td>
                            <td class="text-center" >
                                <span t-field="doc.product_uom_id.name"/>
                            </td>
                            <td class="text-center" >
                
                            </td>
                        </tr>
                    
                
                    </tbody>
                </table>
            </div>
            
        </div>
        
        <div class="footer last-page not-first-page font-inventory-div" style="font-family: KanitLight;margin-top:5mm;vertical-align: bottom;overflow: hidden">
            
            <div class="row" style="font-size: 13.64px;">
                <div class="col-6">
                    <div class="row">
                        <div class="col-2">
                            <strong><span>ผู้ส่ง:   </span></strong>
                        </div>
                        <div class="col-6" style="border-bottom: 1px solid black">
                            <img t-if="doc.user_id.employee_id.signature" t-att-src="'data:image/png;base64,' + doc.user_id.employee_id.signature.decode('utf-8')" style="max-height: 100px; max-width: 100px;"/>
                        </div>
                    </div>   
                </div>

                 <div class="col-6 text-right">
                    <div class="row">
                        <div class="col-6 text-right">
                            <strong><span>ผู้รับ:   </span></strong>
                        </div>
                        <div class="col-6" style="border-bottom: 1px solid black">
    
                        </div>
                    </div>      
                </div>
            </div>
            <div class="row" style="font-size: 13.64px; padding-top: 15px;">
                <div class="col-12 text-right">
                    <span><span t-esc="iso_number"/></span>
                </div>
            </div>
        </div>

    </template>

    <template id="hdc_mrp_fg_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="hdc_spe_mo_report.hdc_mrp_fg_ls_report_document"/>
            </t>
        </t>
    </template>

</odoo>