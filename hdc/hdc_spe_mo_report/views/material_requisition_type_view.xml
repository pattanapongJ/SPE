<odoo>
    <record id="material_requisition_type_form_view" model="ir.ui.view">
        <field name="name">material.requisition.type.form.view</field>
        <field name="model">material.requisition.type</field>
        <field name="arch" type="xml">
            <form string="Type">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="is_default"/>
                        </group>
                        <group>
                            
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="material_requisition_type_tree_view" model="ir.ui.view">
        <field name="name">material.requisition.type.tree.view</field>
        <field name="model">material.requisition.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="is_default"/>
            </tree>
        </field>
    </record>
    <record id="material_requisition_type_action" model="ir.actions.act_window">
        <field name="name">Material Requisition Types</field>
        <field name="res_model">material.requisition.type</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="material_requisition_type_tree_view" />
        <field name="help" type="html">
            <p
                class="oe_view_nocontent_create"
            >Click to set a new type for manufacturing orders.</p>
        </field>
    </record>
    <record id="material_requisition_type_action_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="material_requisition_type_form_view" />
        <field name="act_window_id" ref="material_requisition_type_action" />
    </record>
    <record id="material_requisition_type_action_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="material_requisition_type_tree_view" />
        <field name="act_window_id" ref="material_requisition_type_action" />
    </record>
    <menuitem
        id="material_requisition_type_menu"
        parent="mrp.menu_mrp_configuration"
        action="material_requisition_type_action"
        sequence="102"
    />
</odoo>
