<?xml version="1.0" ?>
<odoo>
    <!-- BOM revision form view -->
    <record id="mrp_bom_form_view_master_key" model="ir.ui.view">
        <field name="name">mrp.bom.form.revision</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="master_key_service_id" domain="[('type', '=', 'service'), ('is_master_key_service', '=', True)]"/>
            </xpath>
        </field>
    </record>
</odoo>
