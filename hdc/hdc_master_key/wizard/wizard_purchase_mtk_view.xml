<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_wizard_purchase_mtk_form" model="ir.ui.view">
        <field name="name">wizard.purchase.mtk.form</field>
        <field name="model">wizard.purchase.mtk</field>
        <field name="arch" type="xml">
            <form string="Edit Price">
                <field name="purchase_id" invisible="1"/>
                <field nolabel="1" name="line_ids" widget="one2many_list" options="{'no_create': True}">
                    <tree create="0" editable="bottom">
                        <field name="purchase_line_id" force_save="1" readonly="1"/>
                        <field name="product_id" force_save="1" readonly="1"/>
                        <field name="description"/>
                        <field name="quantity" force_save="1" readonly="1"/>
                        <field name="gross_unit_price"/>
                    </tree>
                </field>
                <footer>
                    <button name="apply_changes" type="object" string="Save" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_purchase_mtk" model="ir.actions.act_window">
        <field name="name">Change Price</field>
        <field name="res_model">wizard.purchase.mtk</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
