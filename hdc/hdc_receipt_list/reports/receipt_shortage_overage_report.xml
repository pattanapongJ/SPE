<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hdc_receipt_shortage_overage_document">
         <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>

        <!-- <div class="header" style="margin-left: -14px;margin-right: -14px" > -->
        <div class="header font-inventory-div" style="font-family: KanitLight;">
            <div class="row">
                <div class="col-3 text-left">
                    <t t-call="hdc_receipt_list.report_logo_style"/>
                </div>
                <div class="col-6" style="font-family: KanitLight;text-align: center;">
                    <!--<br/>-->
                    <!--<br/>-->
                    <h4 style="font-size: 16.67px;"><strong><t t-esc="company.name_th"/></strong></h4>
                    <br/>
                    <h4 style="font-size: 17.64px;"><strong>ใบรับสินค้า</strong></h4>
                </div>
                <div class="col-2 text-right text-nowrap" style="margin-right:0mm;margin-top:3mm">
                    <t t-set="check_iso" t-value="'hdc_receipt_list.hdc_receipt_shortage_overage'"/>
                    <span>
                        <span style="font-size: 13.18px;" t-esc="doc.check_iso_name(check_iso)"/>
                    </span>
                </div>
                <div class="col-1 text-right text-nowrap" style="font-size: 15.64px">
                    <span class="page"/>
                    /
                    <span class="topage"/>
                </div>
            </div>
            
            <div class="row" style="font-family: KanitLight; font-size: 13.64px; line-height: 5px; margin-bottom:5px; margin-top:-5px;">
                <table class="table table-borderless" style="font-size:13.64px; line-height:12px; width:100%; table-layout:fixed;">
                    <!-- กำหนดคอลัมน์ 4 ช่องตายตัว -->
                    <colgroup>
                    <col style="width:25%"/>
                    <col style="width:25%"/>
                    <col style="width:25%"/>
                    <col style="width:25%"/>
                    </colgroup>

                    <thead>
                    <tr>
                        <th class="text-left">สถานที่รับ:
                        <t t-if="doc.location_id.display_name"><t t-esc="doc.location_id.display_name"/></t>
                        </th>
                        <th class="text-left">
                        <t t-if="doc.original_country"><t t-esc="doc.original_country.name"/></t>
                        </th>
                        <th class="text-left">RL:
                        <t t-if="doc.name"><t t-esc="doc.name"/></t>
                        </th>
                        <th class="text-left">วันที่:
                        <t t-if="doc.confirmed_warehouse_date"><t t-esc="doc.confirmed_warehouse_date.strftime('%d/%m/%Y')"/></t>
                        </th>
                    </tr>
                    </thead>

                    <tbody>
                    <tr>
                        <!-- ใช้ td สำหรับข้อมูล และหลีกเลี่ยง nowrap ถ้าไม่จำเป็น -->
                        <td class="text-left" style="vertical-align:top;">
                        <div style="line-height:14px; white-space:nowrap;">
                            <span>INV: </span>
                            <span>
                            <t t-if="doc.is_oversea">
                                <t t-if="doc.commercial_invoice"><t t-esc="doc.commercial_invoice"/></t>
                                <t t-else="">-</t>
                            </t>
                            <t t-if="not doc.is_oversea">
                                <t t-if="doc.invoice_no"><t t-esc="doc.invoice_no"/></t>
                                <t t-else="">-</t>
                            </t>
                            </span>
                        </div>
                        </td>

                        <td class="text-left" style="vertical-align:top;">
                        <div style="line-height:14px; white-space:nowrap;">
                            <span>INV Date: </span>
                            <span>
                            <t t-if="doc.is_oversea">
                                <t t-if="doc.com_invoice_date"><t t-esc="doc.com_invoice_date.strftime('%d/%m/%Y')"/></t>
                                <t t-else="">-</t>
                            </t>
                            <t t-if="not doc.is_oversea">
                                <t t-if="doc.invoice_date_in"><t t-esc="doc.invoice_date_in.strftime('%d/%m/%Y')"/></t>
                                <t t-else="">-</t>
                            </t>
                            </span>
                        </div>
                        </td>

                        <!-- รวม 2 คอลัมน์ท้ายสำหรับ “ชิปปิ้ง” -->
                        <td class="text-left" colspan="2" style="vertical-align:top;">
                        <div style="line-height:14px; white-space:normal; word-break:break-word;">
                            ชิปปิ้ง:
                            <t t-if="doc.shipping_provider">
                            <t t-esc="doc.shipping_provider.name"/>
                            </t>
                        </div>
                        </td>
                    </tr>

                    <tr>
                        <!-- ให้ Remark กินทั้ง 4 คอลัมน์ -->
                        <td class="text-left" colspan="2">
                        Remark:
                        <t t-if="doc.remarks"><t t-esc="doc.remarks"/></t>
                        </td>
                        <td class="text-left" colspan="2">
                        PO:
                        <t t-if="doc.po_ref"><t t-esc="doc.po_ref"/></t>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>

        </div>

        <div class="article font-inventory-div" style="font-family: KanitLight;" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <style>
                .table-bordered,
                .table-bordered th,
                .table-bordered td {
                    border: 1px solid black !important;
                }
            </style>
            <div class="row">
                <t t-set="l_no" t-value="0"/>
                 <table class="table table-bordered" style="font-size: 13.64px;line-height: 18px">
                    <thead>
                        <tr>
                            <th rowspan="2" class="text-center">ลำดับ</th>
                            <th rowspan="2" style="vertical-align: middle;">รายการสินค้า</th>
                            <th colspan="2" class="text-center">กล่องใน(Inner)</th>
                            <th colspan="3" class="text-center">ลัง(master)</th>
                            <th rowspan="2" style="vertical-align: middle;">จำนวน L/C</th>
                            <th rowspan="2" style="vertical-align: middle;">ขาด</th>
                            <th rowspan="2" style="vertical-align: middle;">เกิน</th>
                        </tr>
                        <tr>
                            <th class="text-center">กล่อง</th>
                            <th class="text-center">กล่องละ</th>
                            <th class="text-center">ลัง</th>
                            <th class="text-center">ลังละ</th>
                            <th class="text-center">จำนวน</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.line_ids" t-as="move">
                            <t t-set="inner_per" t-value="move.product_id.product_tmpl_id.inner_packing_qty or 0.0"/>
                            <t t-set="master_per" t-value="move.product_id.product_tmpl_id.master_packing_qty or 0.0"/>
                            <!-- จำนวนที่รับจริงในคอลัมน์ 'จำนวน' ฝั่งลัง (เดิมใช้ receipt_done) -->
                            <t t-set="qty" t-value="move.po_receipt_done or 0.0"/>
                            <!-- จำนวน L/C -->
                            <t t-set="lc_qty" t-value="move.po_shipped_qty or 0.0"/>

                            <!-- ลัง = จำนวน / ลังละ -->
                            <t t-set="cartons" t-value="(master_per and qty) and (qty / master_per) or 0.0"/>
                            <!-- กล่อง (Inner) = ลังละ / กล่องละ -->
                            <t t-set="inners_per_carton" t-value="(inner_per and master_per) and (master_per / inner_per) or 0.0"/>
                            
                            <t t-set="total_lc_qty" t-value="lc_qty - qty"/>

                             <tr>
                                <td class="text-center">
                                    <t t-set="l_no" t-value="l_no + 1"/>
                                    <t t-esc="l_no"/>
                                </td>
                                <!-- ต้องกลับมาแก้อีกครั้ง  -->
                                <td style="text-align: left;">
                                    <t t-if="move.product_id.name">
                                        <span t-field="move.product_id.name"/>
                                    </t>
                                    <t t-if="not move.product_id.name">
                                        <span style="color: white;">-</span>
                                    </t>
                                </td>
                                <td><span><span t-esc="inners_per_carton"/></span></td>
                                <td><span t-field="move.product_id.product_tmpl_id.inner_packing_qty" t-if="move.product_id.product_tmpl_id.inner_packing_qty"/> <span t-if="not move.product_id.product_tmpl_id.inner_packing_qty">0.0</span></td>
                                <td><span> <span t-esc="cartons"/></span></td>
                                <td><span t-field="move.product_id.product_tmpl_id.master_packing_qty" t-if="move.product_id.product_tmpl_id.master_packing_qty"/> <span t-if="not move.product_id.product_tmpl_id.master_packing_qty">0.0</span></td>
                                <td><span t-field="move.po_receipt_done" t-if="move.po_receipt_done"/> <span t-if="not move.po_receipt_done">0.0</span></td>
                                <td><span t-field="move.po_shipped_qty" t-if="move.po_shipped_qty"/> <span t-if="not move.po_shipped_qty">0.0</span></td>
                                
                                <td>
                                    <span t-esc="total_lc_qty"/> 
                                    <!-- <span t-if="not move.shortage_qty" style="color: white;">-</span> -->
                                </td>
                                <td>
                                    <!-- <t t-if="move.overage_qty and move.overage_qty &gt; 0.0">
                                        <span t-field="move.overage_qty"/>
                                    </t>
                                    <t t-if="not move.overage_qty or move.overage_qty &lt; 0.01">
                                        <span style="color: white;">-</span>
                                    </t> -->
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>

            </div>
            
        </div>

       <div class="footer last-page not-first-page font-inventory-div" style="font-family: KanitLight;margin-top:5mm;vertical-align: bottom;overflow: hidden;">
            <div class="row" style="font-size: 13.64px;">
                <div class="col-6" align="center">

                </div>
                
                <div class="col-6" align="center">
                    <div style="position: relative;">
                        <!-- <div style="position: absolute; top: -7px; width: 100%; text-align: center;">
                            <span t-field="doc.write_uid.name"/>
                        </div> -->
                        <div>ผู้รับสินค้า .......................................................</div>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="hdc_receipt_shortage_overage">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="hdc_receipt_list.hdc_receipt_shortage_overage_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>