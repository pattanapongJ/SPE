<?xml version="1.0"?>
<odoo>
    <record id="view_purchase_inherit_receipt_list" model="ir.ui.view">
        <field name="name">view_purchase_inherit_receipt_list</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase_delivery_invoice']" position="after">
                <page string="RL" name="rl_history" >
                    <field name="rl_history">
                        <tree>
                            <field name="purchase_id" invisible="1"/>
                            <field name="receipt_list_id"/>
                            <field name="product_id"/>
                            <field name="receipt_no"/>
                            <field name="po_no"/>
                            <field name="before_price"/>
                            <field name="price"/>
                            <field name="create_date"/>
                        </tree>
                        <form>
                            <group>
                                <group>
                                    <field name="create_date"/>
                                    <field name="receipt_list_id"/>
                                    <field name="product_id"/>
                                    <field name="receipt_no"/>
                                </group>
                                <group>
                                    <field name="po_no"/>
                                    <field name="before_price"/>
                                    <field name="price"/>
                                </group>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
            <xpath expr="//button[@name='action_create_invoice'][1]" position="before">
                <button name="action_create_vendor_bill_wizard" string="Create Bill" type="object" class="oe_highlight" context="{'create_bill':True}" attrs="{'invisible': ['|', ('state', 'not in', ('purchase', 'done')), ('invoice_status', 'in', ('no', 'invoiced'))]}"/>
            </xpath>
            <xpath expr="//button[@name='action_create_invoice'][1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//button[@name='action_create_invoice'][2]" position="before">
                <button name="action_create_vendor_bill_wizard" string="Create Bill" type="object" context="{'create_bill':True}" attrs="{'invisible': ['|', '|', ('state', 'not in', ('purchase', 'done')), ('invoice_status', 'not in', ('no', 'invoiced')), ('order_line', '=', [])]}"/>
            </xpath>
            <xpath expr="//button[@name='action_create_invoice'][2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
