<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_sale_order_line_report_form" model="ir.ui.view">
        <field name="name">wizard.sale.order.line.report.form</field>
        <field name="model">wizard.sale.order.line.report</field>
        <field name="arch" type="xml">
            <form string="รายงาน">
                <sheet>
                    <group>
                        <label for="from_date" />
                        <div class="o_row">
                            <field name="from_date" />
                            <p class="font-weight-bold">To</p>
                            <field name="to_date" />
                        </div>
                        <field name="company_id" invisible="1" />
                        <field name="order_by_type" widget="radio" />
                        <field name="partner_id" widget="many2many_tags" attrs="{'invisible': [('order_by_type', '!=', 'by_customer')]}" />
                        <field name="product_id" widget="many2many_tags" attrs="{'invisible': [('order_by_type', '!=', 'by_item')]}"  />
                        <field name="user_id" widget="many2many_tags" attrs="{'invisible': [('order_by_type', '!=', 'by_sale_person')]}"  />
                        <!-- <field name="project_name" attrs="{'invisible': [('order_by_type', '!=', 'by_project')]}" /> -->
                    </group>
                    <footer>
                        <!-- <button name="print_pdf" string="Print PDF" type="object"
                            class="btn-primary" /> -->
                        <button name="get_report" string="Print Excel" type="object"
                            class="btn-primary" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="wizard_sale_order_line_action" model="ir.actions.act_window">
        <field name="name">Sale Order Line Report</field>
        <field name="res_model">wizard.sale.order.line.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_report_sale_order_line"
        name="Sale Order Line Report"
        action="wizard_sale_order_line_action"
        parent="sale.menu_sale_report"
        sequence="4"/>

</odoo>