<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">

    <record id="rma_ept_refund" model="rma.reason.ept">
        <field name="name">Refund</field>
        <field name="action">refund</field>
        <field name="is_not_receipt">False</field>
    </record>

    <record id="rma_ept_replace_with_same_product" model="rma.reason.ept">
        <field name="name">Replace With Same Product</field>
        <field name="action">replace_same_product</field>
        <field name="is_not_receipt">False</field>
    </record>

    <record id="rma_ept_replace_with_other_product" model="rma.reason.ept">
        <field name="name">Replace With Other Product</field>
        <field name="action">replace_other_product</field>
        <field name="is_not_receipt">False</field>
    </record>

    <record id="rma_ept_repair" model="rma.reason.ept">
        <field name="name">Repair</field>
        <field name="action">repair</field>
        <field name="is_not_receipt">False</field>
    </record>

    <record id="rma_ept_refund_not_receipt" model="rma.reason.ept">
        <field name="name">Refund Not receipt</field>
        <field name="action">refund</field>
        <field name="is_not_receipt">True</field>
    </record>

    <record id="rma_ept_replace_with_same_product_not_receipt" model="rma.reason.ept">
        <field name="name">Same Product Not receipt</field>
        <field name="action">replace_same_product</field>
        <field name="is_not_receipt">True</field>
    </record>

    <record id="rma_ept_replace_with_other_product_not_receipt" model="rma.reason.ept">
        <field name="name">Other Product Not receipt</field>
        <field name="action">replace_other_product</field>
        <field name="is_not_receipt">True</field>
    </record>

</odoo>
