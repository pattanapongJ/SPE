<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
        <record id="view_order_form_inherit_addon" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.addon</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@name='order_lines']" position="after" >
                    <page string="Components" name="product_components">
                        <field name="order_bom_line" readonly="1">
                            <tree string="Components" editable="bottom" >
                                <field name="product_id"/>
                                <field name="origin_product_id"/>
                                <field name="product_uom_qty"/>
                                <field name="product_uom"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after" >
                    <field name="bom_revision"/>
                </xpath>

            </field>
        </record>

</odoo>
