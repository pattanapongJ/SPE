<?xml version="1.0" ?>
<odoo>
    <!-- BOM revision form view -->
    <record id="mrp_bom_form_view_revision" model="ir.ui.view">
        <field name="name">mrp.bom.form.revision</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="bom_revision" />
                <field name="check_default" />
            </field>
        </field>
    </record>

    <!-- BOM Components view with internal reference -->
    <record id="mrp_bom_form_view_components" model="ir.ui.view">
        <field name="name">mrp.bom.form.components</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='components']//tree//field[@name='product_tmpl_id']" position="after">
                <field name="product_internal_reference" optional="show" string="Internal Reference" />
            </xpath>
        </field>
    </record>

    <!-- BOM tree view with additional product fields -->
    <record id="mrp_bom_tree_view_revision" model="ir.ui.view">
        <field name="name">mrp.bom.tree.revision</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_tree_view" />
        <field name="arch" type="xml">
            <field name="product_tmpl_id" position="after">
                <field name="product_internal_reference" optional="show" />
                <field name="product_name" optional="show" />
            </field>
        </field>
    </record>
</odoo>
