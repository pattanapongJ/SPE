<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="sh_account_invoice_report_search_view" model="ir.ui.view">
        <field name="name">sh.account.invoice.report.search.view</field>
        <field name="model">account.invoice.report</field>
        <field name="inherit_id" ref="account.view_account_invoice_report_search" />
        <field name="arch" type="xml">
            <filter name="company" position="after">
                <filter string="Cost Centers" name="cost_center" domain="[]" context="{'group_by':'sh_cost_center_id'}" />
            </filter>
        </field>
    </record>

</odoo>
