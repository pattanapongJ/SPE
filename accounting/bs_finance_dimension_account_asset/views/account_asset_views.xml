<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_asset_view_form_inherit" model="ir.ui.view">
            <field name="name">account_asset_view_form_inherit</field>
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset_management.account_asset_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[1]" position="inside">
                    <group name="finance_dimension_gp" string="Finance Dimension">

                        <field name="finance_dimension_1_id" attrs="{'readonly':[('state','in',['close','removed'])]}"
                               options="{'no_create_edit': True, 'no_quick_create': True}"/>
                        <field name="finance_dimension_2_id" attrs="{'readonly':[('state','in',['close','removed'])]}"
                               options="{'no_create_edit': True, 'no_quick_create': True}"/>
                        <field name="finance_dimension_3_id" attrs="{'readonly':[('state','in',['close','removed'])]}"
                               options="{'no_create_edit': True, 'no_quick_create': True}"/>

                    </group>
                </xpath>



            </field>
        </record>


    </data>
</odoo>