<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View payment.multi.deduct.group View Tree -->
    <record id="view_payment_multi_deduct_group_tree" model="ir.ui.view">
        <field name="name">view.payment.multi.deduct.group.tree</field>
        <field name="model">payment.multi.deduct.group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- View payment.multi.deduct.group form -->
    <record id="view_payment_multi_deduct_group_form" model="ir.ui.view">
        <field name="name">view.payment.multi.deduct.group.form</field>
        <field name="model">payment.multi.deduct.group</field>
        <field name="arch" type="xml">
            <form string="Payment Multi Deduct Group">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                    <notebook>
                        <page name="account_lines" string="Accounting">
                            <field name="account_lines">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="account_id" options="{'no_quick_create':True,'no_create_edit':True}"/>
                                </tree>
                            </field>
                        </page>
                        <page name="users" string="Users">
                            <field name="user_ids" widget="many2many" options="{'not_delete': True}">
                                <kanban edit="false" quick_create="false" create="false" delete="true">
                                    <field name="id"/>
                                    <field name="name"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click" style="max-width: 200px">
                                                <div class="o_kanban_record_top">
                                                    <img t-att-src="kanban_image('res.users', 'image_128', record.id.raw_value)" class="oe_avatar oe_kanban_avatar_smallbox o_image_40_cover mb0" alt="Avatar"/>
                                                    <div class="o_kanban_record_headings ml8">
                                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Action payment.multi.deduct.group -->
    <record id="action_payment_multi_deduct_group" model="ir.actions.act_window">
        <field name="name">Payment Multi Deduct Group</field>
        <field name="res_model">payment.multi.deduct.group</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Add a new group
            </p>
        </field>
    </record>


    <menuitem id="menu_action_payment_multi_deduct_group" action="action_payment_multi_deduct_group" parent="account.account_account_menu" sequence="200"/>

</odoo>
