<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View bs_downpayment_sale_wz form -->
    <record id="view_bs_downpayment_sale_wz_form" model="ir.ui.view">
        <field name="name">view.bs_downpayment_sale_wz.form</field>
        <field name="model">bs.downpayment.sale.wz</field>
        <field name="arch" type="xml">
            <form string="Downpayment Sale">
                <sheet>
                    <group>
                        <group>
                        <field name="downpayment_id"/>
                        <field name="partner_id"/>
                        <field name="currency_id"/>
                        <field name="remaining_amount"/>
                        
                        </group>
                        <group></group>
                    </group>
                    <field name="line_ids" context="{'default_amount':remaining_amount}">
                        
                            <tree editable="bottom">
                                <field name="order_id" domain="[('partner_id','=',parent.partner_id),('state','in',['sale','done']),('currency_id','=',parent.currency_id)]" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                <field name="amount"/>
                            </tree>
                        </field>
                </sheet>
                <footer>
                    <button name="action_apply" attrs="{'invisible':[('line_ids','=',False)]}" type="object" string="Apply" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action bs_downpayment_sale_wz -->
    <record id="action_bs_downpayment_sale_wz" model="ir.actions.act_window">
        <field name="name">Sale Down Payment Wizard</field>
        <field name="res_model">bs.downpayment.sale.wz</field>
        <field name="view_mode">form</field>
        <field name="binding_model_id" ref="bs_downpayment.model_bs_downpayment_sale_wz"/>
        <field name="target">new</field>
    </record>

</odoo>
