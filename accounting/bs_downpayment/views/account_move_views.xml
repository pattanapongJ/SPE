<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View account.move form -->
    <record id="view_account_move_form" model="ir.ui.view">
        <field name="name">view.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@id='invoice_tab']" position="inside">
                <group>
                    <field name="bs_downpayment_id" invisible="1"/>
                    <group>
                        <div class="col-sm oe_inline oe_right" attrs="{'invisible':['|','|','|',('bs_downpayment_id','!=',False),('bs_downpayment_lines','=',False),('state','!=','draft'),('move_type','not in',['out_invoice','in_invoice'])]}">
                            <button name="action_apply_downpayment" type="object">
                                <i class="fa fa-check-circle text-success mr8"/> Apply Down Payment
                            </button>
                        </div>
                    </group>
                    <group></group>

                    <group>

                        <field name="bs_downpayment_lines" nolabel="1" widget="one2many" readonly="0" attrs="{'invisible':['|','|',('bs_downpayment_lines','=',False),('bs_downpayment_id','!=',False),('move_type','not in',['out_invoice','in_invoice'])]}">
                            <tree editable="bottom" create="0" delete="0" default_order="payment_date asc">
                                <field name="payment_date"/>
                                <field name="downpayment_id" readonly="1" force_save="1"/>
                                <field name="deduct_amount"/>
                                <field name="amount" invisible="1"/>
                                <field name="balance"/>
                            </tree>
                        </field>
                    </group>
                    <group/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>