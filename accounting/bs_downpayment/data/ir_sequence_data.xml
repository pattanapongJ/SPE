<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Sequences for Customer Down Payment -->
        <record id="seq_bs_customer_downpayment" model="ir.sequence">
            <field name="name">Customer Down Payment</field>
            <field name="code">bs.customer.downpayment</field>
            <field name="prefix">CDP%(year)s%(month)s</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Sequences for Vendor Down Payment -->
        <record id="seq_bs_vendor_downpayment" model="ir.sequence">
            <field name="name">Vendor Down Payment</field>
            <field name="code">bs.vendor.downpayment</field>
            <field name="prefix">VDP%(year)s%(month)s</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>

    </data>
</odoo>
