<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- View res.currency tree -->
    <record id="view_res_currency_tree" model="ir.ui.view">
        <field name="name">view.res.currency.tree</field>
        <field name="model">res.currency</field>
        <field name="inherit_id" ref="base.view_currency_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='active']" position="after">
                <field name="show_in_purchase" widget="boolean_toggle"/>
                <field name="show_in_sale" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>

</odoo>