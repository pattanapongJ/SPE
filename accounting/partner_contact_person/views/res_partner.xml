<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_partner_simple_form_contact_person" model="ir.ui.view">
        <field name="name">Add contact person on partner</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_simple_form" />
        <field name="arch" type="xml">
            <field name="function" position="after">
                <field name="contact_person" placeholder="Contact Person Name..." />
            </field>
        </field>
    </record>
    <record id="view_partner_form_contact_person" model="ir.ui.view">
        <field name="name">Add contact person on partner</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <field name="function" position="after">
                <field name="contact_person" placeholder="Contact Person Name..."/>
            </field>
            <xpath
                expr="//field[@name='child_ids']/form//field[@name='mobile']"
                position="after"
            >
                <field name="contact_person" placeholder="Contact Person Name..."/>
            </xpath>
        </field>
    </record>
</odoo>
