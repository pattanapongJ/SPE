<odoo>
    <data>

        <!-- Paper format -->
        <record id="paperformat_withholding_tax" model="report.paperformat">
            <field name="name">Withholding tax form</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">83</field>
            <field name="margin_bottom">45</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_spacing">82</field>
            <field name="dpi">90</field>
        </record>

        <!-- Report action -->
        <record id="withholding_tax_pdf_report" model="ir.actions.report">
            <field name="name">WT Certificates Form</field>
            <field name="model">withholding.tax.cert</field>
            <field name="report_name">bs_withholding_tax_certificarte_form.report_bs_withholding_tax_certificarte_form</field>
            <field name="report_file">bs_withholding_tax_certificarte_form.report_bs_withholding_tax_certificarte_form</field>
            <field name="report_type">qweb-pdf</field>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="paperformat_id" ref="paperformat_withholding_tax"/>
            <field name="binding_model_id" ref="l10n_th_withholding_tax_cert_form.model_withholding_tax_cert"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>