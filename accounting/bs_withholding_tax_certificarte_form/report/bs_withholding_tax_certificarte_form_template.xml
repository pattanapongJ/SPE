<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="request_layout">
	    <style>
                @font-face {
                font-family: 'THSarabunPSK';
                src: url('/bs_withholding_tax_certificarte_form/static/src/fonts/THSarabunPSK.ttf') format('truetype');
                font-style: normal;
                }
        </style>
		<t t-if="not o" t-set="o" t-value="doc" />
		<t t-if="not company">
			<!-- Multicompany -->
			<t t-if="company_id">
				<t t-set="company" t-value="company_id" />
			</t>
			<t t-elif="o and 'company_id' in o and o.company_id.sudo()">
				<t t-set="company" t-value="o.company_id.sudo()" />
			</t>
			<t t-else="else">
				<t t-set="company" t-value="res_company" />
			</t>
		</t>
		<div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
			<div class="row pt-2" style="font-size: 11px;">
				<div class="col-12 p-0 m-0 pt-1 pl-1">
					<div class="text-left">
						<span style="font-weight: bold;">
							ฉบับที่ 1
						</span>
						<span>
							(สำหรับผู้ถูกหักภาษี ณ ที่จ่าย ใช้แนบพร้อมกับแบบแสดงรายการภาษี)
						</span>
					</div>
					<div class="text-left">
						<span style="font-weight: bold;">
							ฉบับที่ 2
						</span>
						<span>
							(สำหรับผู้ถูกหักภาษี ณ ที่จ่าย เก็บไว้เป็นหลักฐาน)
						</span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-8 p-0 m-0">
					<div class="text-right">
						<span style="font-weight: bold; font-size: 21px;">
							หนังสือรับรองการหักภาษี ณ ที่จ่าย
						</span>
					</div>
