<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_report_template">
<!--        <style type="text/css">-->
<!--&lt;!&ndash;                td, th {&ndash;&gt;-->
<!--&lt;!&ndash;                    border: 1px solid black;&ndash;&gt;-->
<!--&lt;!&ndash;                }&ndash;&gt;-->
<!--        </style>-->
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="header" stvle="font-family: KanitLight;">
                         <div class="row">
                            <div class="col-3 m-0 text-left" stvle="right: 0px;">
                                 <!-- <img t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)" style="width:150px; height: 120px;"/> -->
                            </div>
                             <div class="col-7 text-left pt-2">
                                 <!-- <span style="font-size: 18.67px; font-weight: bold;" t-field="o.company_id.name"/> -->
                            </div>
                             <div class="col-3 text-left pt-5" style="font-size: 16px">
                                  <div class="row">
                                      <t t-set="check_iso" t-value="'report_purchase_requests_products.product_report_template'"/>
                                      <p class="col-3 mb-0">
                                        ISO:
                                      </p>
                                      <p class="col-8 mb-0">
                                          <span t-esc="o.check_iso_name(check_iso)"/>
                                      </p>
                                  </div>
                                 <div class="row">
                                      <p class="col-3 mb-0">
                                        เลขที่:
                                      </p>
                                      <p class="col-8 mb-0">
                                          <span t-field="o.name"/>
                                      </p>
                                </div>
                                 <div class="row">
                                      <p class="col-3 mb-0">
                                        วันที่:
                                      </p>
                                      <p class="col-8 mb-0">
<!--                                          <span>..........</span>-->
                                           <span t-field="o.line_ids[0].date_required"/>
                                      </p>
                                </div>
                            </div>
                         </div>
                    </div>
                    <div class="page mb-0" stvle="font-family: KanitLight;">
                         <div class="row m-0" style="font-size: 16px" >
                              <div class="col-2 text-left">
                                  <span>ประเภทการสั่งซื้อ</span>
                              </div>
                          </div>
                         <div class="row pt-1 m-0" style="font-size: 16px">
                                  <div class="col-1 text-left">
                                  </div>
                                    <div class="col-2 text-left">
                                      <span>1.1. วัตถุดิบ</span>
                                  </div>
                                    <div class="col-2 text-left">
                                      <span>1.2. ซ่อมแซม</span>
                                  </div>
                                    <div class="col-2 text-left">
                                      <span>1.3. วัสดุสิ้นเปลือง</span>
                                  </div>
                                    <div class="col-2 text-left">
                                      <span>1.4. บริการ</span>
                                  </div>
                                    <div class="col-2 text-left">
                                      <span>1.5. อะไหล่</span>
                                  </div>
                          </div>
                         <div class="row pt-2 pb-1 m-0" style="font-size: 16px">
                                  <div class="col-1 text-left">
                                  </div>
                                <div class="col-2 text-left">
                                      <span>1.6. ซื้อใหม่</span>
                                  </div>
                                    <div class="col-2 text-left">
                                      <span>1.7. รายการปรับปรุง</span>
                                  </div>
                                <div class="col-2 text-left">
                                      <span>1.8. ต่อเติม</span>
                                  </div>
                                <div class="col-2 text-left">
                                      <span>1.9. สร้าง</span>
                                  </div>
                          </div>
                         <div class="row p-3 m-0" style="font-size: 18.67px" >
                              <div class="col-12 pt-2 text-center">
                                  <b>ใบขอซื้อ/ใบนำส่ง</b>
                              </div>
                          </div>
                         <div class="row border-dark pt-1 pb-5" style="font-size: 14px">
                           <div class="col-12 pt-3">
                               <table class="table table-bordered">
                                  <thead class="text-center" style="background-color: #d9d9d9">
                                    <tr>
                                        <th rowspan="2"  scope="col" style="padding-bottom: 30px; border: 1px solid black">ลำดับ</th>
                                        <th rowspan="2"  scope="col" style="padding-bottom: 30px; border: 1px solid black">รหัส</th>
                                        <th rowspan="2"  scope="col" style="padding-bottom: 30px; border: 1px solid black">รายการ</th>
                                        <th rowspan="2"  scope="col" style="padding-bottom: 30px; border: 1px solid black">จำนวน</th>
                                        <th rowspan="2"  scope="col" style="padding-bottom: 30px; border: 1px solid black">ใช้งาน</th>
                                        <th rowspan="2" scope="col" style="padding-bottom: 30px; border: 1px solid black">ประเภทการซื้อ</th>
                                        <th colspan="2" scope="col" style="padding-bottom: 10px; border: 1px solid black">ประเภทค่าใช้จ่าย</th>
                                        <th rowspan="2" scope="col" style="padding-bottom: 30px; border: 1px solid black">ราคา/หน่วย</th>
                                        <th rowspan="2" scope="col" style="padding-bottom: 30px; border: 1px solid black">กำหนดวันรับสินค้า</th>
                                        <th rowspan="2" scope="col" style="padding-bottom: 30px; border: 1px solid black">หมายเหตุ</th>
                                    </tr>
                                    <tr>
                                      <th class="m-0" style="border: 1px solid black">ทางตรง</th>
                                      <th class="m-0" style="border: 1px solid black">ทางอ้อม</th>
                                    </tr>
                                  </thead>
                                  <tbody>

                                      <t t-foreach="o.line_ids" t-as="line">
                                          <tr>
                                            <th scope="row" style="border: 1px solid black">
                                                <span t-esc="line_index + 1" />
                                            </th>
                                            <td style="border: 1px solid black">

                                            </td>
                                            <td style="border: 1px solid black">
                                                 <span t-field="line.name"/>
                                            </td>
                                            <td class="text-center" style="border: 1px solid black">
                                                 <span t-field="line.product_qty"/>
                                                 <span t-field="line.product_uom_id"/>
                                            </td>
                                            <td class="text-center" style="border: 1px solid black">
                                            </td>
                                            <td class="text-center" style="border: 1px solid black">
                                            </td>
                                            <td class="text-center" style="border: 1px solid black">
                                            </td>
                                            <td class="text-center" style="border: 1px solid black">
                                            </td>
                                              <td class="text-center" style="border: 1px solid black">
                                              </td>
                                              <td class="text-center" style="border: 1px solid black">
                                              </td>
                                              <td class="text-center" style="border: 1px solid black">
                                              </td>
                                          </tr>
                                      </t>

                                  </tbody>
                                </table>
                           </div>
                        </div>
                         <div class="row p-3 m-0" style="font-size: 14px" >
                              <div class="col-4">
                                  <div class="row">
                                      <div class="col-3 pt-5">
                                        <span>ผู้สั่งซื้อ:</span>
                                      </div>
                                      <div class="col-7 m-0 p-0">
                                        <t t-if="o.requested_by.employee_id.signature">
                                          <img t-att-src="'data:image/png;base64,%s' % to_text(o.requested_by.employee_id.signature)" style="width:150px; height: 50px;"/>
                                        </t>
                                        <t t-else="">
                                          <div style="height: 40px;">
                                          </div>
                                          <div style="height: 8px;">
                                            <span t-field="o.requested_by.name"/>
                                          </div>
                                        </t>
                                        <span>................................ </span>
                                      </div>
                                    </div>
                              </div>
                              <div class="col-4 pt-5">
                                    <span>
                                       ผู้อนุมัติ:
                                   </span>
                                   <span>
                                      ................................
                                   </span>
                              </div>
                              <div class="col-4 pt-5">
                                    <span>
                                       ผู้รับเอกสาร:
                                   </span>
                                   <span>
                                      ................................
                                   </span>
                              </div>
                          </div>
                         <div class="row p-3 m-0" style="font-size: 12px">
                            <div class="col-12 pt-2 text-left">
                                  <span>หมายเหตุ : หากรายการใดที่ขอซื้อไม่มีของตามรายการกรุณาแจ้งที่ผู้ขอซื้อด้วยทุกครั้ง</span>
                              </div>
                         </div>
                    </div>
            </t>
            </t>
        </t>
    </template>
</odoo>
