<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
            <record id="bi_view_invoice_form_exchange_rate_field_add_inherit" model="ir.ui.view">
            <field name="name">bi.view.invoice.form.exchange.rate.field.add.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="bi_manual_currency_exchange_rate.bi_view_invoice_form_exchange_rate_field_add_inherit"/>
            <field name="arch" type="xml">

                <field name="manual_currency_rate_active" position="replace">
                    <field name="same_currency" invisible="1"/>
                    <field name="manual_currency_rate_active" attrs="{'readonly': [('state','in',['posted','cancel'])],'invisible':[('same_currency','=',True)]}"/>
                </field>

                <field name="manual_currency_rate" position="attributes">
                    <attribute name="digits">[12,12]</attribute>
                </field>

                  <field name="manual_currency_rate" position="before">
                        <field name="manual_currency_inverse_rate" digits="[12,12]" attrs="{'invisible': [('manual_currency_rate_active', '=', False)],'required':[('manual_currency_rate_active', '=', True)],'readonly': [('state','in',['posted','cancel'])]}"/>
                  </field>
            </field>
            </record>
    </data>
</odoo>