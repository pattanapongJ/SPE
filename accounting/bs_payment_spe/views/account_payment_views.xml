<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- View account.payment form -->
    <record id="view_account_payment_form" model="ir.ui.view">
        <field name="name">view.account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group2']" position="inside">
                <field name="book_no" attrs="{'invisible':[('partner_type','=','supplier')]}"/>
                <field name="no" attrs="{'invisible':[('partner_type','=','supplier')]}"/>
                <field name="messenger_name" attrs="{'invisible':[('partner_type','=','supplier')]}" options="{'no_create':True}"/>
                <field name="commission_date" attrs="{'invisible':[('partner_type','=','supplier')]}"/>
            </xpath>
            <xpath expr="//field[@name='ref']" position="after">
                <field name="internal_note" attrs="{'invisible':[('partner_type','=','supplier')]}"/>
                <field name="document_ref"/>
                <field name="pdc_ref"/>
            </xpath>
        </field>
    </record>
    <record id="view_account_payment_tree" model="ir.ui.view">
        <field name="name">view.account.payment.tree</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="saleperson_id"/>
            </field>
        </field>
    </record>
</odoo>