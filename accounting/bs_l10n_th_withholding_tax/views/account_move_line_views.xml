<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_move_form_inherit_wt_filter" model="ir.ui.view">
    <field name="name">account.move.form.wt.filter</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet" position="inside">
        <field name="wt_document_type" invisible="1"/>
      </xpath>
      <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='wt_tax_id']" position="attributes">
        <attribute name="domain">
          [('type','=?', parent.wt_document_type),('company_id','=', parent.company_id)]
        </attribute>
      </xpath>
    </field>
  </record>
</odoo>
