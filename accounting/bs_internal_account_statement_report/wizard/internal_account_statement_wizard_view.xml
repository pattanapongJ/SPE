<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="internal_account_statement_wizard_view" model="ir.ui.view">
        <field name="name">internal.account.statement.wizard.view</field>
        <field name="model">internal.acc.stmt.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Internal Account Statement">
                <group>
                    <group>
                        <field name="company_id"/>
                        <field name="partner_id"/>
                        <field name="sale_team_id"/>
                    </group>
                    <group>
                        <field name="inv_start_date"/>
                        <field name="inv_end_date"/>
                    </group>
                </group>
                <footer>
                    <button
                        name="button_export_html"
                        string="View"
                        type="object"
                        default_focus="1"
                        class="oe_highlight"
                    />
                    or
                    <button
                        name="button_export_pdf"
                        string="Export PDF"
                        type="object"
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_acc_statement_report_wizard" model="ir.actions.act_window">
        <field name="name">Internal Account Statement</field>
        <field name="res_model">internal.acc.stmt.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="internal_account_statement_wizard_view" />
        <field name="target">new</field>
    </record>

</odoo>
