<odoo>
    <record id="purchase_request_form_add_field" model="ir.ui.view">
        <field name="name">purchase.request.form.add.fields</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="arch" type="xml">
            <field name="group_id" position="after">
                <field name="currency_id" options="{'no_create': True, 'no_open': True}"/>
            </field>

            <field name="purchase_state" position="after">
                <field name="purchase_request_line_note"/>
            </field>
            
            <group name="specifications" position="after">
                <separator string="Notes" />
                <newline />
                <field name="purchase_request_line_note" placeholder="Note..." nolabel="1"/>
            </group>
        </field>
    </record>


    <record id="purchase_request_line_form_add_field" model="ir.ui.view">
        <field name="name">purchase.request.line.form.add.fields</field>
        <field name="model">purchase.request.line</field>
        <field name="inherit_id" ref="purchase_request.purchase_request_line_form"/>
        <field name="arch" type="xml">
            <group name="specifications" position="after">
                <separator string="Notes" />
                <newline />
                <field name="purchase_request_line_note" placeholder="Note..." nolabel="1"/>
            </group>
        </field>
    </record>
</odoo>