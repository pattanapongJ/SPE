<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- View account.journal form -->
    <record id="view_account_journal_form" model="ir.ui.view">
        <field name="name">view.account.journal.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="sh_pdc.view_account_journal_form"/>
        <field name="arch" type="xml">
            <field name="payment_debit_account_id" position="after">
                <field name="pdc_receipt_account_id"
                       options="{'no_create_edit': True, 'no_quick_create': True}"
                                               attrs="{'required': [('id', '!=', False),('type', 'in', ('bank', 'cash'))], 'invisible': [('type', 'not in', ('bank', 'cash'))]}"
                                               groups="account.group_account_readonly"/>
            </field>

             <field name="payment_credit_account_id" position="after">
                <field name="pdc_payment_account_id"
                       options="{'no_create_edit': True, 'no_quick_create': True}"
                                               attrs="{'required': [('id', '!=', False),('type', 'in', ('bank', 'cash'))], 'invisible': [('type', 'not in', ('bank', 'cash'))]}"
                                               groups="account.group_account_readonly"/>
            </field>
        </field>
    </record>

</odoo>