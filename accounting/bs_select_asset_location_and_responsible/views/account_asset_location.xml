<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="account_asset_location_view_form" model="ir.ui.view">
        <field name="name">account.asset.location.form</field>
        <field name="model">account.asset.location</field>
        <field name="arch" type="xml">
            <form string="Asset Location">
                <group>
                    <group>
                        <field name="name" />
                        <field name="code" />
                        <!-- <field name="parent_id" />
                        <field
                            name="company_id"
                            widget="selection"
                            groups="base.group_multi_company"
                        /> -->
                    </group>
                </group>
            </form>
        </field>
    </record>
    <record id="account_asset_location_view_tree" model="ir.ui.view">
        <field name="name">account.asset.location.tree</field>
        <field name="model">account.asset.location</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" />
                <field name="code" optional="show" />
                <!-- <field name="parent_id" />
                <field name="company_id" groups="base.group_multi_company" /> -->
            </tree>
        </field>
    </record>
    <record id="account_asset_location_view_search" model="ir.ui.view">
        <field name="name">account.asset.location.search</field>
        <field name="model">account.asset.location</field>
        <field name="arch" type="xml">
            <search string="Search Asset Location">
                <field name="name" string="Asset Location" />
                <field name="code" />
                <!-- <field name="parent_id" /> -->
            </search>
        </field>
    </record>
    <record id="account_asset_location_action" model="ir.actions.act_window">
        <field name="name">Asset Locations</field>
        <field name="res_model">account.asset.location</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="account_asset_location_menu"
        action="account_asset_location_action"
        parent="account_asset_management.menu_finance_config_assets"/>
</odoo>
