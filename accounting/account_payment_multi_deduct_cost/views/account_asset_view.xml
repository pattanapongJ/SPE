<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_asset_cost_view_form" model="ir.ui.view">
        <field name="name">account.asset.cost.center</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset_management.account_asset_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='asset_holder']" position="after">
                <field name="sh_cost_center_id" groups="sh_cost_center.sh_group_cost_center"/>
            </xpath>
        </field>
    </record>

</odoo>
