<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- View account.payment form -->
    <record id="view_account_payment_form" model="ir.ui.view">
        <field name="name">view.account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="button_open_partial_gain_loss_entries" type="object" class="oe_stat_button" icon="fa-bars" attrs="{'invisible': [('partial_gain_loss_entries_count','=', 0)]}">
                    <field name="partial_gain_loss_entries_count"/>
                    Partial Exchange Gain Loss Entries
                </button>
            </xpath>
        </field>
    </record>

</odoo>