<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View account.move form -->
    <record id="view_account_move_form" model="ir.ui.view">
        <field name="name">view.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="deposit_journal_entries_count" invisible="1"/>
                <button name="open_deposit_journal_entries" class="oe_stat_button" icon="fa-bars" type="object" attrs="{'invisible': [('deposit_journal_entries_count','=',0)]}" string="Deposit Journal Entries">
                </button>
            </xpath>


            <xpath expr="//group[@id='header_right_group']" position="inside">
                <field name="deposit_exchange_difference_move_id" options="{'no_create': True}" readonly="1" attrs="{'invisible':['|',('deposit_exchange_difference_move_id','=',False),('move_type','not in',['in_invoice', 'out_invoice'])]}"/>
            </xpath>
        </field>
    </record>

</odoo>