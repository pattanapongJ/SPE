<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">purchase_order_form_inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="bs_finance_dimension.purchase_order_form_inherit"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@name='finance_dimension_gp']/field[@name='finance_dimension_3_id']"
                       position="after">
                    <field name="finance_dimension_4_id"
                           options="{'no_create_edit': True, 'no_quick_create': True}"/>
                    <field name="finance_dimension_5_id"
                           options="{'no_create_edit': True, 'no_quick_create': True}"/>
                    <field name="finance_dimension_6_id"
                           options="{'no_create_edit': True, 'no_quick_create': True}"/>
                    <field name="finance_dimension_7_id"
                           options="{'no_create_edit': True, 'no_quick_create': True}"/>
                    <field name="finance_dimension_8_id"
                           options="{'no_create_edit': True, 'no_quick_create': True}"/>
                    <field name="finance_dimension_9_id"
                           options="{'no_create_edit': True, 'no_quick_create': True}"/>
                    <field name="finance_dimension_10_id"
                           options="{'no_create_edit': True, 'no_quick_create': True}"/> 
                </xpath>




                <xpath expr="//field[@name='order_line']/tree/field[@name='finance_dimension_1_id']" position="replace">
                     <field name="need_finance_dimension_1" invisible="1"/>
                     <field name="finance_dimension_1_id" options="{'no_create_edit': True, 'no_quick_create': True}"
                            attrs="{'required':[('need_finance_dimension_1','=',True)]}"
                            optional="hide"/>
               </xpath>
               <xpath expr="//field[@name='order_line']/tree/field[@name='finance_dimension_2_id']" position="replace">
                     <field name="need_finance_dimension_2" invisible="1"/>
                     <field name="finance_dimension_2_id" options="{'no_create_edit': True, 'no_quick_create': True}"
                            attrs="{'required':[('need_finance_dimension_2','=',True)]}"
                            optional="hide"/>
               </xpath>
               <xpath expr="//field[@name='order_line']/tree/field[@name='finance_dimension_3_id']" position="replace">
                     <field name="need_finance_dimension_3" invisible="1"/>
                     <field name="finance_dimension_3_id" options="{'no_create_edit': True, 'no_quick_create': True}"
                            attrs="{'required':[('need_finance_dimension_3','=',True)]}"
                            optional="hide"/>
               </xpath>


                <xpath expr="//field[@name='order_line']/tree/field[@name='finance_dimension_3_id']" position="after">
                     <field name="need_finance_dimension_4" invisible="1"/>
                     <field name="need_finance_dimension_5" invisible="1"/>
                     <field name="need_finance_dimension_6" invisible="1"/>
                     <field name="need_finance_dimension_7" invisible="1"/>
                     <field name="need_finance_dimension_8" invisible="1"/>
                     <field name="need_finance_dimension_9" invisible="1"/>
                     <field name="need_finance_dimension_10" invisible="1"/>
 
                     <field name="finance_dimension_4_id" options="{'no_create_edit': True, 'no_quick_create': True}"
                            attrs="{'required':[('need_finance_dimension_4','=',True)]}"
                            optional="hide"/>
                     <field name="finance_dimension_5_id" options="{'no_create_edit': True, 'no_quick_create': True}"
                            attrs="{'required':[('need_finance_dimension_5','=',True)]}"
                            optional="hide"/>
                     <field name="finance_dimension_6_id" options="{'no_create_edit': True, 'no_quick_create': True}"
                            attrs="{'required':[('need_finance_dimension_6','=',True)]}"
                            optional="hide"/>
                     <field name="finance_dimension_7_id" options="{'no_create_edit': True, 'no_quick_create': True}"
                            attrs="{'required':[('need_finance_dimension_7','=',True)]}"
                            optional="hide"/>
                     <field name="finance_dimension_8_id" options="{'no_create_edit': True, 'no_quick_create': True}"
                            attrs="{'required':[('need_finance_dimension_8','=',True)]}"
                            optional="hide"/>
                     <field name="finance_dimension_9_id" options="{'no_create_edit': True, 'no_quick_create': True}"
                            attrs="{'required':[('need_finance_dimension_9','=',True)]}"
                            optional="hide"/>
                     <field name="finance_dimension_10_id" options="{'no_create_edit': True, 'no_quick_create': True}"
                            attrs="{'required':[('need_finance_dimension_10','=',True)]}"
                            optional="hide"/>
                </xpath>

                <xpath expr="//field[@name='order_line']/form/group/group[2]/field[@name='finance_dimension_3_id']" position="after">
                     <field name="finance_dimension_4_id"
                           options="{'no_create_edit': True, 'no_quick_create': True}"/>
                    <field name="finance_dimension_5_id"
                           options="{'no_create_edit': True, 'no_quick_create': True}"/>
                    <field name="finance_dimension_6_id"
                           options="{'no_create_edit': True, 'no_quick_create': True}"/>
                    <field name="finance_dimension_7_id"
                           options="{'no_create_edit': True, 'no_quick_create': True}"/>
                    <field name="finance_dimension_8_id"
                           options="{'no_create_edit': True, 'no_quick_create': True}"/>
                    <field name="finance_dimension_9_id"
                           options="{'no_create_edit': True, 'no_quick_create': True}"/>
                    <field name="finance_dimension_10_id"
                           options="{'no_create_edit': True, 'no_quick_create': True}"/>
                </xpath>



            </field>
        </record>


    </data>
</odoo>