<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view_request" model="ir.ui.view">
        <field name="name">product.template.common.form.request</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
           <xpath expr="//group[@name='purchase']/group[@name='bill']" position="after">
                <group>
                    <field name="remark" string="Remark"/>
                </group>
           </xpath>

        </field>
    </record>

</odoo>
