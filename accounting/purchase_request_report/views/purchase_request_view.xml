<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_request_form_view_inherit" model="ir.ui.view">
        <field name="name">purchase.request.form.inherit</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="arch" type="xml">
           <xpath expr="//sheet/group" position="inside">
                <group>
                    <field name="for_customer" string="For Customer"/>
                </group>
           </xpath>
            <xpath expr="//group[@class='oe_subtotal_footer oe_right']" position="before">
                <group>
                    <field name="remark" />
                </group>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='estimated_cost']" position="after">
                <field name="remark" readonly="0" force_save="1" optional="hide" />
            </xpath>

            <group name="specifications" position="after">
                <separator string="Remark" />
                <newline />
                <field name="remark" readonly="0" force_save="1" nolabel="1"/>
            </group>

        </field>
    </record>

</odoo>
