<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paperformat_purchase_request_report" model="report.paperformat">
        <field name="name">purchase request</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">36</field>
        <field name="margin_bottom">53</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_spacing">32</field>
        <field name="dpi">90</field>
    </record>

        <record id="action_report_purchase_request" model="ir.actions.report">
            <field name="name">Purchase Requests</field>
            <field name="model">purchase.request</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">purchase_request_report.report_purchase_request_template</field>
            <field name="report_file">purchase_request_report.report_purchase_request_template</field>
<!--            <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>-->
            <field name="binding_model_id" ref="purchase_request.model_purchase_request"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_purchase_request_report"/>
        </record>
    </data>
</odoo>
