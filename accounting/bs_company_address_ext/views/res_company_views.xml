<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_res_company_form" model="ir.ui.view">
        <field name="name">view.res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[hasclass('oe_title')]/h1" position="after">
                <h2>
                    <field name="name_en" placeholder="Company Name (EN)"/>
                </h2>
            </xpath>

            <xpath expr="//label[@for='street']" position="attributes">
                <attribute name="string">Address (TH)</attribute>
            </xpath>


            <xpath expr="//div[hasclass('o_address_format')]" position="after">
                <label for="street_en" string="Address (EN)"/>
                <div class="o_address_format">
                    <field name="street_en" placeholder="Street..." class="o_address_street"/>
                    <field name="street2_en" placeholder="Street 2..." class="o_address_street"/>
                    <field name="city_en" placeholder="City" class="o_address_city"/>
                    <field name="state_id_en" class="o_address_zip" placeholder="State" style="margin-right:8px;"/>
                    <field name="zip_en" placeholder="ZIP" class="o_address_zip"/>
                    <field name="country_id_en" placeholder="Country" class="o_address_country"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>