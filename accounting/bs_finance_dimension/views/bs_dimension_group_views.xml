<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View bs.dimension.group View Tree -->
    <record id="view_bs_dimension_group_tree" model="ir.ui.view">
        <field name="name">view.bs.dimension.group.tree</field>
        <field name="model">bs.dimension.group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- View bs.dimension.group form -->
    <record id="view_bs_dimension_group_form" model="ir.ui.view">
        <field name="name">view.bs.dimension.group.form</field>
        <field name="model">bs.dimension.group</field>
        <field name="arch" type="xml">
            <form string="Bs Dimension Group">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Dimension Name..."/>
                        </h1>
                    </div>
                    <notebook>
                        <page name="finance_dimension" string="Finance Dimension">
                            <field name="finance_dimension_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="company_id" options="{'no_create':True}"/>
                                </tree>
                            </field>

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


    <!-- Action bs.dimension.group -->
    <record id="action_bs_dimension_group" model="ir.actions.act_window">
        <field name="name">Bs Dimension Group</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bs.dimension.group</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{'create': 0, 'delete': 0,'duplicate':0}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Bs Dimension Group.
            </p>
        </field>
    </record>

</odoo>
