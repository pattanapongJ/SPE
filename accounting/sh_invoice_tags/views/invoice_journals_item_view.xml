<?xml version="1.0"?>
<odoo>
    <!-- Invoice Journal Items view -->
    <record id="sh_invoice_tags_inherit_journal_item_form" model="ir.ui.view">
        <field name="name">account.invoice.journal.item.form</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"></field>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="invoice_tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" />
            </field>
        </field>
    </record>

    <!-- Invoice Journals Entries Tree view -->
    <record id="sh_invoice_tags_inherit_journal_item_tree" model="ir.ui.view">
        <field name="name">account.invoice.journal.item.tree</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"></field>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="invoice_tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" optional="show" />
            </field>
        </field>
    </record>

    <!-- Invoice Journals Entries Kanban view -->
    <record id="sh_invoice_tags_inherit_journal_item_kanban" model="ir.ui.view">
        <field name="name">account.invoice.journal.item.kanban</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.account_move_line_view_kanban"></field>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_kanban_global_click')]//div[hasclass('row')]" position="after">
                <field name="invoice_tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" />
            </xpath>
        </field>
    </record>

    <!-- Invoice Journals Entries Search view -->
    <record id="view_account_move_line_search_with_tag" model="ir.ui.view">
        <field name="name">account.move.line.search</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_account_move_line_filter" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="invoice_tag_ids" string="Tag" />
            </field>
        </field>
    </record>
</odoo>
