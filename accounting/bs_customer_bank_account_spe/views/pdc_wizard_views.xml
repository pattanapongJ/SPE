<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- View pdc.wizard form -->
    <record id="view_pdc_wizard_form" model="ir.ui.view">
        <field name="name">view.pdc.wizard.form</field>
        <field name="model">pdc.wizard</field>
        <field name="inherit_id" ref="sh_pdc.sh_pdc_payment_form_view"/>
        <field name="arch" type="xml">
           <xpath expr="//field[@name='partner_id']" position="after">
                <field name="customer_bank_id" domain="[('partner_id','=',partner_id)]" attrs="{'invisible':[('payment_type','=','send_money')]}"
                       options="{'no_create_edit': True,'no_create': True, 'no_quick_create': True}"/>

            </xpath>
        </field>
    </record>

</odoo>