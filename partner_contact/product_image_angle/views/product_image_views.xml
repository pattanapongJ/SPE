<odoo>
  <record id="view_product_template_form_inherit_images" model="ir.ui.view">
    <field name="name">product.template.form.inherit.multi.image</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view" />
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook" position="inside">
        <page string="Product Images">
          <field name="image_angle_ids">
            <tree editable="bottom">
              <field name="sequence"/>
<!--              <field name="angle"/>-->
              <field name="name"/>
              <field name="image_1920" widget="image" options="{'preview_image': 'image_1920'}" class="oe_avatar"/>
              <field name="note"/>
            </tree>
          </field>
        </page>
      </xpath>
    </field>
  </record>
</odoo>